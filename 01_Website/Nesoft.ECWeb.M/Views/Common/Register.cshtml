        function fnRegister(ele) {
            var loading = new UI.loading();
            var data = {
                CustomerID: $.trim($("#txtCustomerID").val()),
                Password: $.trim($("#txtPassword").val()),
                RePassword: $.trim($("#txtRePassword").val())
            };
            if (data.CustomerID == "") {
                UI.alert("请填写账号");
                return;
            }
            if (data.Password == "") {
                UI.alert("请填写密码");
                return;
            }
            if (data.RePassword == "") {
                UI.alert("请填写确认密码");
                return;
            }
            if (data.Password.length < 6) {
                UI.alert("密码长度最少为6位");
                return;
            }
            var level = 0;
            var reg = new RegExp("[0-9]", "gi");
            if (reg.test(data.Password)) {
                level += 1;
            }
            reg = new RegExp("[a-z]", "gi");
            if (reg.test(data.Password)) {
                level += 1;
            }
            reg = new RegExp("[^0-9a-z]", "gi");
            if (reg.test(data.Password)) {
                level += 1;
            }
            if (level <= 1) {
                UI.alert("注册密码必须由字母,数字和特殊符号至少任意两种组成");
                return;
            }
            if (data.Password != data.RePassword) {
                UI.alert("两次输入的密码不一致,请重新输入");
                return;
            }
            if ($(".chkbox").attr("checked") == false) {
                UI.alert("请同意注册协议");
                return;
            }
            $.ajax({
                url: '@BuildUrlCA("Common","AjaxRegister")',
                data: data,
                dataType: "json",
                type: "post",
                beforeSend: function () {
                    $(ele).hide().next().show();
                    loading.show();
                },
                complete: function () {
                    $(ele).show().next().hide();
                    loading.hide();
                },
                success: function (res) {
                    if (res.Success) {
                        UI.alert("注册成功");
                        window.location.href = '@BuildUrl("CategoryAll")';
                    }
                    else {
                        UI.alert(res.Message);
                    }
                }
            });
