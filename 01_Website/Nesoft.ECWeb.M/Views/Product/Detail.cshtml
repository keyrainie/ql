                    {
                        <div class="proAttrSection">
                            <div class="giftSec">
                                <ul>
                                    <li>
                                        @if (promotionInfo != null && promotionInfo.SaleGiftList != null && promotionInfo.SaleGiftList.Count > 0)
                                        {
                                            <span class="subTit">[赠品]</span>
                                        }

