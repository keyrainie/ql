                        if (vSaleGiftInfo != null && vSaleGiftInfo.Count > 0)
                        {
                            foreach (SaleGiftInfo item in vSaleGiftInfo)
                            {
                                if (item.GiftItemList != null && item.GiftItemList.Count > 0)
                                {

                                    foreach (GiftItem gift in item.GiftItemList)
