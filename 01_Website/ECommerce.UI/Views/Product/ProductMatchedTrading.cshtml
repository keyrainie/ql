    //consuQueryInfo.ProductGroupSysNo = basicInfo.ProductGroupSysNo;
    //consuQueryInfo.PagingInfo = new ECommerce.Entity.PageInfo() { PageIndex = pageIndex <= 0 ? 1 : pageIndex, PageSize = 10 };
    //PagedResult<ConsultationInfo> productConsultation = ConsultationFacade.GetProductDetailConsultList(consuQueryInfo);

    //var pageInfo = new PageInfo();
    //if (productConsultation != null && productConsultation.TotalRecords > 0)
    //{
    //    pageInfo.PageIndex = productConsultation.PageNumber;
    //    pageInfo.PageSize = productConsultation.PageSize;
    //    pageInfo.TotalCount = productConsultation.TotalRecords;
    //}
    //Product_ReviewMaster ProductReviewScore = ReviewFacade.GetProductReviewMaster(basicInfo.ProductSysNo);


    //撮合交易
    MatchedTradingQueryInfo matchedTradingQueryInfo = new MatchedTradingQueryInfo();
    matchedTradingQueryInfo.ProductGroupSysNo = basicInfo.ProductGroupSysNo;
    matchedTradingQueryInfo.PagingInfo = new ECommerce.Entity.PageInfo() { PageIndex = pageIndex <= 0 ? 1 : pageIndex, PageSize = 10 };
    PagedResult<MatchedTradingInfo> productMatchedTrading = MatchedTradingFacade.GetProductDetailMatchedTradingList(matchedTradingQueryInfo);

    var pageInfo = new PageInfo();
    if (productMatchedTrading != null && productMatchedTrading.TotalRecords > 0)
    {
        pageInfo.PageIndex = productMatchedTrading.PageNumber;
        pageInfo.PageSize = productMatchedTrading.PageSize;
        pageInfo.TotalCount = productMatchedTrading.TotalRecords;
    }
