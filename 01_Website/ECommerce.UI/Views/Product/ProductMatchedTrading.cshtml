    seoinfo.PageKeywords = string.Format("撮合交易-{0}", basicInfo.Keywords);
    if (!string.IsNullOrEmpty(basicInfo.ProductDesc) && basicInfo.ProductDesc.Length <= 200)
    {
        seoinfo.PageDescription = string.Format("撮合交易-{0},{1}", basicInfo.Keywords, basicInfo.ProductDesc);
    }

    if (!string.IsNullOrEmpty(basicInfo.ProductDesc) && basicInfo.ProductDesc.Length > 200)
    {
        seoinfo.PageDescription = string.Format("撮合交易-{0},{1}...", basicInfo.Keywords, basicInfo.ProductDesc.Substring(0, 200));
    }

    SetSEO(seoinfo);

    //商品是否被收藏
    LoginUser CurrUser = UserMgr.ReadUserInfo();
    bool productIsWished = false;
    if (CurrUser == null || CurrUser.UserSysNo <= 0)
    {
        productIsWished = false;
    }
    else
    {
        productIsWished = ProductFacade.IsProductWished(productSysNo, CurrUser.UserSysNo);
    }

    bool isLogin = false;
    if (CurrUser != null && CurrUser.UserSysNo > 0)
    {
        isLogin = true;
    }
    else
