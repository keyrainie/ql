@{
    ViewBag.Title = "修改密码";
    Layout = "~/Views/Shared/_Main.cshtml";
    
    LoginUser suer = UserMgr.ReadUserInfo();
    CustomerInfo customerInfo = CustomerFacade.GetCustomerInfo(suer.UserSysNo);
}

@using ECommerce.Facade.Member;
@using ECommerce.Entity.Member;

@section rsHeader
{
    @BuildCssRef("/Resources/themes/default/css/global.css")
    @BuildCssRef("/Resources/themes/default/css/account.css")
    
    @*@BuildCssRef("/Resources/themes/default/css/innerPage.css")*@
@*    @BuildJsRef("/Resources/themes/default/js/pg_account.js")
    @BuildJsRef("/Resources/themes/default/js/passwordStrength.js")
    @BuildJsRef("/Resources/themes/default/js/Validform_v5.1_min.js")*@
    @BuildJsRef("/Resources/scripts/pages/memberaccount/changepassword.js")
}
@section rsContent
{
<div class="wraper">
	<div class="crumb"><a href="@BuildUrl("Web_Index")">首页</a><b>&gt;</b><a href="@BuildUrl("Member_Index")">我的全球购物</a><b>&gt;</b><strong>修改密码</strong></div>
    <div class="main cls">
        <div class="col_220 fl">
			<div class="acont_menu">
				<dl>
					<dt class="titA"><h2><a href="@BuildUrl("Member_Index")" style="color:#f60">我的全球购物</a></h2></dt>
					<dd class="p10_0">
                        @Html.Partial("~/Views/UserControl/Customer/CustomerAccountCenter.cshtml", customerInfo)
					</dd>
				</dl>
                @Html.Partial("~/Views/UserControl/Customer/CustomerAccountMenu.cshtml")
			</div>
		</div>
		<div class="col_770 fr">
            <div class="modBox changepwdform mb15">
				<div class="cpt cpt_section">
                    <h2>修改密码</h2>
                </div>
				<div class="inner">
                <form class="formsub">
                <ul>
                    <li>
                        <label class="label">您的旧密码：</label>
                        <input type="password" errormsg="密码长度为6-20位" datatype="*6-20" plugin="passwordStrength" class="inputhover intxt" id="input_oldpassword" name="password" value=""/>
                        <p style="height:24px;"><span class="Validform_checktip Validform_wrong">必须输入旧密码</span></p>
                    </li>
                    <li>
                        <label class="label">输入新密码：</label>
                        <input type="password" errormsg="密码长度为6-20位" datatype="*6-20" plugin="passwordStrength" class="inputhover intxt mb10" id="input_password" name="password" value=""/>
                        <span class="ml10 pointmsg">请输入6-20个大小写英文字母与数字的混合,可包含符号</span>
                        <p style="height:24px;"><span class="Validform_checktip Validform_wrong">必须输入新密码</span></p>
                        @*<p class="passwordStrength">
                            <span class="pwdsp inblock">低</span>
                            <span class="Validform_checktip"></span>                                
                            &nbsp;
                        </p>
                            *@
                    </li>
                    <li>
                        <label class="label">确认新密码：</label>
                        <input type="password" nullmsg="请再次输入密码" errormsg="两次密码输入不一致" recheck="password" datatype="*" class="inputhover intxt" id="input_repassword" value=""/>   
                        <p style="height:24px;"><span class="Validform_checktip Validform_wrong">必须输入确认新密码</span></p>
                    </li>
                    <li id="showmsg" style="display:none;"><p style="height:24px;"><span class="Validform_checktip Validform_wrong"></span></p></li>
                </ul>    
            	<div class="action">                            	                           	
                    <a class="btn btn-redB" href="javascript:Biz.Customer.Changepassword.Submit();"><span>完&nbsp;&nbsp;成</span></a>  
                </div>
                </form>
				</div>
			</div>
		</div>
    </div>
</div>
}