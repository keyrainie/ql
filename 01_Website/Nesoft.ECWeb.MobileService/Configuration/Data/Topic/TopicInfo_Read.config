<?xml version="1.0" encoding="utf-8" ?>
<dataOperations xmlns="http://oversea.newegg.com/DataOperation">

  <!--获取指定类别下的新闻公告的分页列表-->
  <dataCommand name="Content_QueryTopic" database="Read" commandType="Text">
    <commandText>
      <![CDATA[
      SELECT @TotalCount=COUNT(1) FROM [IPP3].[dbo].[News] WITH(NOLOCK)
      #StrWhere#

      SELECT * FROM
      (
        SELECT TOP (@EndNumber) (ROW_NUMBER() OVER(ORDER BY #SortColumnName#)) AS RowNumber
			        ,[SysNo]
              ,[Title]
              ,Subtitle
              ,[LinkUrl]
              ,[ExpireDate]
              ,[TopMost]
              ,[CreateUserSysNo]
              ,[CreateDate] 
              ,[NewsType] AS [Type]
              ,[ReferenceSysNo] 
              ,[Status]
              ,[EnableComment]
              ,[EnableReplyRank] 
              ,[LanguageCode] 
              ,[IsRed]
              ,[ContainPageId]
              ,[PageShowInheritance]
              ,[AreaShow]
              ,[Content]
		    FROM [IPP3].[dbo].[News] WITH(NOLOCK)
		    #StrWhere# 
      ) T WHERE RowNumber > @StartNumber
      ]]>
    </commandText>
  </dataCommand>

  <!--获取新闻公告信息-->
  <dataCommand name="Content_GetNewsInfoByNewsType" database="Read" commandType="Text">
    <commandText>
      <![CDATA[
        SELECT Top(@TopNum)
	        SysNo,
	        Title,
          Subtitle,
	        LinkUrl,
	        TopMost,
	        CreateDate,
	        Content,
	        NewsType AS [Type],
          CoverImageUrl
        FROM IPP3.dbo.News WITH(NOLOCK)
        WHERE NewsType = @NewsType
          AND Status = 1
          AND ExpireDate > GETDATE()
        ORDER BY TopMost DESC, [Priority] DESC, SysNo DESC
      ]]>
    </commandText>
    <parameters>
      <param dbType="Int32" name="@NewsType" />
      <param dbType="Int32" name="@TopNum" />
    </parameters>
  </dataCommand>

  <!--获取指定数量的新闻公告信息-->
  <dataCommand name="Content_GetTopTopicList" database="Read" commandType="Text">
    <commandText>
      <![CDATA[
 SELECT top(@TopNum)[SysNo]
      ,[Title]
      ,Subtitle
      ,[LinkUrl]
      ,[ExpireDate]
      ,[TopMost]
      ,[CreateUserSysNo]
      ,[CreateDate] 
      ,[NewsType] as [Type]
      ,[ReferenceSysNo] 
      ,[Status]
      ,[EnableComment]
      ,[EnableReplyRank] 
      ,[LanguageCode] 
      ,[IsRed]
      ,[ContainPageId]
      ,[PageShowInheritance]
      ,[AreaShow]
  FROM [IPP3].[dbo].[News] WITH(NOLOCK)
  WHERE #strWhere#
   order BY TopMost DESC, SysNo DESC
      ]]>
    </commandText>
    <parameters>
      <param dbType="Int32" name="@TopNum" />
    </parameters>
  </dataCommand>

  <!--获取新闻公告详细信息-->
  <dataCommand name="Content_GetNewsInfoBySysNo" database="Read" commandType="Text">
    <commandText>
      <![CDATA[
         SELECT  [SysNo]
                ,[Title]
                ,Subtitle
                ,[LinkUrl]
                ,[ExpireDate]
                ,[TopMost]
                ,[CreateUserSysNo]
                ,[CreateDate] 
                ,[NewsType] as [Type]
                ,[ReferenceSysNo] 
                ,[Status]
                ,[EnableComment]
                ,[EnableReplyRank] 
                ,[LanguageCode] 
                ,[IsRed]
                ,[ContainPageId]
                ,[PageShowInheritance]
                ,[AreaShow]
                ,[Content]
          FROM [IPP3].[dbo].[News] WITH(NOLOCK)
          WHERE [SysNo]=@SysNo
          ORDER BY TopMost DESC, SysNo DESC
      ]]>
    </commandText>
    <parameters>
      <param dbType="Int32" name="@SysNo" />
    </parameters>
  </dataCommand>

  <!--获取帮助中心类型-->
  <dataCommand name="Content_GetHelperCenterCategory" database="Read" commandType="Text">
    <commandText>
      <![CDATA[
        SELECT 
	        [SysNo],
	        RTRIM([Name]) as [Title],
	        [Priority]
        FROM [OverseaECommerceManagement].[dbo].[HelpCenterCategory] WITH(NOLOCK)
        WHERE Status = 'A' ORDER BY [Priority] ASC
      ]]>
    </commandText>
  </dataCommand>

  <!--获取指定类别下的Top多少条的帮助中心列表-->
  <dataCommand name="Content_GetTopHelperCenterList" database="Read" commandType="Text">
    <commandText>
      <![CDATA[
       SELECT TOP(@TopNum)
             [SysNo]
            ,RTRIM([Title]) AS [Title]
            ,[CategorySysNo] AS [ReferenceSysNo] 
            ,[Link] AS [LinkUrl]
            ,[Content] AS [Content]
            ,[Description]
            ,[LanguageCode] 
            ,[InDate] AS [CreateDate] 
      FROM [OverseaECommerceManagement].[dbo].[HelpCenterInfo] WITH(NOLOCK)
      WHERE [CategorySysNo]=@CategorySysNo AND [Status]='A' AND [ShowInCategory]=1
      ORDER BY Priority ASC, SysNo DESC
      ]]>
    </commandText>
    <parameters>
      <param name="@CategorySysNo" dbType="Int32" />
      <param name="@TopNum" dbType="Int32" />
    </parameters>
  </dataCommand>

  <!--获取帮助中心详细-->
  <dataCommand name="Content_GetTopHelperCenterBySysNo" database="Read" commandType="Text">
    <commandText>
      <![CDATA[
       SELECT  [SysNo]
              ,RTRIM([Title]) AS [Title]
              ,[CategorySysNo] AS [ReferenceSysNo] 
              ,[Link] AS [LinkUrl]
              ,[Content] AS [Content]
              ,[Description]
              ,[LanguageCode] 
              ,[InDate] AS [CreateDate] 
      FROM [OverseaECommerceManagement].[dbo].[HelpCenterInfo] WITH(NOLOCK)
      WHERE [SysNo]=@SysNo
      ORDER BY Priority ASC, SysNo DESC
      ]]>
    </commandText>
    <parameters>
      <param name="@SysNo" dbType="Int32" />
    </parameters>
  </dataCommand>

</dataOperations>
