	    0 as TariffRate,
      '' as EntryCode,
      '' as TariffCode,
      A.TariffAmt
    FROM dbo.SO_Item A WITH (NOLOCK)
    LEFT JOIN dbo.Product p WITH (NOLOCK) ON p.SysNo = a.ProductSysNo 
      LEFT JOIN dbo.Product_Price AS price WITH (NOLOCK) ON a.ProductSysNo = price.ProductSysNo
      LEFT JOIN dbo.Stock AS stock WITH (NOLOCK) ON a.WarehouseNumber = stock.SysNo
        --join IPP3..Product_EntryInfo e (nolock)
	   -- on e.ProductSysNo=p.SysNo
    WHERE A.SOSysNo = @SOID AND A.ProductType<>3
    ORDER BY A.SysNo
			]]>
    </commandText>
    <parameters>
      <param name="@SOID" dbType="Int32" size="4"/>
    </parameters>
  </dataCommand>
  <!--创建Netpay-->
  <dataCommand name="Order_CreateNetpay" database="Write" commandType="Text">
    <commandText>
      <![CDATA[
            INSERT INTO [IPP3].[dbo].[Finance_NetPay]
                    ([SOSysNo]
                    ,[PayTypeSysNo]
                    ,[PayAmount]
                    ,[Source]
                    ,[InputTime]
                    ,[InputUserSysNo]
                    ,[ApproveUserSysNo]
                    ,[ApproveTime]
                    ,[Note]
                    ,[Status]
                    ,[ReviewedUserSysNo]
                    ,[ReviewedTime]
                    ,[RelatedSoSysNo]
                    ,[ExternalKey]
                    ,[CompanyCode]
                    ,[LanguageCode]
                    ,[CurrencySysNo]
                    ,[StoreCompanyCode]
                    ,[MasterSoSysNo]
                    ,[OrderAmt]
                    ,[PrePayAmt]
                    ,[PointPayAmt]
                    ,[GiftCardPayAmt]
                    ,[PayTransNumber]
                    ,[PayProcessTime])
            SELECT TOP (1) 
                     @SOSysNo
			              ,@PayTypeSysNo
			              ,@PayAmount
			              ,@Source
			              ,GETDATE()
			              ,0
			              ,NULL
			              ,NULL
			              ,NULL
			              ,@Status
			              ,NULL
			              ,NULL
			              ,NULL
			              ,@SerialNumber
			              ,@CompanyCode
			              ,@LanguageCode
			              ,@CurrencySysNo
			              ,@StoreCompanyCode
			              ,NULL
			              ,@OrderAmt
			              ,@PrePayAmt
			              ,@PointPayAmt
			              ,@GiftCardPayAmt
			              ,@SerialNumber
			              ,@PayProcessTime
            --FROM [IPP3].[dbo].[Finance_NetPay] 
            WHERE NOT EXISTS(SELECT TOP (1) * FROM [IPP3].[dbo].[Finance_NetPay] WHERE [SOSysNo] = @SOSysNo AND [Status]>0)

            --创建收款单
            INSERT INTO [IPP3].[dbo].[Finance_SOIncome]
                    ([OrderType]
                    ,[OrderSysNo]
                    ,[OrderAmt]
                    ,[IncomeStyle]
                    ,[IncomeAmt]
                    ,[IncomeTime]
                    ,[IncomeUserSysNo]
                    --,[ConfirmTime]
                    --,[ConfirmUserSysNo]
                    ,[ReferenceID]
                    ,[Note]
                    ,[Status]
                    ,[PrepayAmt]
                    ,[CompanyCode]
                    ,[LanguageCode]
                    ,[CurrencySysNo]
                    ,[StoreCompanyCode]
                    ,[MasterSoSysNo]
                    ,[PointPayAmt]
                    ,[GiftCardPayAmt]
                    ,[PayAmount]
                    ,[IsSAPImported]
                    ,[SAPImportedDate]
                    ,[SAPDocNo]
                    ,[SAPPostDate]
                    ,[PayedDate]
                    ,[SapImportedStatus]
                    ,[SapInFailedReason]
                    ,[ExternalKey]
                    ,[NetPayOrderSysNo])
          SELECT TOP (1) 
                     1
                    ,@SOSysNo
                    ,@OrderAmt
                    ,1
                    ,@PayAmount
                    ,GETDATE()
                    ,3026
                    --,GETDATE()
                    --,3026
                    ,NULL
                    ,NULL
                    ,0
                    ,@PrePayAmt
                    ,@CompanyCode
                    ,@LanguageCode
                    ,@CurrencySysNo
                    ,@StoreCompanyCode
                    ,NULL
                    ,@PointPayAmt
                    ,@GiftCardPayAmt
                    ,@PayAmount
                    ,NULL
                    ,NULL
                    ,NULL
                    ,NULL
                    ,NULL
                    ,NULL
                    ,NULL
                    ,@SerialNumber
                    ,NULL
      --FROM [IPP3].[dbo].[Finance_SOIncome] 
      WHERE NOT EXISTS(SELECT TOP (1) * FROM [IPP3].[dbo].[Finance_SOIncome] WHERE [OrderSysNo] = @SOSysNo AND [OrderType]=1)
			]]>
    </commandText>
    <parameters>
      <param name="@SOSysNo" dbType="Int32" />
      <param name="@PayTypeSysNo" dbType="Int32" />
      <param name="@PayAmount" dbType="Decimal" />
      <param name="@Source" dbType="Int32" />
      <param name="@Status" dbType="Int32" />
      <param name="@CompanyCode" dbType="String" />
      <param name="@LanguageCode" dbType="String" />
      <param name="@StoreCompanyCode" dbType="String" />
      <param name="@CurrencySysNo" dbType="Int32" />
      <param name="@OrderAmt" dbType="Decimal" />
      <param name="@PrePayAmt" dbType="Decimal" />
      <param name="@PointPayAmt" dbType="Decimal" />
      <param name="@GiftCardPayAmt" dbType="Decimal" />
      <param name="@SerialNumber" dbType="String" />
      <param name="@PayProcessTime" dbType="String" />
    </parameters>
  </dataCommand>
