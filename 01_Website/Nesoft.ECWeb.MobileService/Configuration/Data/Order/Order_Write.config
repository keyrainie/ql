  <!--创建虚拟Netpay-->
  <dataCommand name="Order_CreateVirtualNetpay" database="Write" commandType="Text">
    <commandText>
      <![CDATA[
	    INSERT INTO [OverseaInvoiceReceiptManagement].[dbo].[Finance_VirtualNetPay]
           ([OrderSysNo]
           ,[OrderType]
           ,[PayTypeSysNo]
           ,[PayAmount]
           ,[Source]
           ,[InputTime]
           ,[InputUserSysNo]
           ,[ApproveUserSysNo]
           ,[ApproveTime]
           ,[Note]
           ,[Status]
           ,[CompanyCode]
           ,[LanguageCode]
           ,[StoreCompanyCode])
     VALUES
           (@SOSysNo
           ,0
           ,@PayTypeSysNo
           ,@PayAmount
           ,@Source
           ,GETDATE()
           ,3126
           ,3126
           ,GETDATE()
           ,NULL
           ,@Status
           ,@CompanyCode
           ,@LanguageCode
           ,@StoreCompanyCode)
      
      --创建收款单
      INSERT INTO [IPP3].[dbo].[Finance_SOIncome]
           ([OrderType]
           ,[OrderSysNo]
           ,[OrderAmt]
           ,[IncomeStyle]
           ,[IncomeAmt]
           ,[IncomeTime]
           ,[IncomeUserSysNo]
           ,[ConfirmTime]
           ,[ConfirmUserSysNo]
           ,[ReferenceID]
           ,[Note]
           ,[Status]
           ,[PrepayAmt]
           ,[CompanyCode]
           ,[LanguageCode]
           ,[CurrencySysNo]
           ,[StoreCompanyCode]
           ,[MasterSoSysNo]
           ,[PointPayAmt]
           ,[GiftCardPayAmt]
           ,[PayAmount]
           ,[IsSAPImported]
           ,[SAPImportedDate]
           ,[SAPDocNo]
           ,[SAPPostDate]
           ,[PayedDate]
           ,[SapImportedStatus]
           ,[SapInFailedReason]
           ,[ExternalKey]
           ,[NetPayOrderSysNo])
     VALUES
           (10
           ,@SOSysNo
