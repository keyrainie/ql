  <dataCommand name="GetFinacePayItemByPOSysNo" database="OverseaPOASNManagement" commandType="Text">
    <commandText>
      <![CDATA[				
 SELECT TOP 1 [SysNo]
      ,[PaySysNo]
      ,[PayStyle]
      ,[Status]
      ,[AvailableAmt]
      ,[OrderSysNo]
    ,[CompanyCode]
    ,[LanguageCode]
    ,[StoreCompanyCode]
  FROM [IPP3].[dbo].[Finance_Pay_Item] fpi WITH(nolock)
WHERE fpi.OrderType = 0 
AND fpi.PayStyle = 1
AND fpi.Status = 1
AND fpi.OrderSysNo=@OrderSysNo
			]]>
