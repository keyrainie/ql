<?xml version="1.0" encoding="utf-8" ?>
<dataOperations xmlns="http://oversea.newegg.com/DataOperation"
				xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
 
  <dataCommand name="GetSMS2SendList" database="IPP3" commandType="Text">
    <!---->
    <commandText>
      <![CDATA[ 
--DECLARE @Priority INT
--SET @Priority = 400

DECLARE @TimeSplit DATETIME
SET @TimeSplit = CONVERT(DATETIME,CONVERT(VARCHAR(10),GETDATE() - 1,112))
SELECT --TOP #TOPCOUNT#
		[SysNo]
      ,[CellNumber]
      ,[SMSContent]
      ,[Priority]
      ,[RetryCount]
      ,[CreateTime]
      ,[HandleTime]
      ,[Status]
      ,[CreateUserSysno]
      ,[CompanyCode]
      ,[LanguageCode]
      ,[StoreCompanyCode]
      ,[Type]
  FROM [IPP3].[dbo].[SMS] WITH(NOLOCK)
WHERE    Status = 0
         AND CreateTime >= CONVERT(DATETIME,CONVERT(VARCHAR(10),GETDATE() - 1,112))
         AND RetryCount < 10
         AND Priority < @Priority
ORDER BY Priority ASC,
         SysNo ASC
        
			]]>
    </commandText>
  </dataCommand>

  <dataCommand name="UpdateResult" database="IPP3" commandType="Text">
    <!---->
    <commandText>
      <![CDATA[ 
    UPDATE [IPP3].[dbo].[SMS]
    SET [Status] = 1
	    ,HandleTime=GetDate()
    WHERE SysNo = @SysNo
			]]>
    </commandText>
    <parameters>
      <param name="@SysNo" dbType="Int32" />
    </parameters>
  </dataCommand>

  <dataCommand name="UpdateRetryCount" database="IPP3" commandType="Text">
    <!---->
    <commandText>
      <![CDATA[ 
    UPDATE [IPP3].[dbo].[SMS]
    SET [RetryCount] = [RetryCount] + 1
	    ,HandleTime=GetDate()
    WHERE SysNo = @SysNo
			]]>
    </commandText>
    <parameters>
      <param name="@SysNo" dbType="Int32" />
    </parameters>
  </dataCommand>


  <dataCommand name="SendMail" database="IPP3" commandType="Text">
    <commandText>
      <![CDATA[
        INSERT INTO [MailDB].[dbo].[AsyncEmail_Internal]
        (
          [MailAddress]
          ,[MailSubject]
          ,[MailBody]
          ,Status
          ,Priority
          ,CompanyCode
          ,LanguageCode
          ,StoreCompanyCode
        )
        values
        (
          @MailAddress,
          @MailSubject,
          @MailBody,
          0,
          1,
          '8601',
          'zh-CN',
          '8601'
        )
      ]]>
    </commandText>
    <parameters>
      <param name="@MailAddress" dbType="String" size="500"/>
      <param name="@MailSubject" dbType="String" size="500"/>
      <param name="@MailBody" dbType="String"/>
    </parameters>
  </dataCommand>
</dataOperations>
