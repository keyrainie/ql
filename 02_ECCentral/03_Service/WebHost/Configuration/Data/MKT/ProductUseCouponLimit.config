  <dataCommand name="CreateLimitProduct" database="OverseaECommerceManagement" commandType="Text">
    <!--定义SQL语句-->
    <commandText>
      <![CDATA[
              declare @Status char(1)
              set @Status = 'A'
              INSERT INTO dbo.ProductUseCouponLimitInfo(
						              ProductSysNo
                          ,ReferenceSysNo
						              ,[Type]
						              ,[Status]
						              ,InUser
						              ,InDate
                          ,CompanyCode
                          ,StoreCompanyCode
                          ,LanguageCode
					              )values(
						              @ProductSysNo
                          ,@ReferenceSysNo
						              ,@Type
						              ,@Status
						              ,@InUser
						              ,GETDATE()
                          ,@CompanyCode
                          ,@CompanyCode
                          ,@LanguageCode
					              )
	    ]]>
    </commandText>
    <parameters>
      <param name="@ProductSysNo" dbType="Int32"/>
      <param name="@ReferenceSysNo" dbType="Int32"/>
      <param name="@Type" dbType="String"/>
      <param name="@InUser" dbType="String"/>
      <param name="@CompanyCode" dbType="String"/>
      <param name="@LanguageCode" dbType="String"/>
    </parameters>
  </dataCommand>
