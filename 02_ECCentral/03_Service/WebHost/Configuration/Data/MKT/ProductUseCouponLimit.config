       FROM OverseaContentManagement.dbo.ProductGroupBuying a with(nolock) 
	     INNER JOIN OverseaContentManagement.dbo.ProductGroupBuying_SnapShotPrice b with(nolock) 
       on a.SysNo=b.ProductGroupBuyingSysNo
       where a.Status='F'
