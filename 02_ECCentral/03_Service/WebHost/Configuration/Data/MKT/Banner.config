  <dataCommand name="Banner_GetBannerFrame" database="MKTService"  commandType="Text">
    <commandText>
      <![CDATA[			
        SELECT SysNo
              ,BannerFrameName
              ,Priority
              ,PageType
              ,PositionID
              ,Status
              ,BannerFrameText
              ,BannerFrameView
          FROM OverseaECommerceManagement.dbo.BannerFrame  WITH(NOLOCK)
        WHERE PageType = @PageType
         AND  PositionID =  @PositionID
			  ]]>
