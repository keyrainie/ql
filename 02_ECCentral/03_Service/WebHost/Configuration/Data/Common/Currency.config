<?xml version="1.0" encoding="utf-8" ?>
<dataOperations xmlns="http://oversea.newegg.com/DataOperation">
  
  <dataCommand name="QueryCurrencyList" database="NCService" commandType="Text">
    <commandText>
      <![CDATA[
SELECT [SysNo]
      ,[CurrencyID]
      ,[CurrencyName]
      ,[CurrencySymbol]
      ,[IsLocal]
      ,[ExchangeRate]
      ,[ListOrder]
      ,[Status]
      ,[CompanyCode]
      ,[LanguageCode]
      ,[StoreCompanyCode]
  FROM [IPP3].[dbo].[Currency]
  ORDER BY [SysNo] 
        ]]>
    </commandText>
  </dataCommand>

  <dataCommand name="GetCurrency" database="NCService" commandType="Text">
    <commandText>
      <![CDATA[
SELECT [SysNo]
      ,[CurrencyID]
      ,[CurrencyName]
      ,[CurrencySymbol]
      ,[IsLocal]
      ,[ExchangeRate]
      ,[ListOrder]
      ,[Status]
  FROM [IPP3].[dbo].[Currency]
WHERE [SysNo]=@SysNo
        ]]>
    </commandText>
    <parameters>
      <param name="@SysNo" dbType="Int32"/>
    </parameters>
  </dataCommand>

  <dataCommand name="CreateCurrency" database="NCService" commandType="Text">
    <commandText>
      <![CDATA[
INSERT INTO [IPP3].[dbo].[Currency_Sequence]
       ([CreateTime])
 VALUES
       (GETDATE())
SET @SysNo=SCOPE_IDENTITY()

INSERT INTO [IPP3].[dbo].[Currency]
           ([SysNo]
           ,[CurrencyName]
           ,[CurrencySymbol]
           ,[IsLocal]
           ,[ExchangeRate]
           ,[ListOrder]
           ,[Status]
)
VALUES
(@SysNo,
@CurrencyName,
@CurrencySymbol,
@IsLocal,
@ExchangeRate,
@ListOrder,
@Status)

  SELECT @SysNo;
        ]]>
    </commandText>
    <parameters>
      <param name="@SysNo" dbType="Int32" direction="Output"/>
      <param name="@CurrencyName" dbType="String" size="50"/>
      <param name="@CurrencySymbol" dbType="String" size="20"/>
      <param name="@IsLocal" dbType="Int32" />
      <param name="@ExchangeRate" dbType="Decimal" size="19" />
      <param name="@ListOrder" dbType="String" size="10" />
      <param name="@Status" dbType="Int32" />
    </parameters>
  </dataCommand>


  <dataCommand name="UpdateCurrency" database="NCService" commandType="Text">
    <commandText>
      <![CDATA[
UPDATE IPP3.dbo.Currency
SET    [CurrencyName] = @CurrencyName
      ,[CurrencySymbol] = @CurrencySymbol
      ,[IsLocal] = @IsLocal
      ,[ExchangeRate] = @ExchangeRate
      ,[ListOrder] = @ListOrder
      ,[Status] = @Status
WHERE [SysNo] = @SysNo 
        ]]>
    </commandText>
    <parameters>
      <param name="@SysNo" dbType="Int32"/>
      <param name="@CurrencyName" dbType="String" size="50"/>
      <param name="@CurrencySymbol" dbType="String" size="20"/>
      <param name="@IsLocal" dbType="Int32" />
      <param name="@ExchangeRate" dbType="Decimal" size="19" />
      <param name="@ListOrder" dbType="String" size="10" />
      <param name="@Status" dbType="Int32" />
    </parameters>
  </dataCommand>
  
  
</dataOperations>