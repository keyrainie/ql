  <dataCommand name="CreateCustomerBasicInfo" database="NCService" commandType="Text">
    <commandText>
      <![CDATA[			
           INSERT INTO [IPP3].[dbo].[Customer_Sequence] 
										([CreateTime]) 
										SELECT GETDATE()
										
				SELECT @CustomerSysNo = SCOPE_IDENTITY()	
		
				INSERT INTO  [IPP3].[dbo].[Customer]
								  (
								   [SysNo]
								  ,[CustomerID]
                  ,[CustomerName]
								  ,[Status]
                  ,[FromLinkSource]
                  ,[Gender]
                  ,[Email]
                  ,[Phone]
                  ,[CellPhone]
                  ,[Fax]
                  ,[DwellAreaSysNo]
                  ,[DwellAddress]
                  ,[DwellZip]
                  ,[RegisterTime]
                  ,[Birthday]
                  ,[RecommendedByCustomerID]
                  ,PWD
                  ,ReceiveAreaSysNo
                  ,AuctionRank
                  ,IdentityCard
							)
					  VALUES(
								   @CustomerSysNo
								  ,@CustomerID
								  ,@CustomerName
								  ,@Status
								  ,@FromLinkSource
								  ,@Gender
								  ,@Email
								  ,@Phone
								  ,@CellPhone
								  ,@Fax
								  ,@DwellAreaSysNo
								  ,@DwellAddress
								  ,@DwellZip
								  ,GETDATE()
								  ,@Birthday
								  ,@RecommendedByCustomerID
								  ,''
                  ,0
                  ,0
                  ,@IdentityCard
						)
            	INSERT INTO  [IPP3].[dbo].[Customer_Extend]
								  (
                   CustomerSysno 
                  , CustomerID
                  ,[AvtarImageStatus]
                  ,[RegisterIPAddress]
                  ,[StudentFlag]
                  ,[RegionName]
                  ,IsSystemUser
                  ,BuyCount)
               VALUES(
               @CustomerSysNo,
               @CustomerID,
               @AvtarImageStatus,
               @RegisterIPAddress
              ,@StudentFlag
							,@RegionName
              ,0
              ,0)
       ]]>
    </commandText>
    <parameters>
      <param name="@CustomerSysNo" dbType="Int32" direction="Output" />
      <param name="@CustomerID" dbType="String"  size="50"/>
      <param name="@CustomerName" dbType="String" size="50"/>
      <param name="@Status" dbType="Int32" />
      <param name="@FromLinkSource" dbType="String" size="50"/>
      <param name="@Gender" dbType="Int32"/>
