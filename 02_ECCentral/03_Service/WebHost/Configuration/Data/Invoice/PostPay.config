  <dataCommand name="AbandonPostPayBySOSysNo" database="NCService" commandType="Text">
    <commandText>
      <![CDATA[
UPDATE IPP3.dbo.Finance_PostPay Set
    Status=0,
    Note=@Note
WHERE SOSysNo=@SOSysNo
AND Status=1
      ]]>
    </commandText>
    <parameters>
      <param name="@Note" dbType="String" />
      <param name="@SOSysNo" dbType="Int32" />
    </parameters>
  </dataCommand>

