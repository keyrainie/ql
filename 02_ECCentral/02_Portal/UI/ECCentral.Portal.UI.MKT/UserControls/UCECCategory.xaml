<UserControl x:Class="ECCentral.Portal.UI.MKT.UserControls.UCECCategory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400"
    xmlns:ovsControls="clr-namespace:Newegg.Oversea.Silverlight.Controls;assembly=Newegg.Oversea.Silverlight.Controls">

    <StackPanel Orientation="Horizontal">
        <ovsControls:Combox Grid.Row="0" Grid.Column="0"
                                        SelectedIndex="0"
                                        DisplayMemberPath="DisplayName"
                                        SelectedValuePath="SysNo" x:Name="lstECCategory1" 
                            SelectionChanged="lstECCategory1_SelectionChanged"
                            Width="155">
        </ovsControls:Combox>
        <ovsControls:Combox Grid.Row="0" Grid.Column="0"
                                        SelectedIndex="0"
                                        DisplayMemberPath="DisplayName"
                                        SelectedValuePath="SysNo" x:Name="lstECCategory2" 
                            SelectionChanged="lstECCategory2_SelectionChanged" Visibility="Collapsed"
                            Width="155">
        </ovsControls:Combox>
        <ovsControls:Combox Grid.Row="0" Grid.Column="0"
                                        SelectedIndex="0"
                                        DisplayMemberPath="DisplayName"
                                        SelectedValuePath="SysNo" x:Name="lstECCategory3" Visibility="Collapsed"
                            Width="155" SelectionChanged="lstECCategory3_SelectionChanged">
        </ovsControls:Combox>
    </StackPanel>
</UserControl>
