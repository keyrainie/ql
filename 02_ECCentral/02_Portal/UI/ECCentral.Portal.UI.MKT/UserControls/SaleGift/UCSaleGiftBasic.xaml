<UserControl x:Class="ECCentral.Portal.UI.MKT.UserControls.SaleGift.UCSaleGiftBasic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.DatetimePicker;assembly=ECCentral.Portal.Basic"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:enumconverter="clr-namespace:ECCentral.Portal.Basic.Utilities;assembly=ECCentral.Portal.Basic"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ovs="clr-namespace:Newegg.Oversea.Silverlight.ControlPanel.Core.Base;assembly=Newegg.Oversea.Silverlight.ControlPanel.Core"
             xmlns:ovsControls="clr-namespace:Newegg.Oversea.Silverlight.Controls;assembly=Newegg.Oversea.Silverlight.Controls"
             xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
             xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
             xmlns:ucVendor="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.VendorPicker;assembly=ECCentral.Portal.Basic"
             d:DesignHeight="400"
             d:DesignWidth="687"
             mc:Ignorable="d">
    <UserControl.Resources>
        <enumconverter:EnumConverter x:Name="EnumConverter" />
    </UserControl.Resources>

    <Grid Margin="20 7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Name="gridBasic" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60" />
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Text="系统编号:" />
            <TextBox Grid.Row="0"
                     Grid.Column="1"
                     Background="Transparent"
                     IsReadOnly="True"
                     Text="{Binding SysNo,
                                    Mode=TwoWay}" />

            <TextBlock Grid.Row="0"
                       Grid.Column="2"
                       Text="当前状态:" />
            <TextBox Grid.Row="0"
                     Grid.Column="3"
                     Background="Transparent"
                     IsReadOnly="True"
                     Text="{Binding Status,
                                    Mode=TwoWay,
                                    Converter={StaticResource EnumConverter}}" />


            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Text="所属商家:" />

            <ucVendor:UCVendorPicker Name="vendorPicker" Grid.Row="1" Grid.Column="1" 
                                     IsEnabled="{Binding BrandEnabled, Mode=OneWay}"
                                     SelectedVendorName="{Binding VendorName, Mode=TwoWay}" 
                                     SelectedVendorSysNo="{Binding VendorSysNo, Mode=TwoWay}"/>

            
            <TextBlock Grid.Row="1"
                       Grid.Column="2"
                       Text="折扣计入方式:" />
            <ovsControls:Combox Grid.Row="1"
                                Grid.Column="3"
                                DisplayMemberPath="Value"
                                ItemsSource="{Binding SaleGiftDiscountBelongTypeList}"
                                SelectedValue="{Binding DisCountType,
                                                        Mode=TwoWay}"
                                SelectedValuePath="Key" />

            <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       Text="活动类型:" />
            <ovsControls:Combox Name="cmbType"
                                Grid.Row="2"
                                Grid.Column="1"
                                DisplayMemberPath="Value"
                                ItemsSource="{Binding SaleGiftTypeList}"
                                SelectedValue="{Binding Type,
                                                        Mode=TwoWay}"
                                SelectedValuePath="Key"
                                SelectionChanged="cmbType_SelectionChanged" />
            <TextBlock Grid.Row="2"
                       Grid.Column="2"
                       Text="门槛金额:" />
            <TextBox Name="tbMinAmount"
                     Grid.Row="2"
                     Grid.Column="3"
                     MaxLength="9"
                     Text="{Binding Path=OrderCondition.OrderMinAmount,
                                    Mode=TwoWay}" />

            <TextBlock Grid.Row="3"
                       Grid.Column="0"
                       Text="活动名称:" />
            <TextBox Grid.Row="3"
                     Grid.Column="1"
                     Grid.ColumnSpan="3"
                     MaxLength="100"
                     Text="{Binding Title,
                                    Mode=TwoWay}" />

            <TextBlock Grid.Row="4"
                       Grid.Column="0"
                       Text="活动描述:" />
            <TextBox Grid.Row="4"
                     Grid.Column="1"
                     Grid.ColumnSpan="3"
                     Height="110"
                     AcceptsReturn="True"
                     MaxLength="200"
                     Text="{Binding Description,
                                    Mode=TwoWay}"
                     TextWrapping="Wrap" />

            <TextBlock Grid.Row="5"
                       Grid.Column="0"
                       Text="生效时间:" />
            <custom:DatetimePicker Grid.Row="5"
                                   Grid.Column="1"                                   
                                   SelectedDateTime="{Binding BeginDate,
                                                              Mode=TwoWay}" />

            <TextBlock Grid.Row="5"
                       Grid.Column="2"
                       Text="失效时间:" />
            <custom:DatetimePicker Grid.Row="5"
                                   Grid.Column="3"                                  
                                   SelectedDateTime="{Binding EndDate,
                                                              Mode=TwoWay}" />

            <TextBlock Grid.Row="6"
                       Grid.Column="0"
                       Text="活动链接:" />
            <TextBox Grid.Row="6"
                     Grid.Column="1"
                     Grid.ColumnSpan="3"
                     MaxLength="200"
                     Text="{Binding PromotionLink,
                                    Mode=TwoWay}" />

            <TextBlock Grid.Row="7"
                       Grid.Column="0"
                       Text="备注:" />
            <TextBox Grid.Row="7"
                     Grid.Column="1"
                     Grid.ColumnSpan="3"
                     Height="110"
                     AcceptsReturn="True"
                     MaxLength="1000"
                     Text="{Binding Memo,
                                    Mode=TwoWay}"
                     TextWrapping="Wrap" />

        </Grid>


    </Grid>
</UserControl>
