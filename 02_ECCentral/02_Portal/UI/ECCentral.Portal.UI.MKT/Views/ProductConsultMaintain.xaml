                                                <TextBox Text="{Binding Path=EditUser, Mode=TwoWay}" Grid.Row="0" Grid.Column="3"/>
                                                <TextBlock Grid.Row="0" Grid.Column="4" Text="{Binding Path=Label_ProductStatus, Source={StaticResource CommentResource}}"/>
