<ovs:PageBase x:Class="ECCentral.Portal.UI.MKT.Views.ProductReviewMaintain"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
              xmlns:dataprimitives="clr-namespace:System.Windows.Controls.Primitives;assembly=System.Windows.Controls.Data"
              xmlns:converter="clr-namespace:ECCentral.Portal.Basic.Utilities;assembly=ECCentral.Portal.Basic"
              xmlns:localResource="clr-namespace:ECCentral.Portal.UI.MKT.Resources"
              xmlns:ovs="clr-namespace:Newegg.Oversea.Silverlight.ControlPanel.Core.Base;assembly=Newegg.Oversea.Silverlight.ControlPanel.Core"
              xmlns:ovsControls="clr-namespace:Newegg.Oversea.Silverlight.Controls;assembly=Newegg.Oversea.Silverlight.Controls"
              xmlns:ovsDataControls="clr-namespace:Newegg.Oversea.Silverlight.Controls.Data;assembly=Newegg.Oversea.Silverlight.Controls.Data"
              xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
              xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
              xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
        xmlns:DateConverter="clr-namespace:ECCentral.Portal.Basic.Converters;assembly=ECCentral.Portal.Basic"
              xmlns:ucCommon="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.CategoryPicker;assembly=ECCentral.Portal.Basic"
            xmlns:ucCustomer="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.CustomerPicker;assembly=ECCentral.Portal.Basic"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:ucVendor="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.VendorPicker;assembly=ECCentral.Portal.Basic"
              xmlns:ucManufacturer="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.ManufacturerPicker;assembly=ECCentral.Portal.Basic"
              xmlns:ucProductPicker="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.ProductPicker;assembly=ECCentral.Portal.Basic"
              xmlns:ucPM="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.PMPicker;assembly=ECCentral.Portal.Basic"
           mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="480">

    <ovs:PageBase.Resources>
        <converter:EnumConverter x:Key="EnumConverter" />
        <DateConverter:DateTimeConverter x:Key="DateTimeConverter" />
        <localResource:ResComment x:Key="CommentResource" />
    </ovs:PageBase.Resources>

    <Grid x:Name="LayoutRoot">
        <sdk:TabControl>
            <sdk:TabItem Name="maintainSection" Header="{Binding Path=Tab_ProductReviewMaintain, Source={StaticResource CommentResource}}">
                <ovsControls:FunctionPanel x:Name="AnchorControl1"  ContentVerticalScrollBarVisibility="Disabled" ContentHorizontalScrollBarVisibility="Disabled">
                    <ovsControls:FunctionPanel.Content>
                        <Grid x:Name="LayoutQuerySection">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <toolkit:Expander Name="QuerySection" Grid.Row="0" Header="{Binding Path=Expander_QueryBuilder, Source={StaticResource CommentResource}}" IsExpanded="True">
                                <StackPanel Grid.Row="0">
                                    <Grid x:Name="productReviewBaseInfo" Margin="10,5,10,5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <!--  基本条件  -->
                                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                                            <Grid x:Name="BaseSeachBuilder">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="190" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="200" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="190" />
                                                    <ColumnDefinition Width="80" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="180" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <!--<TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Path=Label_Channel, Source={StaticResource CommentResource}}"/>
                                                <ovsControls:Combox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding Path=ChannelList}" SelectedValue="{Binding ChannelID,Mode=TwoWay,ValidatesOnExceptions=True,NotifyOnValidationError=True}" DisplayMemberPath="ChannelName" SelectedValuePath="ChannelID" x:Name="lstChannel"></ovsControls:Combox>-->
                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Path=Label_PM, Source={StaticResource CommentResource}}"/>
                                                <ucPM:UCPMPicker Grid.Row="0" Grid.Column="1" SelectedPMSysNo="{Binding Path=PMUserSysNo, Mode=TwoWay}"/>
                                                 <TextBlock Text="{Binding Path=Label_CustomerSysNo, Source={StaticResource CommentResource}}" Grid.Row="0" Grid.Column="2"/>
                                                <ucCustomer:UCCustomerPicker Grid.Row="0" Grid.Column="3" CustomerSysNo="{Binding Path=CustomerSysNo, Mode=TwoWay}" CustomerID="{Binding Path=CustomerID, Mode=TwoWay}"/>

                                                <TextBlock Text="{Binding Path=Label_Product, Source={StaticResource CommentResource}}" Grid.Row="0" Grid.Column="4"/>
                                                <ucProductPicker:UCProductPicker Grid.Row="0" Grid.Column="5" ProductID="{Binding Path=ProductID, Mode=TwoWay}" ProductSysNo="{Binding Path=ProductSysNo, Mode=TwoWay}"/>
                                                <CheckBox Content="{Binding Path=CheckBox_QueryByGroup, Source={StaticResource CommentResource}}" IsChecked="{Binding  Path=IsByGroup,Mode=TwoWay}" Grid.Row="0" Grid.Column="6"/>
                                                <TextBlock Text="{Binding Path=Label_MainContentKeywords, Source={StaticResource CommentResource}}" Grid.Row="0" Grid.Column="7"/>
                                                <TextBox Text="{Binding Path=Title, Mode=TwoWay}" MaxLength="100" Grid.Row="0" Grid.Column="8"/>

                                                <TextBlock Text="{Binding Path=Label_CreateTimeFrom, Source={StaticResource CommentResource}}" Grid.Row="1" Grid.Column="0"/>
                                                <ovsControls:DateRange Grid.Row="1" Grid.Column="1" SelectedDateStart="{Binding InDateFrom,Mode=TwoWay}" SelectedDateEnd="{Binding InDateTo,Mode=TwoWay}"/>

                                                <TextBlock Text="{Binding Path=Label_UpdateTimeFrom, Source={StaticResource CommentResource}}" Grid.Row="1" Grid.Column="2"/>
                                                <ovsControls:DateRange Grid.Row="1" Grid.Column="3" SelectedDateStart="{Binding EditDateFrom,Mode=TwoWay}" SelectedDateEnd="{Binding EditDateTo,Mode=TwoWay}"/>

                                                <TextBlock Grid.Row="1" Grid.Column="4" Text="{Binding Path=Label_ProductCategory, Source={StaticResource CommentResource}}"/>
                                                <ucCommon:UCCategoryPicker  MaxWidth="530" Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="4" Category1SysNo="{Binding Path=Category1SysNo, Mode=TwoWay}" Category2SysNo="{Binding Path=Category2SysNo, Mode=TwoWay}" Category3SysNo="{Binding Path=Category3SysNo, Mode=TwoWay}"/>

                                                <TextBlock Grid.Row="2" Grid.Column="0" Text="评论类型"/>
                                                <ovsControls:Combox Name="comReviewType" Grid.Row="2" Grid.Column="1" SelectedValue="{Binding Path=ReviewType, Mode=TwoWay}" DisplayMemberPath="Value" SelectedValuePath="Key"/>
                                            </Grid>
                                        </StackPanel>
                                        <!--  基本条件结束  -->

                                        <!--  更多条件  -->
                                        <StackPanel Name="spMoreQueryBuilder" Grid.Row="1" Grid.Column="0" Height="Auto" Visibility="Collapsed">
                                            <controls:GridSplitter Margin="0,5"
                                                       HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Center" />
                                            <Grid x:Name="DetailSeachBuilder">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="200" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="200" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="200" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="200" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Path=Label_TheBestUseful, Source={StaticResource CommentResource}}"/>
                                                <ovsControls:Combox Name="comUseful" Grid.Row="0" Grid.Column="1" SelectedValue="{Binding Path=MostUseFul, Mode=TwoWay}" DisplayMemberPath="Value" SelectedValuePath="Key"/>
                                                
                                                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding Path=Label_AllScore, Source={StaticResource CommentResource}}"/>
                                                <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                    <ovsControls:Combox Name="comOperation" Width="70" SelectedValue="{Binding Path=Operation, Mode=TwoWay}" DisplayMemberPath="Name" SelectedValuePath="Code"/>
                                                    <ovsControls:Combox Name="comScores" Width="110" SelectedValue="{Binding Path=Score, Mode=TwoWay}" DisplayMemberPath="Name" SelectedValuePath="Code"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Path=Label_EditUser, Source={StaticResource CommentResource}}" Grid.Row="0" Grid.Column="4"/>
                                                <TextBox Text="{Binding Path=EditUser, Mode=TwoWay}" MaxLength="100" Grid.Row="0" Grid.Column="5"/>
                                                <TextBlock Text="{Binding Path=Label_ProductGroupNo, Source={StaticResource CommentResource}}" Grid.Row="0" Grid.Column="6"/>
                                                <TextBox Text="{Binding Path=ProductGroupNo, Mode=TwoWay,ValidatesOnExceptions=True,NotifyOnValidationError=True}" MaxLength="8" Grid.Row="0" Grid.Column="7"/>

                                                <TextBlock Text="{Binding Path=Label_UsefulCommentCount, Source={StaticResource CommentResource}}" Grid.Row="1" Grid.Column="0"/>
                                                <TextBox Text="{Binding Path=UsefulCount, Mode=TwoWay,ValidatesOnExceptions=True,NotifyOnValidationError=True}" MaxLength="4" Grid.Row="1" Grid.Column="1"/>
                                                <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Path=Label_ProductStatus, Source={StaticResource CommentResource}}"/>
                                                <ovsControls:Combox Name="comProductStatus" Grid.Row="1" Grid.Column="3" SelectedValue="{Binding Path=ProductStatus, Mode=TwoWay}" DisplayMemberPath="Value" SelectedValuePath="Key"/>
                                                <TextBlock Grid.Row="1" Grid.Column="4" Text="{Binding Path=Label_SetTop, Source={StaticResource CommentResource}}"/>
                                                <ovsControls:Combox Name="comIsTop"  Grid.Row="1" Grid.Column="5" SelectedValue="{Binding Path=IsTop, Mode=TwoWay}" DisplayMemberPath="Value" SelectedValuePath="Key"/>
                                                <TextBlock Grid.Row="1" Grid.Column="6" Text="{Binding Path=Label_SetBottom, Source={StaticResource CommentResource}}"/>
                                                <ovsControls:Combox Name="comIsBottom" Grid.Row="1" Grid.Column="7" SelectedValue="{Binding Path=IsBottom, Mode=TwoWay}" DisplayMemberPath="Value" SelectedValuePath="Key"/>

                                                <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding Path=Label_Candidate, Source={StaticResource CommentResource}}"/>
                                                <ovsControls:Combox Name="comIsCandidate" Grid.Row="2" Grid.Column="1" SelectedValue="{Binding Path=MostUseFulCandidate, Mode=TwoWay}" DisplayMemberPath="Value" SelectedValuePath="Key"/>
                                                <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding Path=Label_Essence, Source={StaticResource CommentResource}}"/>
                                                <ovsControls:Combox Name="comEssence" Grid.Row="2" Grid.Column="3" SelectedValue="{Binding Path=IsDigest, Mode=TwoWay}" DisplayMemberPath="Value" SelectedValuePath="Key"/>
                                                <TextBlock Grid.Row="2" Grid.Column="4" Text="{Binding Path=Label_CommentStatus, Source={StaticResource CommentResource}}"/>
                                                <ovsControls:Combox Name="comReviewStatus" Grid.Row="2" Grid.Column="5" SelectedValue="{Binding Path=Status, Mode=TwoWay}" DisplayMemberPath="Name" SelectedValuePath="Code"/> 
                                                <TextBlock Grid.Row="2" Grid.Column="6" Text="{Binding Path=Label_IndexHotComment, Source={StaticResource CommentResource}}"/>
                                                <ovsControls:Combox Name="comIndexHotReview" Grid.Row="2" Grid.Column="7" SelectedValue="{Binding Path=IsIndexPageHotComment, Mode=TwoWay}" DisplayMemberPath="Value" SelectedValuePath="Key"/>
                                                <TextBlock Grid.Row="3" Grid.Column="0" Text="{Binding Path=Label_CSStatus, Source={StaticResource CommentResource}}"/>
                                                <ovsControls:Combox Name="comCSProcessStatus" Grid.Row="3" Grid.Column="1" SelectedValue="{Binding Path=ComplainStatus, Mode=TwoWay}" DisplayMemberPath="Value" SelectedValuePath="Key"/>
                                                <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding Path=Label_MerchantName, Source={StaticResource CommentResource}}"/>
                                                <!--<ucManufacturer:UCManufacturerPicker Grid.Row="3" Grid.Column="3" SelectedManufacturerSysNo="{Binding Path=VendorType, Mode=TwoWay}"/>-->
                                                <ucVendor:UCVendorPicker Name="ucVendorPicker" Grid.Row="3" Grid.Column="3" SelectedVendorName="{Binding VendorName, Mode=TwoWay}" SelectedVendorSysNo="{Binding VendorType, Mode=TwoWay}"/>
                                                <TextBlock Grid.Row="3" Grid.Column="4" Text="{Binding Path=Label_IndexServiceHotComment, Source={StaticResource CommentResource}}"/>
                                                <ovsControls:Combox Name="comIndexServiceHotReview" Grid.Row="3" Grid.Column="5" SelectedValue="{Binding Path=IsIndexPageServiceHotComment, Mode=TwoWay}" DisplayMemberPath="Value" SelectedValuePath="Key"/>
                                                <TextBlock Grid.Row="3" Grid.Column="6" Text="{Binding Path=Label_CustomerType, Source={StaticResource CommentResource}}"/>
                                                <ovsControls:Combox Name="comCustomerCategory" Grid.Row="3" Grid.Column="7" SelectedValue="{Binding Path=CustomerCategory, Mode=TwoWay}" DisplayMemberPath="Name" SelectedValuePath="Code"/>
                                                
                                            </Grid>
                                        </StackPanel>
                                        <!--  更多条件结束  -->
                                        
                                        <controls:GridSplitter Name="Spliterr_Query_Btn_1"
                                                   Grid.Row="0"
                                                   Grid.RowSpan="2"
                                                   Grid.Column="1"
                                                   IsEnabled="False"
                                                   Margin="20,0,20,0"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Stretch" />
                                        <StackPanel Grid.Row="0"
                                        Grid.Column="2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                            <Button Name="Button_Search"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Click="Button_Search_Click"
                                        Tag="/Themes/Default/Icons/Button/query.png"
                                        Content="{Binding Path=Button_Search,Source={StaticResource CommentResource}}" />
                                            <CheckBox Name="ckb_MoreQueryBuilder"
                                          Grid.Row="2"
                                          Grid.Column="3"
                                          Margin="5,5,0,0"
                                          Click="ckb_MoreQueryBuilder_Click"
                                          Content="{Binding Path=Ckb_QueryBuilder,
                                                            Source={StaticResource CommentResource}}"
                                          IsChecked="{Binding Path=IsMoreQueryBuilderCheck,
                                                              Mode=TwoWay}" TabIndex="8" />
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </toolkit:Expander>
                            <toolkit:Expander x:Name="SearchResult"
                                      Grid.Row="1"
                                      Header="{Binding Path=Expander_QueryResult, Source={StaticResource CommentResource}}"
                                      IsExpanded="True">
                                <ovsDataControls:DataGrid Name="QueryResultGrid"
                                      AutoGenerateColumns="False" ExportAllClick="QueryResultGrid_ExportAllClick"
                                      PageSize="25" CanUserSortColumns="False"
                                      GridID="487F42BC-AA04-452F-B910-6F16D9754067"
                                                  LoadingDataSource="QueryResultGrid_LoadingDataSource"
                                       IsShowAllExcelExporter="{Binding HasProductReviewExportPermission}" IsReadOnly="True">
                                    <ovsDataControls:DataGrid.Columns>
                                        <ovsDataControls:DataGridTemplateColumn NeedExport="False" Width="50" CanUserSort="False">
                                            <ovsDataControls:DataGridTemplateColumn.HeaderStyle>
                                                <Style TargetType="dataprimitives:DataGridColumnHeader" BasedOn="{StaticResource FilterColumnHeaderStyle}">
                                                    <Setter Property="Height" Value="23"/>
                                                    <Setter Property="Margin" Value="0 -2 0 0"/>
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <CheckBox x:Name="ckbSelectRow" Click="ckbSelectRow_Click"/>
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ovsDataControls:DataGridTemplateColumn.HeaderStyle>
                                            <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox x:Name="rightChecked" IsChecked="{Binding IsChecked,Mode=TwoWay}"/>
                                                </DataTemplate>
                                            </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                        </ovsDataControls:DataGridTemplateColumn>
                                        <ovsDataControls:DataGridTemplateColumn NeedExport="False" Width="180" ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_Operation, Source={StaticResource CommentResource}}" >
                                            <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <HyperlinkButton x:Name="hlVendorReply" Click="hlVendorReply_Click" Content="{Binding Path=Grid_ManufacturerReply, Source={StaticResource CommentResource}}"/>
                                                        <HyperlinkButton x:Name="hlEdit" Click="hlEdit_Click" Content="{Binding Path=Grid_CustomerReply, Source={StaticResource CommentResource}}"/>
                                                        <HyperlinkButton x:Name="hlEmailReply" Visibility="Collapsed"  Click="hlEmailReply_Click" Content="{Binding Path=Grid_EmailReply, Source={StaticResource CommentResource}}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                        </ovsDataControls:DataGridTemplateColumn>
                                        <ovsDataControls:DataGridTextColumn Width="90"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_ProductSysNo, Source={StaticResource CommentResource}}"
                                                            SortField="A.ProductSysNo" Binding="{Binding ProductSysNo}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="90"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_ProductVendor, Source={StaticResource CommentResource}}"
                                                            SortField="VD.VendorName" Binding="{Binding VendorName}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="100"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_VendorScoreCount, Source={StaticResource CommentResource}}"
                                                            SortField="MR.AvgScore" Binding="{Binding VendorScore}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="90"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_ReviewTitle, Source={StaticResource CommentResource}}"
                                                            SortField="A.Title" Binding="{Binding Title}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="90" CanUserSort="True" SortField="A.Prons"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_Prons, Source={StaticResource CommentResource}}" Binding="{Binding Prons}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="90" CanUserSort="True" SortField="A.Service"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_Other, Source={StaticResource CommentResource}}" Binding="{Binding Service}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="90"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_EggNumber, Source={StaticResource CommentResource}}"
                                                            SortField="A.Score" Binding="{Binding Score}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="90" CanUserSort="True" SortField="A.Image"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_IsUploadImage, Source={StaticResource CommentResource}}" Binding="{Binding Image, Converter={StaticResource EnumConverter}}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="90"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_ReviewStatus, Source={StaticResource CommentResource}}"
                                                            SortField="A.Status" Binding="{Binding Status}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="90"
                                                            ovsDataControls:DataGridAttached.Header="评论类型"
                                                            SortField="A.ReviewType" Binding="{Binding ReviewType,Converter={StaticResource EnumConverter}}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="120"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_CustomerUsefulCount, Source={StaticResource CommentResource}}"
                                                            SortField="A.UsefulCount" Binding="{Binding UsefulCount}"></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="100" CanUserSort="True" SortField="A.UnUsefulCount"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_CustomerUnusefulCount, Source={StaticResource CommentResource}}" Binding="{Binding UnUsefulCount}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="50" CanUserSort="True" SortField="A.ReplyCount"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_ReplyCount, Source={StaticResource CommentResource}}" Binding="{Binding ReplyCount}" ></ovsDataControls:DataGridTextColumn>
                                        <!--<ovsDataControls:DataGridTextColumn Width="80"
                                                            ovsDataControls:DataGridAttached.Header="有用候选"
                                                            SortField="EndDate" Binding="{Binding [EndDate],StringFormat='d'}"
                                                            SortMemberPath="EndDate"></ovsDataControls:DataGridTextColumn>-->
                                        <ovsDataControls:DataGridTextColumn Width="60" CanUserSort="True" SortField="A.MostUseFul"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_IsBestUseful, Source={StaticResource CommentResource}}" Binding="{Binding MostUseFul, Converter={StaticResource EnumConverter}}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="40"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_SetTop, Source={StaticResource CommentResource}}"
                                                            SortField="A.IsTop" Binding="{Binding IsTop, Converter={StaticResource EnumConverter}}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="40"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_SetBottom, Source={StaticResource CommentResource}}"
                                                            SortField="A.IsBottom" Binding="{Binding IsBottom, Converter={StaticResource EnumConverter}}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="80"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_IsDisgest, Source={StaticResource CommentResource}}"
                                                            SortField="A.IsDigest" Binding="{Binding IsDigest, Converter={StaticResource EnumConverter}}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="80" CanUserSort="True" SortField="B.ProductID"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_ProductID, Source={StaticResource CommentResource}}" Binding="{Binding ProductID}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="80" CanUserSort="True" SortField="B.ProductName"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_ProductName, Source={StaticResource CommentResource}}" Binding="{Binding ProductName}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="100" CanUserSort="True" SortField="CM.Status"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_CSHandleStatus, Source={StaticResource CommentResource}}" Binding="{Binding ComplainStatus, Converter={StaticResource EnumConverter}}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="40" CanUserSort="True" SortField="C.CSNote"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_BackUp, Source={StaticResource CommentResource}}" Binding="{Binding CSNote}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="80" CanUserSort="False" 
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_InUser, Source={StaticResource CommentResource}}" Binding="{Binding InUser}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="80"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_InDate, Source={StaticResource CommentResource}}"
                                                            SortField="A.InDate" Binding="{Binding InDate,Converter={StaticResource DateTimeConverter},ConverterParameter=Long}" SortMemberPath="InDate"></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="80" CanUserSort="True" SortField="A.EditUser"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_EditUser, Source={StaticResource CommentResource}}" Binding="{Binding EditUser}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="80"
                                                            ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_EditDate, Source={StaticResource CommentResource}}"
                                                            SortField="A.EditDate" Binding="{Binding EditDate,Converter={StaticResource DateTimeConverter},ConverterParameter=Long}" SortMemberPath="EditDate"></ovsDataControls:DataGridTextColumn>
                                    </ovsDataControls:DataGrid.Columns>
                                </ovsDataControls:DataGrid>
                            </toolkit:Expander>
                        </Grid>
                    </ovsControls:FunctionPanel.Content>

                    <ovsControls:FunctionPanel.FunctionContent>
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal" x:Name="btnStackPanel">
                                    <Button x:Name="btnCreate"                                          
                                            Margin="10,1,5,1"
                                            Click="btnCreate_Click"
                                            Content="新建"
                                            Style="{StaticResource ButtonBStyle}"
                                            TabIndex="26"
                                            Tag="/Themes/Default/Icons/Button/BatchView.png"/>
                                    <Button x:Name="btnBatchInvalid"
