                                                <ovsControls:Combox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding Path=ChannelList}" SelectedValue="{Binding ChannelID,Mode=TwoWay,ValidatesOnExceptions=True,NotifyOnValidationError=True}" DisplayMemberPath="ChannelName" SelectedValuePath="ChannelID" x:Name="lstChannelReply"></ovsControls:Combox>-->
                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Path=Label_PM, Source={StaticResource CommentResource}}"/>
                                                <ucPM:UCPMPicker Grid.Row="0" Grid.Column="1" SelectedPMSysNo="{Binding Path=PMUserSysNo, Mode=TwoWay}"/>
                                                <TextBlock Text="{Binding Path=Label_CustomerSysNo, Source={StaticResource CommentResource}}" Grid.Row="0" Grid.Column="2"/>
                                                <ucCustomer:UCCustomerPicker Grid.Row="0" Grid.Column="3" CustomerSysNo="{Binding Path=CustomerSysNo, Mode=TwoWay}" CustomerID="{Binding Path=CustomerID, Mode=TwoWay}"/>

                                                <TextBlock Text="{Binding Path=Label_Product, Source={StaticResource CommentResource}}" Grid.Row="0" Grid.Column="4"/>
                                                <ucProductPicker:UCProductPicker Grid.Row="0" Grid.Column="5" ProductID="{Binding Path=ProductID, Mode=TwoWay}" ProductSysNo="{Binding Path=ProductSysNo, Mode=TwoWay}"/>
                                                <CheckBox Content="{Binding Path=CheckBox_QueryByGroup, Source={StaticResource CommentResource}}" IsChecked="{Binding  Path=IsByGroup,Mode=TwoWay}" Grid.Row="0" Grid.Column="6"/>
                                                <TextBlock Text="{Binding Path=Label_MainContentKeywords, Source={StaticResource CommentResource}}" Grid.Row="0" Grid.Column="7"/>
