                                <StackPanel Grid.Row="0">
                                    <Grid x:Name="ProductDiscussBaseInfo" Margin="10,5,10,5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
