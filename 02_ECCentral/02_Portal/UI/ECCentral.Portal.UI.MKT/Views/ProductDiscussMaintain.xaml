                                                <Style TargetType="dataprimitives:DataGridColumnHeader" BasedOn="{StaticResource FilterColumnHeaderStyle}">
                                                    <Setter Property="Height" Value="23"/>
                                                    <Setter Property="Margin" Value="0 -2 0 0"/>
                                                    <Setter Property="ContentTemplate">
                                                        <Setter.Value>
                                                            <DataTemplate>
                                                                <CheckBox x:Name="ckbSelectRow" Click="ckbSelectRow_Click" IsChecked="{Binding Path=IsChecked,ElementName=cbDemo, Mode=TwoWay}"/>
                                                            </DataTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ovsDataControls:DataGridTemplateColumn.HeaderStyle>
                                            <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox x:Name="rightChecked" IsChecked="{Binding IsChecked,Mode=TwoWay}"/>
                                                </DataTemplate>
                                            </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                        </ovsDataControls:DataGridTemplateColumn>
                                        <ovsDataControls:DataGridTemplateColumn Width="60" NeedExport="False" ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_Operation, Source={StaticResource CommentResource}}" >
                                            <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <HyperlinkButton x:Name="hlEdit" HorizontalAlignment="Center" Click="hlEdit_Click" Content="{Binding Path=Grid_Edit, Source={StaticResource CommentResource}}"/>
                                                </DataTemplate>
                                            </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                        </ovsDataControls:DataGridTemplateColumn>
                                        <ovsDataControls:DataGridTextColumn Width="300" SortField="A.Title" ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_Title, Source={StaticResource CommentResource}}" Binding="{Binding Title}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="120" SortField="A.Status" ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_DiscussStatus, Source={StaticResource CommentResource}}" Binding="{Binding Status}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="300" SortField="B.ProductName" ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_ProductName, Source={StaticResource CommentResource}}" Binding="{Binding ProductName}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="150" SortField="VD.[VendorName]" ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_ProductVendor, Source={StaticResource CommentResource}}" Binding="{Binding VendorName}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="120" SortField="A.InUser" ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_InUser, Source={StaticResource CommentResource}}" Binding="{Binding InUser}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="120" ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_InDate, Source={StaticResource CommentResource}}"
                                                            SortField="A.InDate" Binding="{Binding InDate,Converter={StaticResource DateTimeConverter},ConverterParameter=Long}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="120" SortField="A.EditUser" ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_EditUser, Source={StaticResource CommentResource}}" Binding="{Binding EditUser}" ></ovsDataControls:DataGridTextColumn>
                                        <ovsDataControls:DataGridTextColumn Width="120" ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_EditDate, Source={StaticResource CommentResource}}"
                                                            SortField="A.EditDate" Binding="{Binding EditDate,Converter={StaticResource DateTimeConverter},ConverterParameter=Long}"></ovsDataControls:DataGridTextColumn>
                                    </ovsDataControls:DataGrid.Columns>
                                </ovsDataControls:DataGrid>
                            </toolkit:Expander>
                        </Grid>
                    </ovsControls:FunctionPanel.Content>

                    <ovsControls:FunctionPanel.FunctionContent>
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal" x:Name="btnStackPanel">
                                    <Button x:Name="btnBatchInvalid"
                                            Visibility="Collapsed"
                                            Margin="10,1,5,1"
                                            Click="btnBatchInvalid_Click"
                                            Content="{Binding Path=Button_BatchInvalid, Source={StaticResource CommentResource}}"
                                            Style="{StaticResource ButtonBStyle}"
                                            Tag="/Themes/Default/Icons/Button/batchVoid.png"
                                            IsEnabled="{Binding HasProductDiscussCancelPermission}"/>
                                    <Button x:Name="btnBatchVerify"
                                            Visibility="Collapsed"
                                            Margin="10,1,5,1"
                                            Click="btnBatchVerify_Click"
                                            Content="{Binding Path=Button_BatchVerify, Source={StaticResource CommentResource}}"
                                            Style="{StaticResource ButtonBStyle}"
                                            Tag="/Themes/Default/Icons/Button/batchAuth.png"
                                            IsEnabled="{Binding HasProductDiscussApprovePermission}"/>
                                    <Button x:Name="btnBatchRead"
                                            Visibility="Collapsed"
                                            Margin="10,1,5,1"
                                            Click="btnBatchRead_Click"
                                            Content="{Binding Path=Button_BatchRead, Source={StaticResource CommentResource}}"
                                            Style="{StaticResource ButtonBStyle}"
                                            Tag="/Themes/Default/Icons/Button/BatchView.png"
                                            IsEnabled="{Binding HasProductDiscussReadPermission}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ovsControls:FunctionPanel.FunctionContent>
                </ovsControls:FunctionPanel>
            </sdk:TabItem>

