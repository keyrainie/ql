                                                <ucCommon:UCCategoryPicker  MaxWidth="530" Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="4" Category1SysNo="{Binding Path=Category1SysNo, Mode=TwoWay}" Category2SysNo="{Binding Path=Category2SysNo, Mode=TwoWay}" Category3SysNo="{Binding Path=Category3SysNo, Mode=TwoWay}"/>
                                            </Grid>
                                        </StackPanel>

                                        <!--  基本条件结束  -->

                                        <!--  更多条件  -->
                                        <StackPanel Name="spMoreQueryBuilder2"
                                        Grid.Row="1"
