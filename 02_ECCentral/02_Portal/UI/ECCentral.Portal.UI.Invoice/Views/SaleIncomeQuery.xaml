                                <ovsDataControls:DataGridTextColumn Width="60" CanUserSort="False" SortField="PayType" Name="Grid_PayType" 
                                                                    Binding="{Binding PayTypeName}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_PayType,Source={StaticResource ResSaleIncomeQuery}}" />
                            </ovsDataControls:DataGrid.Columns>
                                
                        </ovsDataControls:DataGrid>
                    </toolkit:Expander>
