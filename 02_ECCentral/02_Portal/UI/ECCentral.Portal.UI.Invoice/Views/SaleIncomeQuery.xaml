<ovs:PageBase x:Class="ECCentral.Portal.UI.Invoice.Views.SaleIncomeQuery"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:ovs="clr-namespace:Newegg.Oversea.Silverlight.ControlPanel.Core.Base;assembly=Newegg.Oversea.Silverlight.ControlPanel.Core"
           xmlns:ovsControls="clr-namespace:Newegg.Oversea.Silverlight.Controls;assembly=Newegg.Oversea.Silverlight.Controls"
           xmlns:ovsDataControls="clr-namespace:Newegg.Oversea.Silverlight.Controls.Data;assembly=Newegg.Oversea.Silverlight.Controls.Data"
           xmlns:converter="clr-namespace:ECCentral.Portal.Basic.Utilities;assembly=ECCentral.Portal.Basic"
           xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
           xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
           xmlns:commonConverter="clr-namespace:ECCentral.Portal.Basic.Converters;assembly=ECCentral.Portal.Basic"
           xmlns:dataprimitives="clr-namespace:System.Windows.Controls.Primitives;assembly=System.Windows.Controls.Data"
           xmlns:domainConverter="clr-namespace:ECCentral.Portal.UI.Invoice.Converters"
           xmlns:res="clr-namespace:ECCentral.Portal.UI.Invoice.Resources"
           xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
           xmlns:behavior="clr-namespace:ECCentral.Portal.Basic.Behaviors;assembly=ECCentral.Portal.Basic"
           mc:Ignorable="d">

    <ovs:PageBase.Resources>
        <res:ResSaleIncomeQuery x:Key="ResSaleIncomeQuery"/>
        <converter:EnumConverter x:Key="EnumConverter" />
        <commonConverter:MoneyConverter x:Key="MoneyConverter"/>
        <commonConverter:DateTimeConverter x:Key="DateTimeConverter"/>
        <domainConverter:SaleIncomeConverter x:Key="SaleIncomeConverter"/>
    </ovs:PageBase.Resources>

    <Grid x:Name="LayoutRoot">
        <ovsControls:FunctionPanel ContentHorizontalScrollBarVisibility="Disabled"
                                   ContentVerticalScrollBarVisibility="Disabled">
            <ovsControls:FunctionPanel.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <toolkit:Expander Name="expander1"
                                      Grid.Row="0" Grid.Column="0"
                                      Header="{Binding Path=Expander_QueryFilter,Source={StaticResource ResSaleIncomeQuery}}"
                                      IsExpanded="True">
                        <Grid x:Name="SeachBuilder" Margin="20 5">
                            <i:Interaction.Behaviors>
                                <behavior:EnterSearchBehavior ButtonName="btnSearch"/>
                            </i:Interaction.Behaviors>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <!--查询条件开始-->
                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <Grid Name="gridQueryBuilder">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="10" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Row="0" Grid.Column="0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80" />
                                                <ColumnDefinition Width="200" />
                                                <ColumnDefinition Width="80" />
                                                <ColumnDefinition Width="200" />
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="200" />
                                                <ColumnDefinition Width="60" />
                                                <ColumnDefinition Width="200" />
                                            </Grid.ColumnDefinitions>
                                            <!--Line 1-->
                                            <TextBlock Text="{Binding Path=TextBlock_OrderID,Source={StaticResource ResSaleIncomeQuery}}" Grid.Row="0" Grid.Column="0"></TextBlock>
                                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding OrderID,Mode=TwoWay,NotifyOnValidationError=true}"></TextBox>

                                            <TextBlock Text="{Binding Path=TextBlock_OrderType,Source={StaticResource ResSaleIncomeQuery}}" Grid.Row="0" Grid.Column="2"></TextBlock>
                                            <ovsControls:Combox DisplayMemberPath="Value" SelectedValuePath="Key" ItemsSource="{Binding OrderTypeList}"
                                                            Grid.Row="0" Grid.Column="3" SelectedValue="{Binding OrderType,Mode=TwoWay,NotifyOnValidationError=true}"
                                                            x:Name="cbxOrderType" SelectionChanged="cbxOrderType_SelectionChanged"></ovsControls:Combox>

                                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="5 0"
                                                        Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="4">
                                                <RadioButton x:Name="rbByCustomer" Margin="0" Content="{Binding Path=RadioButton_ByCustomer1,Source={StaticResource ResSaleIncomeQuery}}" GroupName="ByCustomer"></RadioButton>
                                                <RadioButton x:Name="rbByOrder" Margin="10,0" Content="{Binding Path=RadioButton_ByCustomer2,Source={StaticResource ResSaleIncomeQuery}}" GroupName="ByCustomer" Checked="rbByOrder_Checked"></RadioButton>
                                                <RadioButton x:Name="rbByNone" Margin="10,0"  Content="{Binding Path=RadioButton_ByCustomer3,Source={StaticResource ResSaleIncomeQuery}}" GroupName="ByCustomer" IsChecked="True"></RadioButton>
                                                <CheckBox Content="{Binding Path=CheckBox_Related,Source={StaticResource ResSaleIncomeQuery}}" Foreground="Blue" Margin="15,0,0,0"  IsChecked="{Binding IsRelated,Mode=TwoWay,NotifyOnValidationError=true}"></CheckBox>
                                            </StackPanel>

                                            <!--Line 2-->
                                            <TextBlock Text="{Binding Path=TextBlock_CustomerSysNo,Source={StaticResource ResSaleIncomeQuery}}" Grid.Row="1" Grid.Column="0"></TextBlock>
                                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CustomerSysNo,Mode=TwoWay,NotifyOnValidationError=true}"></TextBox>

                                            <TextBlock Text="{Binding Path=TextBlock_IncomeStatus,Source={StaticResource ResSaleIncomeQuery}}" Grid.Row="1" Grid.Column="2"></TextBlock>
                                            <ovsControls:Combox DisplayMemberPath="Value" SelectedValuePath="Key" ItemsSource="{Binding IncomeStatusList}"
                                                            Grid.Row="1" Grid.Column="3" SelectedValue="{Binding IncomeStatus,Mode=TwoWay,NotifyOnValidationError=true}"></ovsControls:Combox>

                                            <TextBlock Text="{Binding Path=TextBlock_CreateDate,Source={StaticResource ResSaleIncomeQuery}}" Grid.Row="1" Grid.Column="4"></TextBlock>
                                            <ovsControls:DateRange Grid.Row="1" Grid.Column="5" SelectedRangeType="Today"
                                                                   SelectedDateStart="{Binding CreateDateFrom,Mode=TwoWay,NotifyOnValidationError=true}"
                                                                   SelectedDateEnd="{Binding CreateDateTo,Mode=TwoWay,NotifyOnValidationError=true}"/>

                                            <TextBlock Text="{Binding Path=TextBlock_ConfirmDate,Source={StaticResource ResSaleIncomeQuery}}" Grid.Row="1" Grid.Column="6"></TextBlock>
                                            <ovsControls:DateRange Grid.Row="1" Grid.Column="7"
                                                                   SelectedDateStart="{Binding ConfirmDateFrom,Mode=TwoWay,NotifyOnValidationError=true}"
                                                                   SelectedDateEnd="{Binding ConfirmDateTo,Mode=TwoWay,NotifyOnValidationError=true}"/>

                                            <!--Line 3-->
                                            <TextBlock Text="{Binding Path=TextBlock_IncomeType,Source={StaticResource ResSaleIncomeQuery}}" Grid.Row="2" Grid.Column="0"></TextBlock>
                                            <ovsControls:Combox x:Name="IncomeTypeCombox" DisplayMemberPath="Value" SelectedValuePath="Key" ItemsSource="{Binding IncomeTypeList}"
                                                            Grid.Row="2" Grid.Column="1" SelectedValue="{Binding IncomeType,Mode=TwoWay,NotifyOnValidationError=true}"></ovsControls:Combox>

                                            <TextBlock Text="{Binding Path=TextBlock_IncomeConfirmer,Source={StaticResource ResSaleIncomeQuery}}" Grid.Row="2" Grid.Column="2"></TextBlock>
                                            <ovsControls:Combox DisplayMemberPath="UserName" SelectedValuePath="SysNo" ItemsSource="{Binding IncomeConfirmerList}"
                                                            Grid.Row="2" Grid.Column="3" SelectedValue="{Binding IncomeConfirmer,Mode=TwoWay,NotifyOnValidationError=true}"></ovsControls:Combox>

                                            <TextBlock Text="{Binding Path=TextBlock_ReferenceID,Source={StaticResource ResSaleIncomeQuery}}" Grid.Row="2" Grid.Column="4"></TextBlock>
                                            <TextBox Grid.Row="2" Grid.Column="5"  Text="{Binding ReferenceID,Mode=TwoWay,NotifyOnValidationError=true}"></TextBox>
                                            <TextBlock Text="{Binding Path=TextBlock_WebChannel,Source={StaticResource ResSaleIncomeQuery}}" Grid.Row="2" Grid.Column="6"/>
                                            <ovsControls:Combox Grid.Row="2" Grid.Column="7" x:Name="cmbWebChannel"
                                                    ItemsSource="{Binding WebChannelList}"
                                                    DisplayMemberPath="ChannelName"
                                                    SelectedValuePath="ChannelID"
                                                    SelectedValue="{Binding ChannelID,Mode=TwoWay}"/>

                                            <!--Line 4-->
                                            <TextBlock Text="{Binding Path=TextBlock_IncomeAmt,Source={StaticResource ResSaleIncomeQuery}}" Grid.Row="3" Grid.Column="0"></TextBlock>
                                            <StackPanel HorizontalAlignment="Left"  Orientation="Horizontal"
                                                        Grid.Row="3" Grid.Column="1">
                                                <ovsControls:Combox DisplayMemberPath="Value" SelectedValuePath="Key"  ItemsSource="{Binding OperationSignTypeList}"
                                                    SelectedValue="{Binding IncomeAmtOper,Mode=TwoWay}" Width="50" Margin="7 0 2 0">
                                                </ovsControls:Combox>
                                                <TextBox Width="130" Margin="0" Text="{Binding IncomeAmt,Mode=TwoWay,NotifyOnValidationError=true}"></TextBox>
                                            </StackPanel>

                                            <TextBlock Text="{Binding Path=TextBlock_PrepayAmt,Source={StaticResource ResSaleIncomeQuery}}" Grid.Row="3" Grid.Column="2"></TextBlock>
                                            <StackPanel HorizontalAlignment="Left"  Orientation="Horizontal"
                                                        Grid.Row="3" Grid.Column="3">
                                                <ovsControls:Combox DisplayMemberPath="Value" SelectedValuePath="Key"  ItemsSource="{Binding OperationSignTypeList}"
                                                    SelectedValue="{Binding PrepayAmtOper,Mode=TwoWay}" Width="50" Margin="7 0 2 0">
                                                </ovsControls:Combox>
                                                <TextBox  Width="130" Margin="0"  Text="{Binding PrepayAmt,Mode=TwoWay,NotifyOnValidationError=true}"></TextBox>
                                            </StackPanel>

                                            <TextBlock  Name="CashOnDeliveryTypeTitle" Text="{Binding Path=TextBlock_CashOnDeliveryPayType,Source={StaticResource ResSaleIncomeQuery}}" Grid.Row="3" Grid.Column="4" Visibility="Collapsed"></TextBlock>
                                            <ovsControls:Combox Name="CashOnDeliveryTypeCombox" Visibility="Collapsed" DisplayMemberPath="Value" SelectedValuePath="Key" ItemsSource="{Binding CashOnDeliveryTypeList}"
                                                            Grid.Row="3" Grid.Column="5" SelectedValue="{Binding CashOnDeliveryType,Mode=TwoWay,NotifyOnValidationError=true}"></ovsControls:Combox>
                                            
                                            <!--动态条件区-->
                                            <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="8" Orientation="Horizontal" x:Name="dynamicFilter"/>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            <!--查询条件结束-->

                            <controls:GridSplitter Name="Spliterr_Query_Btn_1"
                                                   Grid.Row="0"
                                                   Grid.Column="1"
                                                   Margin="0,0,10,0"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Stretch"
                                                   IsEnabled="False" />

                            <Button Name="btnSearch"
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Click="btnSearch_Click"
                                        Content="{Binding Path=Button_Search,Source={StaticResource ResSaleIncomeQuery}}"
                                        Tag="/Themes/Default/Icons/Button/query.png" />
                        </Grid>
                    </toolkit:Expander>
                    <ScrollViewer Grid.Row="1" x:Name="svStatisticInfo" Visibility="Collapsed"
                                  VerticalAlignment="Center"
                                  VerticalScrollBarVisibility="Disabled"
                                  HorizontalScrollBarVisibility="Auto">
                        <Border Background="Azure" BorderBrush="Red" Padding="5" BorderThickness="1" Height="40">
                            <TextBlock x:Name="tbStatisticInfo" Foreground="Red"></TextBlock>
                        </Border>
                    </ScrollViewer>
                    <toolkit:Expander Name="expander2"  Grid.Row="2"
                                      Header="{Binding Path=Expander_QueryResult,Source={StaticResource ResSaleIncomeQuery}}"
                                      IsExpanded="True"
                                      Padding="0">
                        <ovsDataControls:DataGrid Name="dgSaleIncomeQueryResult"
                                                  AutoGenerateColumns="False"
                                                  CanUserSortColumns="False"
                                                  GridID="A4306BB3-ED7D-43C2-8894-5A31FE218C3A"
                                                  IsReadOnly="True"
                                                  IsServerSort="True"
                                                  IsShowColumnsSelector="True"
                                                  IsShowExcelExporter="False"
                                                  IsShowAllExcelExporter="True"
                                                  EnableCustomizeColumn="True"
                                                  ExportAllClick="dgSaleIncomeQueryResult_ExportAllClick"
                                                  LoadingDataSource="dgSaleIncomeQueryResult_LoadingDataSource">
                            <ovsDataControls:DataGrid.Columns>
                                <ovsDataControls:DataGridTemplateColumn Width="40" CanUserSort="False" CanUserResize="False" NeedExport="False" Name="Grid_CheckBox">
                                    <ovsDataControls:DataGridTemplateColumn.HeaderStyle>
                                        <Style BasedOn="{StaticResource FilterColumnHeaderStyle}" TargetType="dataprimitives:DataGridColumnHeader">
                                            <Setter Property="Height" Value="23" />
                                            <Setter Property="Margin" Value="0 -2 0 0" />
                                            <Setter Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <CheckBox  Margin="3 0 -10 0" x:Name="ckbSelectAllRow" HorizontalAlignment="Center" Click="ckbSelectAllRow_Click" />
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ovsDataControls:DataGridTemplateColumn.HeaderStyle>
                                    <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox Margin="-1 0 0 0" HorizontalAlignment="Center" IsChecked="{Binding IsChecked, Mode=TwoWay}" />
                                        </DataTemplate>
                                    </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                </ovsDataControls:DataGridTemplateColumn>

                                <ovsDataControls:DataGridTextColumn Width="60" CanUserSort="True" SortField="SysNo"
                                                                    Binding="{Binding SysNo}" Name="Grid_SysNo"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_SysNo,Source={StaticResource ResSaleIncomeQuery}}" />

                                <ovsDataControls:DataGridTemplateColumn Width="100" CanUserSort="True" SortField="OrderSysNo"
                                                                        NeedExport="True" ExportField="OrderSysNo" Name="Grid_OrderSysNo"
                                                                        ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_OrderSysNo,Source={StaticResource ResSaleIncomeQuery}}">
                                    <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                <TextBlock x:Name="tbOrderSysNo" VerticalAlignment="Center" Text="{Binding OrderSysNo}"
                                                            Visibility="{Binding Converter={StaticResource SaleIncomeConverter},ConverterParameter=TextBlock_OrderSysNo}" />

                                                <HyperlinkButton x:Name="lbtnOrderSysNo" VerticalAlignment="Center" Click="lbtnOrderSysNo_Click" Content="{Binding OrderSysNo}"
                                                            Visibility="{Binding Converter={StaticResource SaleIncomeConverter},ConverterParameter=Hyperlink_OrderSysNo}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                </ovsDataControls:DataGridTemplateColumn>

                                <ovsDataControls:DataGridTemplateColumn Width="80" CanUserSort="True" SortField="CustomerSysNo"
                                                                        NeedExport="True" ExportField="CustomerSysNo" Name="Grid_CustomerSysNo"
                                                                        ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_CustomerSysNo,Source={StaticResource ResSaleIncomeQuery}}">
                                    <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <HyperlinkButton x:Name="lbtnCustomerSysNo" VerticalAlignment="Center" Click="lbtnCustomerSysNo_Click"
                                                             Content="{Binding CustomerSysNo, StringFormat=.}" Tag="{Binding CustomerSysNo}"/>
                                        </DataTemplate>
                                    </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                </ovsDataControls:DataGridTemplateColumn>

                                <ovsDataControls:DataGridTextColumn Width="100" CanUserSort="True" SortField="OrderType" NeedExport="False" Name="Grid_OrderType"
                                                                    Binding="{Binding Converter={StaticResource SaleIncomeConverter},ConverterParameter=OrderType}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_OrderType,Source={StaticResource ResSaleIncomeQuery}}" />

                                <!--根据不同的OrderType需要链接到不同的维护页面-->
                                <ovsDataControls:DataGridTemplateColumn Width="60" CanUserSort="True" SortField="OrderID"
                                                                        NeedExport="True" ExportField="OrderID" Name="Grid_OrderID"
                                                                        ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_OrderID,Source={StaticResource ResSaleIncomeQuery}}">
                                    <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                <HyperlinkButton x:Name="lbtnOrderID" VerticalAlignment="Center" Click="lbtnOrderID_Click"
                                                           Content="{Binding OrderID, StringFormat=.}"
                                                           Visibility="{Binding Converter={StaticResource SaleIncomeConverter},ConverterParameter=OrderID_HyperlinkButton}"/>
                                                <TextBlock Text="{Binding OrderID, StringFormat=.}"  VerticalAlignment="Center"
                                                           Visibility="{Binding Converter={StaticResource SaleIncomeConverter},ConverterParameter=OrderID_TextBlock}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                </ovsDataControls:DataGridTemplateColumn>

                                <ovsDataControls:DataGridTextColumn Width="80" CanUserSort="True" SortField="IncomeStyle" Name="Grid_IncomeStyle"
                                                                    Binding="{Binding IncomeStyle,Converter={StaticResource EnumConverter}}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_IncomeStyle,Source={StaticResource ResSaleIncomeQuery}}" />

                                <ovsDataControls:DataGridTextColumn Width="80" CanUserSort="True" SortField="IncomeStatus" Name="Grid_IncomeStatus"
                                                                    Binding="{Binding IncomeStatus,Converter={StaticResource EnumConverter}}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_IncomeStatus,Source={StaticResource ResSaleIncomeQuery}}" />

                                <ovsDataControls:DataGridTextColumn Width="80" CanUserSort="True" SortField="OrderAmt" Name="Grid_OrderAmt"
                                                                    CellStyle="{StaticResource DataGridRightAlignCell}"
                                                                    Binding="{Binding OrderAmt,Converter={StaticResource MoneyConverter}}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_OrderAmt,Source={StaticResource ResSaleIncomeQuery}}" />

                                <ovsDataControls:DataGridTextColumn Width="80" CanUserSort="False" Name="Grid_ProductAmt"
                                                                    CellStyle="{StaticResource DataGridRightAlignCell}"
                                                                    Binding="{Binding ProductPrice,Converter={StaticResource MoneyConverter}}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_ProductAmt,Source={StaticResource ResSaleIncomeQuery}}" />

                                <ovsDataControls:DataGridTextColumn Width="80" CanUserSort="True" SortField="PrepayAmt" Name="Grid_PrepayAmt"
                                                                    CellStyle="{StaticResource DataGridRightAlignCell}"
                                                                    Binding="{Binding PrepayAmt,Converter={StaticResource MoneyConverter}}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_PrepayAmt,Source={StaticResource ResSaleIncomeQuery}}" />

                                <ovsDataControls:DataGridTextColumn Width="80" CanUserSort="False" Name="Grid_GiftCardPayAmt"
                                                                    CellStyle="{StaticResource DataGridRightAlignCell}"
                                                                    Binding="{Binding GiftCardPayAmt,Converter={StaticResource MoneyConverter}}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_GiftCardPayAmt,Source={StaticResource ResSaleIncomeQuery}}" />

                                <ovsDataControls:DataGridTextColumn Width="80" CanUserSort="True" SortField="PointPayAmt" Name="Grid_PointPay"
                                                                    CellStyle="{StaticResource DataGridRightAlignCell}"
                                                                    Binding="{Binding PointPayAmt,Converter={StaticResource MoneyConverter}}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_PointPay,Source={StaticResource ResSaleIncomeQuery}}" />

                                <ovsDataControls:DataGridTextColumn Width="80" CanUserSort="False" Name="Grid_PomotionAmt"
                                                                    CellStyle="{StaticResource DataGridRightAlignCell}"
                                                                    Binding="{Binding PomotionAmt,Converter={StaticResource MoneyConverter}}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_PomotionAmt,Source={StaticResource ResSaleIncomeQuery}}" />
                                
                                <ovsDataControls:DataGridTextColumn Width="80" CanUserSort="True" SortField="TariffAmt" Name="Grid_TariffAmt"
                                                                    CellStyle="{StaticResource DataGridRightAlignCell}"
                                                                    Binding="{Binding TariffAmt,Converter={StaticResource MoneyConverter}}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_TariffAmt,Source={StaticResource ResSaleIncomeQuery}}" />

                                <!--当收款单未确认，且收款类型为货到付款时，如果有权限可以设置实收金额-->
                                <ovsDataControls:DataGridTemplateColumn Width="80" CanUserSort="True" SortField="IncomeAmt"
                                                                        NeedExport="True" ExportField="IncomeAmt" Name="Grid_IncomeAmt"
                                                                        ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_IncomeAmt,Source={StaticResource ResSaleIncomeQuery}}">
                                    <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                <HyperlinkButton x:Name="lbtnIncomeAmt" VerticalAlignment="Center" Click="lbtnIncomeAmt_Click"
                                                             Content="{Binding IncomeAmt,Converter={StaticResource MoneyConverter}}"
                                                             IsEnabled="{Binding Converter={StaticResource SaleIncomeConverter},ConverterParameter=IncomeAmt_HyperlinkButton}"/>
                                                <TextBlock Text="{Binding IncomeAmt,Converter={StaticResource MoneyConverter}}"
                                                           Visibility="{Binding Converter={StaticResource SaleIncomeConverter},ConverterParameter=IncomeAmt_TextBlock}"></TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                </ovsDataControls:DataGridTemplateColumn>

                                <ovsDataControls:DataGridTextColumn Width="60" CanUserSort="False" NeedExport="False" Name="Grid_ReturnPoint"
                                                                    CellStyle="{StaticResource DataGridRightAlignCell}"
                                                                    Binding="{Binding Converter={StaticResource SaleIncomeConverter},ConverterParameter=ReturnPointAmt}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_ReturnPoint,Source={StaticResource ResSaleIncomeQuery}}" />

                                <ovsDataControls:DataGridTextColumn Width="60" CanUserSort="False" NeedExport="False" Name="Grid_ReturnCash"
                                                                    CellStyle="{StaticResource DataGridRightAlignCell}"
                                                                    Binding="{Binding Converter={StaticResource SaleIncomeConverter},ConverterParameter=ReturnCash}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_ReturnCash,Source={StaticResource ResSaleIncomeQuery}}" />

                                <ovsDataControls:DataGridTextColumn Width="60" CanUserSort="False" Name="Grid_RefundGiftCard"
                                                                    CellStyle="{StaticResource DataGridRightAlignCell}"
                                                                    Binding="{Binding RefundGiftCard,Converter={StaticResource MoneyConverter}}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_RefundGiftCard,Source={StaticResource ResSaleIncomeQuery}}" />

                                <ovsDataControls:DataGridTextColumn Width="60" CanUserSort="False" NeedExport="False" Name="Grid_ToleranceAmt"
                                                                    CellStyle="{StaticResource DataGridRightAlignCell}"
                                                                    Binding="{Binding Converter={StaticResource SaleIncomeConverter},ConverterParameter=ToleranceAmt}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_ToleranceAmt,Source={StaticResource ResSaleIncomeQuery}}" />

                                <ovsDataControls:DataGridTextColumn Width="60" CanUserSort="True" SortField="ShipPrice" Name="Grid_ShipPrice"
                                                                    CellStyle="{StaticResource DataGridRightAlignCell}"
                                                                    Binding="{Binding ShipPrice,Converter={StaticResource MoneyConverter}}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_ShipPrice,Source={StaticResource ResSaleIncomeQuery}}" />

                                <ovsDataControls:DataGridTextColumn Width="60" CanUserSort="True" SortField="ShippingFee" Name="Grid_ShippingFee"
                                                                    CellStyle="{StaticResource DataGridRightAlignCell}"
                                                                    Binding="{Binding ShippingFee,Converter={StaticResource MoneyConverter}}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_ShippingFee,Source={StaticResource ResSaleIncomeQuery}}" />

                                <ovsDataControls:DataGridTextColumn Width="60" CanUserSort="True" SortField="PackageFee" Name="Grid_PackageFee"
                                                                    CellStyle="{StaticResource DataGridRightAlignCell}"
                                                                    Binding="{Binding PackageFee,Converter={StaticResource MoneyConverter}}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_PackageFee,Source={StaticResource ResSaleIncomeQuery}}" />

                                <ovsDataControls:DataGridTextColumn Width="60" CanUserSort="True" SortField="RegisteredFee" Name="Grid_RegisteredFee"
                                                                    CellStyle="{StaticResource DataGridRightAlignCell}"
                                                                    Binding="{Binding RegisteredFee,Converter={StaticResource MoneyConverter}}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_RegisteredFee,Source={StaticResource ResSaleIncomeQuery}}" />

                                <ovsDataControls:DataGridTextColumn Width="60" CanUserSort="True" SortField="ShipCost" Name="Grid_ShipCost"
                                                                    CellStyle="{StaticResource DataGridRightAlignCell}"
                                                                    Binding="{Binding ShipCost,Converter={StaticResource MoneyConverter}}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_ShipCost,Source={StaticResource ResSaleIncomeQuery}}" />

                                <ovsDataControls:DataGridTextColumn Width="100" CanUserSort="True" SortField="IncomeUser" Name="Grid_IncomeUser"
                                                                    Binding="{Binding IncomeUser}"
                                                                    ovsDataControls:DataGridAttached.Header="{Binding Path=Grid_IncomeUser,Source={StaticResource ResSaleIncomeQuery}}" />

