<ovs:PageBase x:Class="ECCentral.Portal.UI.Invoice.Views.FinanceQuery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
        xmlns:ovs="clr-namespace:Newegg.Oversea.Silverlight.ControlPanel.Core.Base;assembly=Newegg.Oversea.Silverlight.ControlPanel.Core"
        xmlns:ovsControls="clr-namespace:Newegg.Oversea.Silverlight.Controls;assembly=Newegg.Oversea.Silverlight.Controls"
        xmlns:ovsDataControls="clr-namespace:Newegg.Oversea.Silverlight.Controls.Data;assembly=Newegg.Oversea.Silverlight.Controls.Data"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
        xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
        xmlns:dataprimitives="clr-namespace:System.Windows.Controls.Primitives;assembly=System.Windows.Controls.Data"
        xmlns:ucVendor="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.VendorPicker;assembly=ECCentral.Portal.Basic"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:behavior="clr-namespace:ECCentral.Portal.Basic.Behaviors;assembly=ECCentral.Portal.Basic"
        xmlns:localResource="clr-namespace:ECCentral.Portal.UI.Invoice.Resources"
        xmlns:ucPMPicker="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.PMPicker;assembly=ECCentral.Portal.Basic"
        xmlns:commonConverter="clr-namespace:ECCentral.Portal.Basic.Converters;assembly=ECCentral.Portal.Basic"
        xmlns:converter="clr-namespace:ECCentral.Portal.Basic.Utilities;assembly=ECCentral.Portal.Basic"
        xmlns:finance="clr-namespace:ECCentral.Portal.UI.Invoice.Converters"
        mc:Ignorable="d" d:DesignHeight="480" d:DesignWidth="800">
    <ovs:PageBase.Resources>
        <localResource:ResFinanceQuery x:Key="FinanceQuerySource"/>
        <commonConverter:ObjectToBoolConverter x:Key="MyObjectToBoolConverter" />
        <commonConverter:MoneyConverter x:Key="MoneyConverter"/>
        <commonConverter:DateTimeConverter x:Key="DateTimeConverter"/>
        <converter:BooleanConverter x:Key="BoolenConverter"/>
        <converter:EnumConverter x:Key="EnumConverter"/>
        <finance:FinanceConverter x:Name="FinanceConverter"/>
        <commonConverter:CurrencySpetorMoneyConverter x:Name="CurrencySpetorMoneyConverter"/>
        <Style x:Key="DataGridHeader" TargetType="dataprimitives:DataGridColumnHeader">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid x:Name="Root">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="MouseOverState" Storyboard.TargetProperty="Opacity">
                                                <SplineDoubleKeyFrame KeyTime="0" Value="1"/>
                                            </DoubleAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PressedState" Storyboard.TargetProperty="Opacity">
                                                <SplineDoubleKeyFrame KeyTime="0" Value="1"/>
                                            </DoubleAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="SortStates">
                                    <VisualState x:Name="Unsorted"/>
                                    <VisualState x:Name="SortAscending" />
                                    <VisualState x:Name="SortDescending" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>

                            <Border x:Name="NormalState"
                                Grid.ColumnSpan="2"
                                BorderBrush="#FF333333" 
                                BorderThickness="0 1">
                                <Grid>
                                    <Rectangle Stroke="#FF333333">
                                        <Rectangle.Effect>
                                            <DropShadowEffect Direction="280" ShadowDepth="1" BlurRadius="0" Opacity="0.05"/>
                                        </Rectangle.Effect>
                                        <Rectangle.Fill>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FF6E6E6E"/>
                                                <GradientStop Color="#FF4D4D4D" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <Rectangle>
                                        <Rectangle.Stroke>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FF8C8C8C" Offset="0"/>
                                                <GradientStop Color="#FF5F5F5F" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Stroke>
                                    </Rectangle>
                                </Grid>
                            </Border>

                            <Border x:Name="MouseOverState" 
                                Grid.ColumnSpan="2"  
                                Opacity="0"
                                BorderBrush="#FF333333" 
                                BorderThickness="0 1">
                                <Grid>
                                    <Rectangle Stroke="#FF333333">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FF8A8A8A"/>
                                                <GradientStop Color="#FF6F6F6F" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <Rectangle>
                                        <Rectangle.Stroke>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FFA5A5A5" Offset="0"/>
                                                <GradientStop Color="#FF7D7D7D" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Stroke>
                                    </Rectangle>
                                </Grid>
                            </Border>

                            <Border x:Name="PressedState"
                                Grid.ColumnSpan="2"
                                Opacity="0"
                                BorderBrush="#FF333333" 
                                BorderThickness="0 1">
                                <Grid>
                                    <Rectangle Stroke="#FF333333">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FF6E6E6E" Offset="1"/>
                                                <GradientStop Color="#FF4D4D4D"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <Rectangle>
                                        <Rectangle.Stroke>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FF8C8C8C" Offset="1"/>
                                                <GradientStop Color="#FF5F5F5F"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Stroke>
                                    </Rectangle>
                                </Grid>
                            </Border>
                            <Grid HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                          			VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left" Margin="4,0,0,0" />
                            </Grid>
                            <Rectangle x:Name="VerticalSeparator" 
									   Fill="#333333" Visibility="Visible" 
                               		   VerticalAlignment="Stretch" Width="1"
                               		   Grid.Row="1" Grid.Column="1"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </ovs:PageBase.Resources>
    <Grid x:Name="LayoutRoot">
        <ovsControls:FunctionPanel ContentHorizontalScrollBarVisibility="Disabled"
                                   ContentVerticalScrollBarVisibility="Disabled">
            <ovsControls:FunctionPanel.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <toolkit:Expander x:Name="SearchCondition"
                                      Grid.Row="0" Grid.Column="0"
                                      Header="{Binding Path=Expander_SearchCondition,Source={StaticResource FinanceQuerySource}}"
                                      IsExpanded="True">
                        <Grid x:Name="SeachBuilder" Margin="20,5">
                            <i:Interaction.Behaviors>
                                <behavior:EnterSearchBehavior ButtonName="btnSearch" />
                            </i:Interaction.Behaviors>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <!--查询条件开始-->
                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <Grid Name="QueryBuilder">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="30" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Row="0" Grid.Column="0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="200" />
                                                <ColumnDefinition Width="20"/>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="200" />
                                                <ColumnDefinition Width="20"/>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="200" />
                                                <ColumnDefinition Width="20"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Path=TextBlock_ApplyDate,Source={StaticResource FinanceQuerySource}}" Grid.Row="0" Grid.Column="0"></TextBlock>
                                            <ovsControls:DateRange Grid.Row="0" Grid.Column="1" SelectedDateStart="{Binding ApplyDateFrom,Mode=TwoWay}" SelectedDateEnd="{Binding ApplyDateTo,Mode=TwoWay}" x:Name="applyDate"/>
                                            <TextBlock Text="{Binding Path=TextBlock_PM,Source={StaticResource FinanceQuerySource}}" Grid.Row="0" Grid.Column="3"></TextBlock>
                                            <ucPMPicker:UCPMPicker Grid.Row="0" Grid.Column="4" SelectedPMSysNo="{Binding Path=PMUserSysNo, Mode=TwoWay}"/>
                                            <!--<TextBlock Text="{Binding Path=TextBlock_PMGroup,Source={StaticResource FinanceQuerySource}}" Grid.Row="0" Grid.Column="6"></TextBlock>
                                            <ucPMPicker:UCPMGroupPicker x:Name="cmbPMGroup" Grid.Row="0" Grid.Column="7" SelectedPMGroupSysNo="{Binding PMGroupSysNo,Mode=TwoWay}"></ucPMPicker:UCPMGroupPicker>-->
                                            <TextBlock Text="{Binding Path=TextBlock_PaySettleCompany,Source={StaticResource FinanceQuerySource}}" Grid.Row="0" Grid.Column="6"></TextBlock>
                                            <ovsControls:Combox x:Name="cmbPaySettleCompany" SelectedValue="{Binding PaySettleCompany,Mode=TwoWay}" DisplayMemberPath="Value" SelectedValuePath="Key" Grid.Row="0" Grid.Column="7"></ovsControls:Combox>
                                            <TextBlock Text="{Binding Path=TextBlock_Vendor,Source={StaticResource FinanceQuerySource}}" Grid.Row="1" Grid.Column="0"></TextBlock>
                                            <ucVendor:UCVendorPicker Name="ucVendorPicker" Grid.Row="1" Grid.Column="1" SelectedVendorSysNo="{Binding VendorNo, Mode=TwoWay}"></ucVendor:UCVendorPicker>
                                            <TextBlock Text="{Binding Path=TextBlock_Vendor_PayPeriod,Source={StaticResource FinanceQuerySource}}" Grid.Row="1" Grid.Column="3"></TextBlock>
                                            <ovsControls:Combox x:Name="cmbVendorPayPeriod" SelectedValue="{Binding VendorPayPeriod,Mode=TwoWay}" DisplayMemberPath="Name" SelectedValuePath="Code" Grid.Row="1" Grid.Column="4"></ovsControls:Combox>
                                            <TextBlock Text="{Binding Path=TextBlock_AuditStatus,Source={StaticResource FinanceQuerySource}}" Grid.Row="1" Grid.Column="6"></TextBlock>
                                            <ovsControls:Combox x:Name="cmbAuditStaus" SelectedValue="{Binding AuditStatus,Mode=TwoWay}" DisplayMemberPath="Name" SelectedValuePath="Code" Grid.Row="1" Grid.Column="7"></ovsControls:Combox>
                                            <TextBlock Text="{Binding Path=TextBlock_InvoiceID,Source={StaticResource FinanceQuerySource}}" Grid.Row="2" Grid.Column="3"></TextBlock>
                                            <TextBox x:Name="txtInvoiceID" Grid.Row="2" Grid.Column="4" Text="{Binding InvoiceID,Mode=TwoWay}" MaxLength="9"></TextBox>
                                            <TextBlock Text="{Binding Path=TextBlock_VendorName,Source={StaticResource FinanceQuerySource}}" Grid.Row="2" Grid.Column="0"></TextBlock>
                                            <TextBox x:Name="txtVendorName" Grid.Row="2" Grid.Column="1" Text="{Binding VendorName,Mode=TwoWay}"></TextBox>
                                            <CheckBox Grid.Row="2" Grid.Column="7"  Name="cbxVendorSummary" Content="{Binding Path=CheckBox_VendorSummary,Source={StaticResource FinanceQuerySource}}" Click="cbxVendorSummary_Click" IsChecked="{Binding IsGroupByVendor,Mode=TwoWay,Converter={StaticResource MyObjectToBoolConverter}}"></CheckBox>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            <!--查询条件结束-->
                            <controls:GridSplitter Grid.Row="0" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Center" Margin="5,0"></controls:GridSplitter>
                            <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Button Name="btnSearch" Content="{Binding Path=Button_Search,Source={StaticResource FinanceQuerySource}}" Click="btnSearch_Click" HorizontalAlignment="Right" Tag="/Themes/Default/Icons/Button/query.png" Margin="0 0 10 0"/>
                            </StackPanel>
                        </Grid>
                    </toolkit:Expander>
                    <ScrollViewer Grid.Row="1" x:Name="svStatisticInfo" Visibility="Collapsed"
                                  VerticalAlignment="Center"
                                  VerticalScrollBarVisibility="Disabled" 
                                  HorizontalScrollBarVisibility="Auto">
                        <Border Background="Azure" BorderBrush="Red" Padding="5" BorderThickness="1" Height="40">
                            <TextBlock x:Name="tbStatisticInfo" Foreground="Red"></TextBlock>
                        </Border>
                    </ScrollViewer>
                    <!--非按供应商汇总查询-->
                    <toolkit:Expander Name="SearchResult"  Grid.Row="2"
                                      Header="{Binding Path=Expander_SearchResults,Source={StaticResource FinanceQuerySource}}"
                                      IsExpanded="True"
                                      Padding="0">
                        <ovsDataControls:DataGrid Name="dgQueryResult"
                                                  LoadingDataSource="dgQueryResult_LoadingDataSource"
                                                  AutoGenerateColumns="False"
                                                  CanUserSortColumns="False"
                                                  GridID="7610617A-F1FF-4A9B-BA0C-67B6BADB0126"
                                                  IsReadOnly="True"
                                                  IsServerSort="True"
                                                  IsShowColumnsSelector="True"
                                                  IsShowExcelExporter="False"
                                                  ExportAllClick="dgQueryResult_ExportAllClick">
                            <ovsDataControls:DataGrid.Columns>
                                <ovsDataControls:DataGridTemplateColumn Width="50" CanUserSort="False">
                                    <ovsDataControls:DataGridTemplateColumn.HeaderStyle>
                                        <Style TargetType="dataprimitives:DataGridColumnHeader" BasedOn="{StaticResource FilterColumnHeaderStyle}">
                                            <Setter Property="Height" Value="23" />
                                            <Setter Property="Margin" Value="0 -2 0 0" />
                                            <Setter Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <CheckBox x:Name="ckbSelectAllRow" Click="ckbSelectAllRow_Click" />
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ovsDataControls:DataGridTemplateColumn.HeaderStyle>
                                    <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox Margin="10,0,0,0" IsChecked="{Binding IsCheck, Mode=TwoWay}" />
                                        </DataTemplate>
                                    </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                </ovsDataControls:DataGridTemplateColumn>
                                <ovsDataControls:DataGridTemplateColumn Width="50" CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_Operation,Source={StaticResource FinanceQuerySource}}">
                                    <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                <HyperlinkButton x:Name="hlkEdit" VerticalAlignment="Center" Click="hlkEdit_Click"
                                                             Content="{Binding Path=HyperlinkButton_Edit,Source={StaticResource FinanceQuerySource}}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                </ovsDataControls:DataGridTemplateColumn>
                                <ovsDataControls:DataGridTextColumn Width="80" CanUserSort="False"  ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_InvoiceID,Source={StaticResource FinanceQuerySource}}" Binding="{Binding OrderIDDisplay}" />
                                <ovsDataControls:DataGridTextColumn Width="100" CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_InvoiceType,Source={StaticResource FinanceQuerySource}}" Binding="{Binding OrderType,Converter={StaticResource EnumConverter}}"  />
                                <ovsDataControls:DataGridTextColumn Width="125"  CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_InvoiceDate,Source={StaticResource FinanceQuerySource}}" Binding="{Binding OrderDate,  Converter={StaticResource DateTimeConverter}, ConverterParameter=Long}" />
                                <ovsDataControls:DataGridTextColumn Width="100" CanUserSort="False"  SortField="PaySettleCompany" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_PaySettleCompany,Source={StaticResource FinanceQuerySource}}" Binding="{Binding PaySettleCompanyDisplay}" />
                                <ovsDataControls:DataGridTextColumn Width="100" CanUserSort="True" SortField="OrderAmt"  ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_ShouldPay,Source={StaticResource FinanceQuerySource}}" Binding="{Binding PayableAmt,Converter={StaticResource CurrencySpetorMoneyConverter}}"  />
                                <ovsDataControls:DataGridTextColumn Width="80"  CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_VendorNo,Source={StaticResource FinanceQuerySource}}" Binding="{Binding VendorSysNo}"  />
                                <ovsDataControls:DataGridTextColumn Width="Auto"  CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_VendorProperty,Source={StaticResource FinanceQuerySource}}" Binding="{Binding IsConsign}"  />
                                <ovsDataControls:DataGridTextColumn Width="Auto" CanUserSort="True" SortField="VendorName"  ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_Vendor,Source={StaticResource FinanceQuerySource}}" Binding="{Binding VendorName}"  />
                                <ovsDataControls:DataGridTextColumn Width="Auto"  CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_Vendor_PayPeriod,Source={StaticResource FinanceQuerySource}}" Binding="{Binding VendorPayType}"  />
                                <ovsDataControls:DataGridTextColumn Width="80"  CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_PM,Source={StaticResource FinanceQuerySource}}" Binding="{Binding PMName}"  />
                                <ovsDataControls:DataGridTextColumn Width="80"  CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_InvoiceStatus,Source={StaticResource FinanceQuerySource}}" Binding="{Binding Converter={StaticResource FinanceConverter},ConverterParameter=OrderStatus, StringFormat=.}"  />
                                <ovsDataControls:DataGridTextColumn Width="100"  CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_Invoice_Status,Source={StaticResource FinanceQuerySource}}" Binding="{Binding InvoiceStatus}"  />
                                <ovsDataControls:DataGridTextColumn Width="125"  CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_CreateDate,Source={StaticResource FinanceQuerySource}}" Binding="{Binding CreateTime,  Converter={StaticResource DateTimeConverter}, ConverterParameter=Long}"  />
                                <ovsDataControls:DataGridTextColumn Width="100"  CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_ShouldPayDate,Source={StaticResource FinanceQuerySource}}" Binding="{Binding OrderDate,  Converter={StaticResource DateTimeConverter}, ConverterParameter=Long}" NeedExport="False" />
                                <ovsDataControls:DataGridTextColumn Width="100"  CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_AuditStatus,Source={StaticResource FinanceQuerySource}}" Binding="{Binding AuditStatus, Converter={StaticResource EnumConverter}}"  />
                                <ovsDataControls:DataGridTextColumn Width="100"  CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_AuditInfo,Source={StaticResource FinanceQuerySource}}" Binding="{Binding AuditUserSysNo}"  />
                                <ovsDataControls:DataGridTextColumn Width="100"  CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_MoreThan90UnSalableAmt,Source={StaticResource FinanceQuerySource}}" Binding="{Binding ZXAmt,Converter={StaticResource CurrencySpetorMoneyConverter}}"/>
                                <ovsDataControls:DataGridTextColumn Width="100"  CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_TaxInventory,Source={StaticResource FinanceQuerySource}}" Binding="{Binding KCAmt,Converter={StaticResource CurrencySpetorMoneyConverter}}"  />
                                <ovsDataControls:DataGridTextColumn Width="100"  CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_IsVendorRepairParts,Source={StaticResource FinanceQuerySource}}" Binding="{Binding RMACount,Converter={StaticResource BoolenConverter}}" NeedExport="False" />
                                <ovsDataControls:DataGridTextColumn Width="125"  CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_ExpectedPayDate,Source={StaticResource FinanceQuerySource}}" Binding="{Binding ETP,  Converter={StaticResource DateTimeConverter}, ConverterParameter=Long}"  />
                            </ovsDataControls:DataGrid.Columns>
                        </ovsDataControls:DataGrid>
                    </toolkit:Expander>
                    <!--按供应商汇总查询-->
                    <toolkit:Expander Name="SearchResultByVendorGroup"  Grid.Row="2" Visibility="Collapsed"
                                      Header="{Binding Path=Expander_SearchResults,Source={StaticResource FinanceQuerySource}}"
                                      IsExpanded="True"
                                      Padding="0">
                        <ovsDataControls:DataGrid Name="dgVendorByGroupQueryResult"
                                                  LoadingDataSource="dgVendorByGroupQueryResult_LoadingDataSource"
                                                  AutoGenerateColumns="False"
                                                  CanUserSortColumns="False"
                                                  GridID="7610617A-F1FF-4A9B-BA0C-67B6BADB0126"
                                                  IsReadOnly="True"
                                                  IsServerSort="True"
                                                  IsShowColumnsSelector="True"
                                                  IsShowAllExcelExporter="True"
                                                  IsShowExcelExporter="False"
                                                  ExportAllClick="dgVendorByGroupQueryResult_ExportAllClick">
                            <ovsDataControls:DataGrid.Columns>
                                <ovsDataControls:DataGridTextColumn Width="80" HeaderStyle="{StaticResource DataGridHeader}"  ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_VendorNo,Source={StaticResource FinanceQuerySource}}" Binding="{Binding VendorSysNo}"  />
                                <ovsDataControls:DataGridTextColumn Width="Auto" HeaderStyle="{StaticResource DataGridHeader}"  ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_Vendor,Source={StaticResource FinanceQuerySource}}" Binding="{Binding VendorName}"  />
                                <ovsDataControls:DataGridTextColumn Width="Auto" HeaderStyle="{StaticResource DataGridHeader}"  ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_VendorProperty,Source={StaticResource FinanceQuerySource}}" Binding="{Binding IsConsign}"  />
                                <ovsDataControls:DataGridTextColumn Width="Auto" HeaderStyle="{StaticResource DataGridHeader}"  ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_PayeeCardNo,Source={StaticResource FinanceQuerySource}}" Binding="{Binding AccountID}"  />
                                <ovsDataControls:DataGridTextColumn Width="Auto" HeaderStyle="{StaticResource DataGridHeader}"  ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_PaySettleCompany,Source={StaticResource FinanceQuerySource}}" Binding="{Binding PaySettleCompanyDisplay}"  />
                                <ovsDataControls:DataGridTextColumn Width="Auto" HeaderStyle="{StaticResource DataGridHeader}"  ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_BankName,Source={StaticResource FinanceQuerySource}}" Binding="{Binding BankName}"  />
                                <ovsDataControls:DataGridTextColumn Width="Auto" HeaderStyle="{StaticResource DataGridHeader}"  ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_Vendor_PayPeriod,Source={StaticResource FinanceQuerySource}}" Binding="{Binding VendorPayType}"  />
                                <ovsDataControls:DataGridTextColumn Width="Auto" HeaderStyle="{StaticResource DataGridHeader}"  ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_Category1,Source={StaticResource FinanceQuerySource}}" Binding="{Binding C1Name}"  />
                                <ovsDataControls:DataGridTextColumn Width="100" HeaderStyle="{StaticResource DataGridHeader}"  ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_AuditInfo,Source={StaticResource FinanceQuerySource}}" Binding="{Binding AuditUser}"  />
                                <ovsDataControls:DataGridTextColumn Width="80" HeaderStyle="{StaticResource DataGridHeader}" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_IsVendorRepairParts,Source={StaticResource FinanceQuerySource}}" Binding="{Binding RMACount,Converter={StaticResource BoolenConverter}}"  />
                                <ovsDataControls:DataGridTextColumn Width="Auto" HeaderStyle="{StaticResource DataGridHeader}" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_TaxInventory,Source={StaticResource FinanceQuerySource}}" Binding="{Binding KCAmt,Converter={StaticResource CurrencySpetorMoneyConverter}}"  />
                                <!--未扣减的EIMS-->
                                <ovsDataControls:DataGridTemplateColumn CanUserSort="False" CanUserResize="False">
                                    <ovsDataControls:DataGridTemplateColumn.HeaderStyle>
                                        <Style TargetType="dataprimitives:DataGridColumnHeader">
                                            <Setter Property="Foreground" Value="#FFFFFF"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                                            <Setter Property="IsTabStop" Value="False"/>
                                            <Setter Property="Padding" Value="4"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate>
                                                        <Grid x:Name="Root">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <VisualStateManager.VisualStateGroups>
                                                                <VisualStateGroup x:Name="CommonStates">
                                                                    <VisualState x:Name="Normal"/>
                                                                    <VisualState x:Name="MouseOver">
                                                                        <Storyboard>
                                                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="MouseOverState" Storyboard.TargetProperty="Opacity">
                                                                                <SplineDoubleKeyFrame KeyTime="0" Value="1"/>
                                                                            </DoubleAnimationUsingKeyFrames>
                                                                        </Storyboard>
                                                                    </VisualState>
                                                                    <VisualState x:Name="Pressed">
                                                                        <Storyboard>
                                                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PressedState" Storyboard.TargetProperty="Opacity">
                                                                                <SplineDoubleKeyFrame KeyTime="0" Value="1"/>
                                                                            </DoubleAnimationUsingKeyFrames>
                                                                        </Storyboard>
                                                                    </VisualState>
                                                                </VisualStateGroup>
                                                                <VisualStateGroup x:Name="SortStates">
                                                                    <VisualState x:Name="Unsorted"/>
                                                                    <VisualState x:Name="SortAscending" />
                                                                    <VisualState x:Name="SortDescending" />
                                                                </VisualStateGroup>
                                                            </VisualStateManager.VisualStateGroups>

                                                            <Border x:Name="NormalState" Grid.ColumnSpan="2" BorderBrush="#FF333333" BorderThickness="0 1">
                                                                <Grid>
                                                                    <Rectangle Stroke="#FF333333">
                                                                        <Rectangle.Effect>
                                                                            <DropShadowEffect Direction="280" ShadowDepth="1" BlurRadius="0" Opacity="0.05"/>
                                                                        </Rectangle.Effect>
                                                                        <Rectangle.Fill>
                                                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                                                <GradientStop Color="#FF6E6E6E"/>
                                                                                <GradientStop Color="#FF4D4D4D" Offset="1"/>
                                                                            </LinearGradientBrush>
                                                                        </Rectangle.Fill>
                                                                    </Rectangle>
                                                                    <Rectangle>
                                                                        <Rectangle.Stroke>
                                                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                                                <GradientStop Color="#FF8C8C8C" Offset="0"/>
                                                                                <GradientStop Color="#FF5F5F5F" Offset="1"/>
                                                                            </LinearGradientBrush>
                                                                        </Rectangle.Stroke>
                                                                    </Rectangle>
                                                                </Grid>
                                                            </Border>

                                                            <Border x:Name="MouseOverState" Grid.ColumnSpan="2" Opacity="0" BorderBrush="#FF333333" BorderThickness="0 1">
                                                                <Grid>
                                                                    <Rectangle Stroke="#FF333333">
                                                                        <Rectangle.Fill>
                                                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                                                <GradientStop Color="#FF8A8A8A"/>
                                                                                <GradientStop Color="#FF6F6F6F" Offset="1"/>
                                                                            </LinearGradientBrush>
                                                                        </Rectangle.Fill>
                                                                    </Rectangle>
                                                                    <Rectangle>
                                                                        <Rectangle.Stroke>
                                                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                                                <GradientStop Color="#FFA5A5A5" Offset="0"/>
                                                                                <GradientStop Color="#FF7D7D7D" Offset="1"/>
                                                                            </LinearGradientBrush>
                                                                        </Rectangle.Stroke>
                                                                    </Rectangle>
                                                                </Grid>
                                                            </Border>

                                                            <Border x:Name="PressedState" Grid.ColumnSpan="2" Opacity="0" BorderBrush="#FF333333" BorderThickness="0 1">
                                                                <Grid>
                                                                    <Rectangle Stroke="#FF333333">
                                                                        <Rectangle.Fill>
                                                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                                                <GradientStop Color="#FF6E6E6E" Offset="1"/>
                                                                                <GradientStop Color="#FF4D4D4D"/>
                                                                            </LinearGradientBrush>
                                                                        </Rectangle.Fill>
                                                                    </Rectangle>
                                                                    <Rectangle>
                                                                        <Rectangle.Stroke>
                                                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                                                <GradientStop Color="#FF8C8C8C" Offset="1"/>
                                                                                <GradientStop Color="#FF5F5F5F"/>
                                                                            </LinearGradientBrush>
                                                                        </Rectangle.Stroke>
                                                                    </Rectangle>
                                                                </Grid>
                                                            </Border>

                                                            <Grid HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                          			                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="20" />
                                                                    <RowDefinition Height="1" />
                                                                    <RowDefinition Height="20" />
                                                                </Grid.RowDefinitions>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="100"/>
                                                                    <ColumnDefinition Width="1" />
                                                                    <ColumnDefinition Width="100"/>
                                                                    <ColumnDefinition Width="1" />
                                                                    <ColumnDefinition Width="100"/>
                                                                    <ColumnDefinition Width="1" />
                                                                    <ColumnDefinition Width="100"/>
                                                                    <ColumnDefinition Width="1" />
                                                                    <ColumnDefinition Width="100"/>
                                                                </Grid.ColumnDefinitions>
                                                                <!-- Row 0 -->
                                                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" Grid.ColumnSpan="8" Content="{Binding Path=DataGrid_Column_Head_UnDeductionEIMS,Source={StaticResource FinanceQuerySource}}" />
                                                                <!-- Row 1 -->
                                                                <Rectangle Fill="#FF333333" VerticalAlignment="Stretch" Height="1" Visibility="Visible" Grid.Row="1" Grid.ColumnSpan="12" />
                                                                <!-- Row 2 -->
                                                                <ContentPresenter Content="{Binding Path=DataGrid_Column_Head_VoteDeduction,Source={StaticResource FinanceQuerySource}}" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                                <Rectangle Fill="#FF333333" VerticalAlignment="Stretch" Width="1" Visibility="Visible" Grid.Row="2" Grid.Column="1" />
                                                                <ContentPresenter Content="{Binding Path=DataGrid_Column_Head_AccountDeduction,Source={StaticResource FinanceQuerySource}}" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                                <Rectangle Fill="#FF333333" VerticalAlignment="Stretch" Width="1" Visibility="Visible" Grid.Row="2" Grid.Column="3" />
                                                                <ContentPresenter Content="{Binding Path=DataGrid_Column_Head_PODeduction,Source={StaticResource FinanceQuerySource}}" Grid.Row="2" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                                <Rectangle Fill="#FF333333" VerticalAlignment="Stretch" Width="1" Visibility="Visible" Grid.Row="2" Grid.Column="5" />
                                                                <ContentPresenter Content="{Binding Path=DataGrid_Column_Head_ConsignmentDeduction,Source={StaticResource FinanceQuerySource}}" Grid.Row="2" Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                                <Rectangle Fill="#FF333333" VerticalAlignment="Stretch" Width="1" Visibility="Visible" Grid.Row="2" Grid.Column="7" />
                                                                <ContentPresenter Content="{Binding Path=DataGrid_Column_Head_Cash,Source={StaticResource FinanceQuerySource}}" Grid.Row="2" Grid.Column="8" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                            </Grid>
                                                            <Rectangle x:Name="VerticalSeparator" Fill="#333333" Visibility="Visible" VerticalAlignment="Stretch" Width="1" Grid.Row="0" Grid.Column="1"/>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>

                                    </ovsDataControls:DataGridTemplateColumn.HeaderStyle>
                                    <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100"></ColumnDefinition>
                                                    <ColumnDefinition Width="1"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"></ColumnDefinition>
                                                    <ColumnDefinition Width="1"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"></ColumnDefinition>
                                                    <ColumnDefinition Width="1"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"></ColumnDefinition>
                                                    <ColumnDefinition Width="1"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock  Grid.Column="0" Text="{Binding R4,Converter={StaticResource CurrencySpetorMoneyConverter} ,Mode=TwoWay, NotifyOnValidationError=True }"></TextBlock>
                                                <Rectangle Fill="#FFF1F1F1" VerticalAlignment="Stretch" Width="1" Grid.Column="1" />
                                                <TextBlock  Grid.Column="2" Text="{Binding R2,Converter={StaticResource CurrencySpetorMoneyConverter} ,Mode=TwoWay, NotifyOnValidationError=True }"></TextBlock>
                                                <Rectangle Fill="#FFF1F1F1" VerticalAlignment="Stretch" Width="1" Grid.Column="3" />
                                                <TextBlock  Grid.Column="4" Text="{Binding R0,Converter={StaticResource CurrencySpetorMoneyConverter} ,Mode=TwoWay, NotifyOnValidationError=True }"></TextBlock>
                                                <Rectangle Fill="#FFF1F1F1" VerticalAlignment="Stretch" Width="1" Grid.Column="5" />
                                                <TextBlock  Grid.Column="6" Text="{Binding R3,Converter={StaticResource CurrencySpetorMoneyConverter} ,Mode=TwoWay, NotifyOnValidationError=True }"></TextBlock>
                                                <Rectangle Fill="#FFF1F1F1" VerticalAlignment="Stretch" Width="1" Grid.Column="7" />
                                                <TextBlock  Grid.Column="8" Text="{Binding R1,Converter={StaticResource CurrencySpetorMoneyConverter} ,Mode=TwoWay, NotifyOnValidationError=True }"></TextBlock>
                                            </Grid>
                                        </DataTemplate>
                                    </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                </ovsDataControls:DataGridTemplateColumn>
                                <ovsDataControls:DataGridTextColumn Width="100" HeaderStyle="{StaticResource DataGridHeader}" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_NoReachPay,Source={StaticResource FinanceQuerySource}}" Binding="{Binding PayAmtUndue,Converter={StaticResource CurrencySpetorMoneyConverter}}"  />
                                <ovsDataControls:DataGridTextColumn Width="100" HeaderStyle="{StaticResource DataGridHeader}" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_ReachedPay,Source={StaticResource FinanceQuerySource}}" Binding="{Binding PayAmtMature,Converter={StaticResource CurrencySpetorMoneyConverter}}" FontWeight="Bold"  />
                                <ovsDataControls:DataGridTextColumn Width="Auto" HeaderStyle="{StaticResource DataGridHeader}" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_PayLockedAmt,Source={StaticResource FinanceQuerySource}}" Binding="{Binding PayAmtLocked,Converter={StaticResource CurrencySpetorMoneyConverter}}"/>
                                <ovsDataControls:DataGridTextColumn Width="Auto" HeaderStyle="{StaticResource DataGridHeader}" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_PayTotalAmt,Source={StaticResource FinanceQuerySource}}" Binding="{Binding PayAmtLeft,Converter={StaticResource CurrencySpetorMoneyConverter}}"  />
                                <ovsDataControls:DataGridTextColumn Width="Auto" HeaderStyle="{StaticResource DataGridHeader}" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_MoreThan90UnSalableAmt,Source={StaticResource FinanceQuerySource}}" Binding="{Binding ZXAmt,Converter={StaticResource CurrencySpetorMoneyConverter}}" />
                                <ovsDataControls:DataGridTextColumn Width="Auto" HeaderStyle="{StaticResource DataGridHeader}" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_PendingInvoiceAmount,Source={StaticResource FinanceQuerySource}}" Binding="{Binding PendingInvoiceAmount,Converter={StaticResource CurrencySpetorMoneyConverter}}" />
                                <ovsDataControls:DataGridTextColumn Width="Auto" HeaderStyle="{StaticResource DataGridHeader}" ovsDataControls:DataGridAttached.Header="{Binding Path=DataGrid_Column_Head_EndBalanceAccrued,Source={StaticResource FinanceQuerySource}}" Binding="{Binding EndBalanceAccrued,Converter={StaticResource CurrencySpetorMoneyConverter}}" />
                            </ovsDataControls:DataGrid.Columns>
                        </ovsDataControls:DataGrid>
                    </toolkit:Expander>
                </Grid>
            </ovsControls:FunctionPanel.Content>
            <ovsControls:FunctionPanel.FunctionContent>
                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" x:Name="functionPanel">
                    <Button x:Name="btnCaclMerged"  Content="{Binding Path=Button_Merged,Source={StaticResource FinanceQuerySource}}"
                        Click="btnCaclMerged_Click"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,1,7,1"
                        Tag="/Themes/Default/Icons/Button/edit-customer-memo.png"/>
                    <Button x:Name="btnAudit" Content="{Binding Path=Button_Audit,Source={StaticResource FinanceQuerySource}}"
                        Click="btnAudit_Click"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,1,7,1"
                        Tag="/Themes/Default/Icons/Button/crd.req.png"/>
                    <Button x:Name="btnRefuseAudit" Content="{Binding Path=Button_RefuseAudit,Source={StaticResource FinanceQuerySource}}"
                        Click="btnRefuseAudit_Click"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,1,7,1"
                        Tag="/Themes/Default/Icons/Button/BatchDeny.png"/>
                    <Button x:Name="btnBatchPay" Content="{Binding Path=Button_BatchPay,Source={StaticResource FinanceQuerySource}}"
                        Click="btnBatchPay_Click"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,1,7,1"
                        Tag="/Themes/Default/Icons/Button/BatchView.png"/>
                </StackPanel>
            </ovsControls:FunctionPanel.FunctionContent>
        </ovsControls:FunctionPanel>
    </Grid>
</ovs:PageBase>
