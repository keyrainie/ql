                            <TextBlock  Text=" " ></TextBlock>
                            <TextBlock  TextDecorations="Underline" Text="{Binding ProductRankPrice[1].RankPrice,Mode=TwoWay, Converter={StaticResource CurrencyMoneyConverter}}"  Foreground="Blue"/>
                        </StackPanel>
                        <!-- Row 7 end-->

