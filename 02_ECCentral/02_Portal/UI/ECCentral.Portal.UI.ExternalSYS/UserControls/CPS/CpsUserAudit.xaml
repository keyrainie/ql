<UserControl x:Class="ECCentral.Portal.UI.ExternalSYS.UserControls.CpsUserAudit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="White" Width="400">
        <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal" >
            <TextBlock Text="原因:"></TextBlock>
            <TextBox x:Name="txtInfo" Width="300" Height="200" VerticalAlignment="Top"></TextBox>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,30,0,0">
                <Button Content="确定" Width="80" Height="25" x:Name="BtnOK" Margin="5" Click="BtnOK_Click"></Button>
                <Button Content="取消" Width="80" Height="25" x:Name="BtnClose" Margin="5" Click="BtnClose_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
