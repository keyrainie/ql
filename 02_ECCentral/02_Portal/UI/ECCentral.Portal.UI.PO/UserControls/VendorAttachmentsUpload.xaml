<UserControl x:Class="ECCentral.Portal.UI.PO.UserControls.VendorAttachmentsUpload"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uploader="clr-namespace:ECCentral.Portal.Basic.Controls.Uploader;assembly=ECCentral.Portal.Basic"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Margin="20 5 20 5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <uploader:FileUploader  Name="ucFileUploader" Width="350"  DomainName="PO" MultiSelect="False" MultiUpload="False" Grid.Row="0" Grid.Column="1" AllFileUploadCompleted="ucFileUploader_AllFileUploadCompleted"></uploader:FileUploader>
    </Grid>
</UserControl>
