<ovs:PageBase x:Class="ECCentral.Portal.UI.PO.Views.PurchaseOrderQuery" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:ovs="clr-namespace:Newegg.Oversea.Silverlight.ControlPanel.Core.Base;assembly=Newegg.Oversea.Silverlight.ControlPanel.Core"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:dataprimitives="clr-namespace:System.Windows.Controls.Primitives;assembly=System.Windows.Controls.Data"
           xmlns:ucVendor="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.VendorPicker;assembly=ECCentral.Portal.Basic"
           xmlns:ucProduct="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.ProductPicker;assembly=ECCentral.Portal.Basic"
           xmlns:ucStock="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.StockPicker;assembly=ECCentral.Portal.Basic"
           xmlns:ucCurrency="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.CurrencyTypePicker;assembly=ECCentral.Portal.Basic"
           xmlns:ucPM="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.PMPicker;assembly=ECCentral.Portal.Basic"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
           xmlns:converter="clr-namespace:ECCentral.Portal.Basic.Utilities;assembly=ECCentral.Portal.Basic"
           xmlns:commonConverter="clr-namespace:ECCentral.Portal.Basic.Converters;assembly=ECCentral.Portal.Basic"
           xmlns:customConverter="clr-namespace:ECCentral.Portal.UI.PO.Views.ViewConverters"
           xmlns:pageConverter="clr-namespace:ECCentral.Portal.UI.PO.Converters"
           xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
           xmlns:ovsControls="clr-namespace:Newegg.Oversea.Silverlight.Controls;assembly=Newegg.Oversea.Silverlight.Controls"
           xmlns:resource="clr-namespace:ECCentral.Portal.UI.PO.Resources"
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"              
           xmlns:ovsDataControls="clr-namespace:Newegg.Oversea.Silverlight.Controls.Data;assembly=Newegg.Oversea.Silverlight.Controls.Data"
           mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480"
           >
    <ovs:PageBase.Resources>
        <converter:EnumConverter x:Key="EnumConverter" />
        <resource:ResPurchaseOrderQuery x:Key="PageResource"/>
        <commonConverter:DateTimeConverter x:Key="DateTimeConverter"/>
        <commonConverter:MoneyConverter x:Key="MoneyConverter"/>
        <pageConverter:PurchaseOrderConverter x:Key="QueryConverter"/>
    </ovs:PageBase.Resources>
    <Grid Background="Transparent">
        <ovsControls:FunctionPanel ContentVerticalScrollBarVisibility="Disabled" ContentHorizontalScrollBarVisibility="Disabled">
            <ovsControls:FunctionPanel.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <toolkit:Expander x:Name="SearchCondition"
                                      Grid.Row="0"
                                      Header="{Binding Path=Label_SearchCondition,
                                                       Source={StaticResource PageResource}}"
                                      IsExpanded="True">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical">
                                <StackPanel>
                                    <Grid Margin="20,5,5,5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"></ColumnDefinition>
                                            <ColumnDefinition Width="180"></ColumnDefinition>
                                            <ColumnDefinition Width="0"></ColumnDefinition>
                                            <ColumnDefinition Width="80"></ColumnDefinition>
                                            <ColumnDefinition Width="180"></ColumnDefinition>
                                            <ColumnDefinition Width="0"></ColumnDefinition>
                                            <ColumnDefinition Width="85"></ColumnDefinition>
                                            <ColumnDefinition Width="180"></ColumnDefinition>
                                            <ColumnDefinition Width="0"></ColumnDefinition>
                                            <ColumnDefinition Width="80"></ColumnDefinition>
                                            <ColumnDefinition Width="180"></ColumnDefinition>
                                            <ColumnDefinition Width="0"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <!--采购单编号-->
                                        <TextBlock Grid.Row="0" Grid.Column="0"  Text ="{Binding Path=Label_POSysNo,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                                        <TextBox Grid.Row="0" Grid.Column="1"  Name="txtPOSysNoExtention" Text="{Binding POSysNoExtention, Mode=TwoWay}"></TextBox>
                                        <!--商品-->
                                        <TextBlock Grid.Row="0" Grid.Column="3"  Text ="{Binding Path=Label_Product,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                                        <ucProduct:UCProductPicker Name="ucProduct" Grid.Row="0" Grid.Column="4" ProductSysNo="{Binding ProductSysNo, Mode=TwoWay}"></ucProduct:UCProductPicker>
                                        <!--仓库-->
                                        <TextBlock Grid.Row="0" Grid.Column="6"  Text ="{Binding Path=Label_Stock,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                                        <ucStock:UCStockComboBox Name="ucStock" Grid.Row="0" Grid.Column="7" Grid.ColumnSpan="3" SelectedStockSysNo="{Binding StockSysNo, Mode=TwoWay}"></ucStock:UCStockComboBox>

                                        
                                        <!--付款结算公司-->
                                        <!--<TextBlock Grid.Row="0" Grid.Column="9"  Text ="{Binding Path=Label_SettleCompany,
                                                       Source={StaticResource PageResource}}">
                                        </TextBlock>
                                        <ovsControls:Combox Grid.Row="0" Grid.Column="10" Name="cmbPaymentClearingCompany"  SelectedValuePath="Key" DisplayMemberPath="Value" SelectedValue="{Binding PaySettleCompany, Mode=TwoWay}"></ovsControls:Combox>-->
                                        <!--创建日期-->
                                        <TextBlock Grid.Row="1" Grid.Column="0"  Text ="{Binding Path=Label_CreateTime,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                                        <ovsControls:DateRange Margin="8 0 0 0" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" SelectedDateStart="{Binding CreateTimeBegin, Mode=TwoWay}" SelectedDateEnd="{Binding CreateTimeTo, Mode=TwoWay}"></ovsControls:DateRange>

                                        <TextBlock Grid.Row="1" Grid.Column="6"  Text ="预计到货时间："></TextBlock>
                                        <ovsControls:DateRange Margin="8 0 0 0" Grid.Row="1" Grid.Column="7" Grid.ColumnSpan="4" SelectedDateStart="{Binding ETATimeFrom, Mode=TwoWay}" SelectedDateEnd="{Binding ETATimeTo, Mode=TwoWay}"></ovsControls:DateRange>

                                        <!--物流单号-->
                                        <TextBlock Grid.Row="2" Grid.Column="0"  Text ="物流单号："></TextBlock>
                                        <TextBox Grid.Row="2" Grid.Column="1"  Name="txtLogisticsNumber" Text="{Binding LogisticsNumber, Mode=TwoWay}"></TextBox>

                                        <!--快递名称-->
                                        <TextBlock Grid.Row="2" Grid.Column="3"  Text ="快递名称："></TextBlock>
                                        <TextBox Grid.Row="2" Grid.Column="4"  Name="txtExpressName" Text="{Binding ExpressName, Mode=TwoWay}"></TextBox>

                                        <TextBlock                  Grid.Row="2" Grid.Column="6" Text="采购总价："               />
                                        <StackPanel                 Grid.Row="2" Grid.Column="7" Grid.ColumnSpan="3" Orientation="Horizontal">
                                            <TextBox x:Name="txtFromTotalAmount" Width="70"          Text="{Binding FromTotalAmount,Mode=TwoWay, ValidatesOnDataErrors=True}" />
                                            <TextBlock Text="—"/>
                                            <TextBox x:Name="txtToTotalAmount" Width="70"            Text="{Binding ToTotalAmount,Mode=TwoWay, ValidatesOnDataErrors=True}" />
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                                <StackPanel Name="spMoreQuery" Visibility="Collapsed">
                                    <Grid Margin="20,5,5,5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"></ColumnDefinition>
                                            <ColumnDefinition Width="180"></ColumnDefinition>
                                            <ColumnDefinition Width="0"></ColumnDefinition>
                                            <ColumnDefinition Width="80"></ColumnDefinition>
                                            <ColumnDefinition Width="180"></ColumnDefinition>
                                            <ColumnDefinition Width="0"></ColumnDefinition>
                                            <ColumnDefinition Width="85"></ColumnDefinition>
                                            <ColumnDefinition Width="180"></ColumnDefinition>
                                            <ColumnDefinition Width="0"></ColumnDefinition>
                                            <ColumnDefinition Width="80"></ColumnDefinition>
                                            <ColumnDefinition Width="180"></ColumnDefinition>
                                            <ColumnDefinition Width="0"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <!--入库日期-->
                                        <TextBlock Grid.Row="0" Grid.Column="0" Name="lblInStockDate"  Text ="{Binding Path=Label_InstockDate,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                                        <ovsControls:DateRange Margin="8 0 0 0" Name="cmbInStockDate"  Grid.Row="0" Grid.Column="1" SelectedDateStart="{Binding InStockFrom, Mode=TwoWay}" SelectedDateEnd="{Binding InStockTo, Mode=TwoWay}"></ovsControls:DateRange>
                                        <!--审核人-->
                                        <TextBlock Name="lblAuditUser"  Grid.Row="0" Grid.Column="3"  Text ="{Binding Path=Label_AuditUser,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                                        <TextBox  Grid.Row="0" Grid.Column="4" Name="txtAuditUser" Text="{Binding AuditUser, Mode=TwoWay}"></TextBox>
                                        <!--货币-->
                                        <TextBlock Name="lblCurrencyCode"  Grid.Row="0" Grid.Column="6"  Text ="{Binding Path=Label_Currency,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                                        <ucCurrency:UCCurrencyTypePicker  Name="cmbCurrency"  SelectedCurrencyType="{Binding CurrencySysNo, Mode=TwoWay}"  Grid.Row="0" Grid.Column="7"></ucCurrency:UCCurrencyTypePicker>
                                        <!--是否分摊-->
                                        <!--<TextBlock Name="lblIsApportion"  Grid.Row="0" Grid.Column="9"  Text ="{Binding Path=Label_IsApportion,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                                        <ovsControls:Combox Grid.Row="0" Grid.Column="10" Name="cmbIsApportion"  SelectedValuePath="Key" DisplayMemberPath="Value" SelectedValue="{Binding IsApportion, Mode=TwoWay}"></ovsControls:Combox>-->
                                        <!--代销-->
                                        <TextBlock Name="lblIsConsign"  Grid.Row="1" Grid.Column="0"  Text ="{Binding Path=Label_Consign,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                                        <ovsControls:Combox Grid.Row="1" Grid.Column="1" Name="cmbIsConsign"  SelectedValuePath="Key" DisplayMemberPath="Value" SelectedValue="{Binding IsConsign, Mode=TwoWay}"></ovsControls:Combox>
                                        <!--采购单状态-->
                                        <TextBlock Name="lblStatus"  Grid.Row="1" Grid.Column="3"  Text ="{Binding Path=Label_POStatus,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                                        <ovsControls:Combox Grid.Row="1" Grid.Column="4" Name="cmbStatus"  SelectedValuePath="Key" DisplayMemberPath="Value" SelectedValue="{Binding Status, Mode=TwoWay}"></ovsControls:Combox>
                                        <!--待审核状态-->
                                        <TextBlock Name="lblVerifyStatus"  Grid.Row="1" Grid.Column="6"  Text ="{Binding Path=Label_VerifyStatus,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                                        <ovsControls:Combox Grid.Row="1" Grid.Column="7" Name="cmbVerifyStatus"  SelectedValuePath="Key" DisplayMemberPath="Value" SelectedValue="{Binding VerifyStatus, Mode=TwoWay}"></ovsControls:Combox>
                                        <!--供应商-->
                                        <TextBlock Name="lblVendor" Grid.Row="1" Grid.Column="9"  Text ="{Binding Path=Label_Vendor,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                                        <ucVendor:UCVendorPicker Name="ucVendorPicker" Grid.Row="1" Grid.Column="10" SelectedVendorSysNo="{Binding VendorSysNo, Mode=TwoWay}" SelectedVendorName="{Binding VendorName, Mode=TwoWay}"></ucVendor:UCVendorPicker>
                                        <!--采购所属PM-->
                                        <TextBlock Name="lblPMSysNo"  Grid.Row="2" Grid.Column="0"  Text ="{Binding Path=Label_PMSysNo,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                                        <ucPM:UCPMPicker Name="ucPM" SelectedPMSysNo="{Binding PMSysNo, Mode=TwoWay}" Grid.Row="2" Grid.Column="1"></ucPM:UCPMPicker>
                                        <!--采购单创建人-->
                                        <TextBlock Name="lblCreateUser" Grid.Row="2" Grid.Column="3"  Text ="{Binding Path=Label_POCreateUser,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                                        <ucPM:UCPMPicker Grid.Row="2" Grid.Column="4"  Name="ucCreateUser" PMLoaded="ucCreateUser_PMLoaded"  SelectedPMSysNo="{Binding CreatePOSysNo, Mode=TwoWay}" ></ucPM:UCPMPicker>
                                        <!--采购单类型-->
                                        <TextBlock Name="lblPOType" Grid.Row="2" Grid.Column="6"  Text ="{Binding Path=Label_POType,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                                        <ovsControls:Combox Grid.Row="2" Grid.Column="7" Name="cmbPOType"  SelectedValuePath="Key" DisplayMemberPath="Value" SelectedValue="{Binding POType, Mode=TwoWay}"></ovsControls:Combox>
                                        <!--任务打印时间-->
                                        <TextBlock Name="lblPrintTime" Grid.Row="2" Grid.Column="9"  Text ="{Binding Path=Label_PrintTime,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                                        <sdk:DatePicker Grid.Row="2" Grid.Column="10" Name="dpPrintTime" SelectedDate="{Binding PrintTime, Mode=TwoWay}"></sdk:DatePicker>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                            <controls:GridSplitter Name="Spliterr_Query_Btn_1"
                                                   IsEnabled="False"
                                                   Margin="5,0,5,0"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Stretch" />
                            <!--查询-->
                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                <Button Name="btnSearch" Content="{Binding Path=Button_Search,
                                                       Source={StaticResource PageResource}}" Click="btnSearch_Click"  Tag="/Themes/Default/Icons/Button/query.png"/>
                                <!--高级查询-->
                                <CheckBox Grid.Row="1" Grid.Column="9" Name="chkAdvancedSearch" Click="chkAdvancedSearch_Click" Content="{Binding Path=Label_AdvancedSearch,
                                                       Source={StaticResource PageResource}}"></CheckBox>
                            </StackPanel>
                        </StackPanel>
                    </toolkit:Expander>
                    <!--采购单列表-->
                    <toolkit:Expander x:Name="SearchResult"
                                      Grid.Row="1"
                                      Header="{Binding Path=GridHeader_POList,
                                                       Source={StaticResource PageResource}}"
                                      IsExpanded="True">
                        <ovsDataControls:DataGrid Name="QueryResultGrid"
                                      MaxHeight="700"
                                      AutoGenerateColumns="False"
                                      PageSize="25"
                                      GridID="FDEB2749-1293-48D2-81CC-19DG43AB8135"
                                       IsShowExcelExporter="False"
                                       IsShowAllExcelExporter="True"
                                       IsShowColumnsSelector="True"
                                       CanUserSortColumns="True"
                                       IsServerSort="True"
                                       IsReadOnly="True"
                                           EnableCustomizeColumn="True"
                                         ExportAllClick="QueryResultGrid_ExportAllClick"
                                        LoadingDataSource="QueryResultGrid_LoadingDataSource">
                            
                            <ovsDataControls:DataGrid.Columns>

                                <ovsDataControls:DataGridTemplateColumn Name="CheckBox" Width="50" CanUserSort="False">
                                    <ovsDataControls:DataGridTemplateColumn.HeaderStyle>
                                        
                                        <Style  BasedOn="{StaticResource FilterColumnHeaderStyle}" TargetType="dataprimitives:DataGridColumnHeader">
                                            <Setter Property="Height" Value="23" />
                                            <Setter Property="Margin" Value="0 -2 0 0" />
                                            <Setter Property="ContentTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <CheckBox x:Name="ckbSelectAllRow" Click="ckbSelectAllRow_Click" />
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ovsDataControls:DataGridTemplateColumn.HeaderStyle>
                                    <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox Margin="10,0,0,0" IsChecked="{Binding [IsChecked], Mode=TwoWay}" />
                                        </DataTemplate>
                                    </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                </ovsDataControls:DataGridTemplateColumn>

                                <!--操作-->
                                <ovsDataControls:DataGridTemplateColumn Width="50" Name="colOperation"  ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_Operation,
                                                       Source={StaticResource PageResource}}">
                                   
                                    <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <!--<HyperlinkButton x:Name="Hyperlink_EditPO" Click="Hyperlink_EditPO_Click" Content="{Binding Path=GridHeader_Edit,
                                                       Source={StaticResource PageResource}}"/>-->
                                                <HyperlinkButton x:Name="Hyperlink_EditPO" Click="Hyperlink_EditPO_Click" Content="{Binding Converter={StaticResource QueryConverter}, ConverterParameter=OperateName}"/>

                                            </StackPanel>

                                        </DataTemplate>
                                    </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                </ovsDataControls:DataGridTemplateColumn>
                                <!--PO发送方式-->
                                <ovsDataControls:DataGridTemplateColumn Width="100"  Name="colSendType"  ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_POSendType,
                                                       Source={StaticResource PageResource}}">
                                    <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <HyperlinkButton x:Name="Hyperlink_Email" Click="Hyperlink_Email_Click"  Content="Email"/>
                                                <HyperlinkButton x:Name="Hyperlink_Print" Click="Hyperlink_Print_Click"  Content="{Binding Path=GridHeader_Print,
                                                       Source={StaticResource PageResource}}"/>

                                                <HyperlinkButton x:Name="Hyperlink_PrintWithoutPrice" Click="Hyperlink_PrintWithoutPrice_Click"  Content="{Binding Path=GridHeader_PrintWithoutPrice,
                                                       Source={StaticResource PageResource}}"/>

                                            </StackPanel>
                                        </DataTemplate>
                                    </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                </ovsDataControls:DataGridTemplateColumn>
                                <!--编号-->
                                <ovsDataControls:DataGridTextColumn Width="70" Name="colSysNo" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_SysNo,
                                                       Source={StaticResource PageResource}}" SortField="po.poid" Binding="{Binding [poid]}"></ovsDataControls:DataGridTextColumn>
                                <!--采购单状态-->

                                <ovsDataControls:DataGridTemplateColumn Width="110" Name="colStatus" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_Status,
                                                       Source={StaticResource PageResource}}" SortField="po.status">
                                    <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding [status],Converter={StaticResource EnumConverter}}" Foreground="{Binding Converter={StaticResource QueryConverter}, ConverterParameter=Status}"></TextBlock>
                                        </DataTemplate>
                                    </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                </ovsDataControls:DataGridTemplateColumn>


                                <!--商家-->
                                <ovsDataControls:DataGridTextColumn Width="250" Name="colVendorname" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_VendorName,
                                                       Source={StaticResource PageResource}}" SortField="vendor.vendorname" Binding="{Binding [vendorname]}"></ovsDataControls:DataGridTextColumn>
                                <!--所在仓库-->
                                <ovsDataControls:DataGridTextColumn Width="110" Name="colStockname" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_StockName,
                                                       Source={StaticResource PageResource}}" SortField="po.stocksysno" Binding="{Binding [stockname]}"></ovsDataControls:DataGridTextColumn>
                                <!--创建时间-->
                                <ovsDataControls:DataGridTextColumn Width="110" Name="colCreatetime" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_CreateTime,
                                                       Source={StaticResource PageResource}}" SortField="po.createtime" Binding="{Binding [CreateTimeAndUser]}"></ovsDataControls:DataGridTextColumn>
                                <!--初审人-->
                                <ovsDataControls:DataGridTextColumn Width="80" Name="colApportionUserName" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_ApportionUser,
                                                       Source={StaticResource PageResource}}" SortField="con_apport.DisplayName" Binding="{Binding [ApportionTimeAndUser]}"></ovsDataControls:DataGridTextColumn>
                                <!--终审人-->
                                <ovsDataControls:DataGridTextColumn Width="80" Name="colAuditname" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_AuditName,
                                                       Source={StaticResource PageResource}}" SortField="con_audit.DisplayName" Binding="{Binding [AuditTimeAndUser]}"></ovsDataControls:DataGridTextColumn>
                                <!--最后一次任务打印时间-->
                                <ovsDataControls:DataGridTextColumn Width="130" Name="colPrintTime" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_PrintTime,
                                                       Source={StaticResource PageResource}}" SortField="a.MaxTastDate" Binding="{Binding [MaxTastDate],Converter={StaticResource DateTimeConverter},ConverterParameter=Long}"></ovsDataControls:DataGridTextColumn>
                                <!--入库时间-->
                                <ovsDataControls:DataGridTextColumn Width="80" Name="colInTime" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_InstockTime,
                                                       Source={StaticResource PageResource}}" SortField="po.intime" Binding="{Binding [InTimeAndUser]}"></ovsDataControls:DataGridTextColumn>
                                <!--PM与供应商确认-->
                                <ovsDataControls:DataGridTextColumn Width="80" Name="colComfirmUser" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_PMConfirm,
                                                       Source={StaticResource PageResource}}" SortField="com_user.DisplayName" Binding="{Binding [ConfirmTimeAndUser]}"></ovsDataControls:DataGridTextColumn>
                                <!--预计付款时间-->
                                <ovsDataControls:DataGridTextColumn Width="80" Name="colEtp" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_PrePayTime,
                                                       Source={StaticResource PageResource}}" SortField="po.etp" Binding="{Binding [etp],Converter={StaticResource DateTimeConverter}, ConverterParameter=Long}"></ovsDataControls:DataGridTextColumn>
                                <!--计划采购总价-->
                                <ovsDataControls:DataGridTextColumn Width="100" Name="colPreCount"  CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_PreCount,
                                                       Source={StaticResource PageResource}}" SortField="pocount.PreCount" Binding="{Binding [PreCount],Converter={StaticResource MoneyConverter}}"></ovsDataControls:DataGridTextColumn>
                                <!--计划采购总数量-->
                                <ovsDataControls:DataGridTextColumn Width="100" Name="colAllPurchaseQty"  CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_AllPurchaseQty,
                                                       Source={StaticResource PageResource}}" SortField="pocount.AllPurchaseQty" Binding="{Binding [AllPurchaseQty]}"></ovsDataControls:DataGridTextColumn>
                                <!--实际采购总价-->
                                <ovsDataControls:DataGridTextColumn Width="100" Name="colQtyCount"  CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_QtyCount,
                                                       Source={StaticResource PageResource}}" SortField="pocount.QtyCount" Binding="{Binding [QtyCount],Converter={StaticResource MoneyConverter}}"></ovsDataControls:DataGridTextColumn>
                                <!--预计到货时间-->
                                <ovsDataControls:DataGridTextColumn Width="100" Name="colETATime"  CanUserSort="True" ovsDataControls:DataGridAttached.Header="预计到货时间" SortField="pocount.ETATime" Binding="{Binding [ETATime]}"></ovsDataControls:DataGridTextColumn>
                                <!--实际采购数量-->
                                <ovsDataControls:DataGridTextColumn Width="100" Name="colAllQuantity"  CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_AllQty,
                                                       Source={StaticResource PageResource}}" SortField="pocount.AllQuantity" Binding="{Binding [AllQuantity]}"></ovsDataControls:DataGridTextColumn>
                                <!--关闭时间-->
                                <ovsDataControls:DataGridTextColumn Width="100" Name="colCloseTime"  CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_CloseTime,
                                                       Source={StaticResource PageResource}}" SortField="po.CloseTime" Binding="{Binding [CloseTimeAndUser], Converter={StaticResource DateTimeConverter}, ConverterParameter=Long}"></ovsDataControls:DataGridTextColumn>
                                <ovsDataControls:DataGridTextColumn Width="80"  Name="colEIMSNoList" CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_EIMSNo,
                                                       Source={StaticResource PageResource}}" SortField="EIMSNoList" Binding="{Binding [EIMSNoList]}" Visibility="Collapsed"></ovsDataControls:DataGridTextColumn>

                                <ovsDataControls:DataGridTextColumn Width="80" Name="colEIMSAmt"  CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_EIMSAmt,
                                                       Source={StaticResource PageResource}}" SortField="EIMSAmt" Binding="{Binding [EIMSAmt],Converter={StaticResource MoneyConverter}}" Visibility="Collapsed"></ovsDataControls:DataGridTextColumn>

                                <ovsDataControls:DataGridTextColumn Width="80" Name="colUsedEIMSAmt"  CanUserSort="False" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_UsedEIMSAmt,
                                                       Source={StaticResource PageResource}}" SortField="UsedEIMSAmt" Binding="{Binding [UsedEIMSAmt],Converter={StaticResource MoneyConverter}}" Visibility="Collapsed"></ovsDataControls:DataGridTextColumn>
                            </ovsDataControls:DataGrid.Columns>
                        </ovsDataControls:DataGrid>
                    </toolkit:Expander>

                    <!--送修超过15天催讨未果RMA List,请协助-->
                    <toolkit:Expander x:Name="SearchRMAResult" Visibility="Collapsed"
                                      Grid.Row="2"
                                      Header="{Binding Path=Label_RMA,
                                                       Source={StaticResource PageResource}}"
                                      IsExpanded="False">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                            </Grid.ColumnDefinitions>
                            <StackPanel  Grid.Row="0" Orientation="Horizontal">
                                <!--查询-->
                                <Button Name="btnSearchRMA" Content="{Binding Path=Button_Search,
                                                       Source={StaticResource PageResource}}" Width="70"  HorizontalAlignment="Left"  Click="btnSearchRMA_Click"  Tag="/Themes/Default/Icons/Button/query.png"/>
                                <!--转到RMA查询-->
                                <Button Name="btnRedirectRMA" Content="{Binding Path=Button_GoToRMASearch,
                                                       Source={StaticResource PageResource}}" HorizontalAlignment="Left" Click="btnRedirectRMA_Click" Tag="/Themes/Default/Icons/Button/post.png"/>
                            </StackPanel>

                            <ovsDataControls:DataGrid Name="QueryResultGrid_RMA"
                                      Grid.Row="1"
                                      AutoGenerateColumns="False"
                                      PageSize="25"
                                      MaxHeight="250"
                                      GridID="154AA02D-0ABE-4819-8E66-F5B2450FA5E3"
                                       IsShowExcelExporter="False"
                                       IsShowAllExcelExporter="False"
                                       IsShowColumnsSelector="True"
                                       CanUserSortColumns="True"
                                       IsServerSort="True"
                                       IsReadOnly="True"
                                        LoadingDataSource="QueryResultGrid_RMA_LoadingDataSource">
                                <ovsDataControls:DataGrid.Columns>
                                    <!--PM-->
                                    <ovsDataControls:DataGridTextColumn Width="120" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_PM,
                                                       Source={StaticResource PageResource}}" SortField="PMUserName" Binding="{Binding [PMUserName]}"></ovsDataControls:DataGridTextColumn>

                                    <!--RMA编号-->

                                    <ovsDataControls:DataGridTemplateColumn Width="100" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_RMASysNo,
                                                       Source={StaticResource PageResource}}">
                                        <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <HyperlinkButton Name="Hyperlink_RMATracking" Click="Hyperlink_RMATracking_Click" Content="{Binding [RMASysNo]}"></HyperlinkButton>
                                            </DataTemplate>
                                        </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                    </ovsDataControls:DataGridTemplateColumn>

                                    <!--商品编号-->
                                    <ovsDataControls:DataGridTextColumn Width="250" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_ProductID,
                                                       Source={StaticResource PageResource}}" SortField="ProductID" Binding="{Binding [ProductID]}"></ovsDataControls:DataGridTextColumn>
                                    <!--商品名称-->
                                    <ovsDataControls:DataGridTextColumn Width="700" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_ProductName,
                                                       Source={StaticResource PageResource}}" SortField="ProductName" Binding="{Binding [ProductName]}"></ovsDataControls:DataGridTextColumn>
                                </ovsDataControls:DataGrid.Columns>
                            </ovsDataControls:DataGrid>
                        </Grid>

                    </toolkit:Expander>
                </Grid>
            </ovsControls:FunctionPanel.Content>
            <ovsControls:FunctionPanel.FunctionContent>
                <!--  Function Fanel区域 Start  -->
                <StackPanel Orientation="Horizontal">
                    <!--创建采购单-->
                    <Button x:Name="btnCreatePO"
                            Margin="10,1,10,1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{Binding Path=Button_CreatePO,
                                                       Source={StaticResource PageResource}}"
                            Style="{StaticResource ButtonBStyle}"
                            Click="btnCreatePO_Click"
                            Tag="/Themes/Default/Icons/Button/edit.png" />
                    <!--按采购单状态统计-->
                    <Button x:Name="btnCountPO"
                            Margin="10,1,10,1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{Binding Path=Button_CountPO,
                                                       Source={StaticResource PageResource}}"
                            Style="{StaticResource ButtonBStyle}"
                            Click="btnCountPO_Click"
                            Tag="/Themes/Default/Icons/Button/edit-address.png" />

                    <!--批量打印-->
                    <Button x:Name="btnBatchPrint"
                            Margin="10,1,10,1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{Binding Path=Botton_BatchPrintData,
                                                       Source={StaticResource PageResource}}"
                            Style="{StaticResource ButtonBStyle}"
                            Click="btnBatchPrint_Click"
                            Tag="/Themes/Default/Icons/Button/print.png" />
                </StackPanel>
                <!--  Function Fanel区域 End  -->
            </ovsControls:FunctionPanel.FunctionContent>
        </ovsControls:FunctionPanel>
    </Grid>
</ovs:PageBase>

