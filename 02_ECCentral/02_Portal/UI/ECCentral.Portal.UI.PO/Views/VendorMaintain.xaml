<ovs:PageBase x:Class="ECCentral.Portal.UI.PO.Views.VendorMaintain" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:ovs="clr-namespace:Newegg.Oversea.Silverlight.ControlPanel.Core.Base;assembly=Newegg.Oversea.Silverlight.ControlPanel.Core"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
           xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
           xmlns:ovsControls="clr-namespace:Newegg.Oversea.Silverlight.Controls;assembly=Newegg.Oversea.Silverlight.Controls"
           xmlns:converter="clr-namespace:ECCentral.Portal.Basic.Utilities;assembly=ECCentral.Portal.Basic"
           xmlns:commonConverter="clr-namespace:ECCentral.Portal.Basic.Converters;assembly=ECCentral.Portal.Basic"
           xmlns:resource="clr-namespace:ECCentral.Portal.UI.PO.Resources"
           xmlns:ovsDataControls="clr-namespace:Newegg.Oversea.Silverlight.Controls.Data;assembly=Newegg.Oversea.Silverlight.Controls.Data"
           xmlns:uploader="clr-namespace:ECCentral.Portal.Basic.Controls.Uploader;assembly=ECCentral.Portal.Basic"
           xmlns:ucArea="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.AreaPicker;assembly=ECCentral.Portal.Basic"
           xmlns:localConverter="clr-namespace:ECCentral.Portal.UI.PO.Converters"
           xmlns:uc="clr-namespace:ECCentral.Portal.UI.PO.UserControls"
                            xmlns:ucEport="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.EPortPicker;assembly=ECCentral.Portal.Basic"
           mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480">
    <ovs:PageBase.Resources>
        <converter:EnumConverter x:Key="EnumConverter" />
        <resource:ResVendorMaintain x:Key="PageResource"/>
        <commonConverter:DateTimeConverter x:Key="DateTimeConverter"/>
        <commonConverter:MoneyConverter x:Key="MoneyConverter"/>
        <commonConverter:SubStringConverter x:Key="SubStringConverter"/>
        <localConverter:VendorMaintainConverter x:Key="VendorConverter"/>
    </ovs:PageBase.Resources>
    <Grid Background="Transparent">
        <ovsControls:FunctionPanel ContentVerticalScrollBarVisibility="Auto" ContentHorizontalScrollBarVisibility="Disabled">
            <ovsControls:FunctionPanel.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <!--**********基本信息************-->
                    <toolkit:Expander x:Name="BasicInfo"
                                      Grid.Row="0"
                                      Header="{Binding Path=Label_BasicInfo,
                                                       Source={StaticResource PageResource}}"
                                      IsExpanded="True">
                        <Grid Margin="20,5,20,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <!--供应商编号-->
                            <TextBlock Grid.Row="0" Grid.Column="0"  Text ="{Binding Path=Label_VendorSysNo,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="0" Grid.Column="1"  Name="txtVendorID" Width="220" IsReadOnly="True" Text="{Binding SysNo, Mode=TwoWay}"></TextBox>
                            <!--全称-->
                            <TextBlock Grid.Row="0" Grid.Column="2"  Text ="{Binding Path=Label_VendorName,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="0" Grid.Column="3"  Name="txtVendorNameLocal" Width="220" Text="{Binding VendorBasicInfo.VendorNameLocal, Mode=TwoWay}" IsReadOnly="True"></TextBox>
                            <!--英文名-->
                            <TextBlock Grid.Row="0" Grid.Column="4"  Text ="{Binding Path=Label_VendorNameGlobal,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="0" Grid.Column="5"  Name="txtVendorNameGlobal" Width="220" Text="{Binding VendorBasicInfo.VendorNameGlobal, Mode=TwoWay}"></TextBox>
                            <!--简称-->
                            <TextBlock Grid.Row="0" Grid.Column="6"  Text ="{Binding Path=Label_BriefName,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="0" Grid.Column="7"  Name="txtVendorBriefName" Width="220" Text="{Binding VendorBasicInfo.VendorBriefName, Mode=TwoWay, NotifyOnValidationError=True}" MaxLength="50"></TextBox>
                            <!--区域-->
                            <TextBlock Grid.Row="1" Grid.Column="0"  Text ="{Binding Path=Label_Area,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="1" Grid.Column="1"  Name="txtDistrict" Width="220" Text="{Binding VendorBasicInfo.District, Mode=TwoWay, NotifyOnValidationError=True}" MaxLength="100"></TextBox>
                            <!--邮编-->
                            <TextBlock Grid.Row="1" Grid.Column="2"  Text ="{Binding Path=Label_ZipCode,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="1" Grid.Column="3"  Name="txtZipCode" Width="220" Text="{Binding VendorBasicInfo.ZipCode, Mode=TwoWay, NotifyOnValidationError=True}"  MaxLength="6"></TextBox>
                            <!--地址-->
                            <TextBlock Grid.Row="1" Grid.Column="4"  Text ="{Binding Path=Label_Address,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="1" Grid.Column="5"  Name="txtAddress" Width="220" Text="{Binding VendorBasicInfo.Address, Mode=TwoWay, NotifyOnValidationError=True}" MaxLength="100"></TextBox>
                            <!--联系人-->
                            <TextBlock Grid.Row="1" Grid.Column="6"  Text ="{Binding Path=Label_Contact,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="1" Grid.Column="7"  Name="txtContact" Width="220" Text="{Binding VendorBasicInfo.Contact, Mode=TwoWay, NotifyOnValidationError=True}" MaxLength="20"></TextBox>
                            <!--传真-->
                            <TextBlock Grid.Row="2" Grid.Column="0"  Text ="{Binding Path=Label_Fax,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="2" Grid.Column="1"  Name="txtFax" Width="220" Text="{Binding VendorBasicInfo.Fax, Mode=TwoWay, NotifyOnValidationError=True}" MaxLength="50"></TextBox>
                            <!--电话-->
                            <TextBlock Grid.Row="2" Grid.Column="2"  Text ="{Binding Path=Label_Phone,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="2" Grid.Column="3"  Name="txtPhone" Width="220" Text="{Binding VendorBasicInfo.Phone, Mode=TwoWay, NotifyOnValidationError=True}" MaxLength="50"></TextBox>
                            <!--手机-->
                            <TextBlock Grid.Row="2" Grid.Column="4"  Text ="{Binding Path=Label_CellPhone,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="2" Grid.Column="5"  Name="txtCellPhone" Width="220" Text="{Binding VendorBasicInfo.CellPhone, Mode=TwoWay, NotifyOnValidationError=True}" MaxLength="50"></TextBox>
                            <!--网址-->
                            <TextBlock Grid.Row="2" Grid.Column="6"  Text ="{Binding Path=Label_Site,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="2" Grid.Column="7"  Name="txtWebsite" Width="220" Text="{Binding VendorBasicInfo.Website, Mode=TwoWay, NotifyOnValidationError=True}"  MaxLength="100"></TextBox>
                            <!--公告-->
                            <TextBlock Grid.Row="3" Grid.Column="0"  Text ="{Binding Path=Label_Bulletin,
                                                       Source={StaticResource PageResource}}" VerticalAlignment="Center"></TextBlock>
                            <TextBox Grid.Row="3" Grid.Column="1"  Name="txtBulletin" Width="220" TextWrapping="Wrap" Height="40" VerticalScrollBarVisibility="Visible" AcceptsReturn="True" Text="{Binding VendorBasicInfo.ExtendedInfo.Bulletin, Mode=TwoWay}" MaxLength="400"></TextBox>
                            <!--商家简介-->
                            <TextBlock Grid.Row="3" Grid.Column="2"  Text ="{Binding Path=Label_Desc,
                                                       Source={StaticResource PageResource}}" VerticalAlignment="Center"></TextBlock>
                            <TextBox Grid.Row="3" Grid.Column="3"  Name="txtBreifInfo" Width="220" TextWrapping="Wrap" Height="40" VerticalScrollBarVisibility="Visible" AcceptsReturn="True" Text="{Binding  VendorBasicInfo.ExtendedInfo.BriefInfo, Mode=TwoWay}" MaxLength="400"></TextBox>
                            <!--电子邮箱-->
                            <TextBlock Grid.Row="3" Grid.Column="4"  Text ="{Binding Path=Label_Mail,
                                                       Source={StaticResource PageResource}}" VerticalAlignment="Center"></TextBlock>

                            <StackPanel Orientation="Horizontal"  Grid.Row="3" Grid.Column="5">

                                <ovsControls:Combox Name="cmbVendorMailAddress" Width="190"></ovsControls:Combox>
                                <Image Source="/Themes/Default/Images/Button/edit.png" Name="btnEditVendorMailAddress"  Cursor="Hand" Width="16" Height="16" MouseLeftButtonDown="btnEditVendorMailAddress_MouseLeftButtonDown">
                                </Image>
                            </StackPanel>


                            <StackPanel  Grid.Row="3" Grid.Column="6" Grid.ColumnSpan="2" Orientation="Horizontal">
                                <!--前台展示-->
                                <TextBlock  Text ="{Binding Path=Label_IsShowStore,
                                                           Source={StaticResource PageResource}}" VerticalAlignment="Center"></TextBlock>
                                <CheckBox  Name="chkIsShowStore" IsEnabled ="False" VerticalAlignment="Center" DataContext="{Binding VendorBasicInfo.ExtendedInfo}" IsChecked="{Binding IsShowStore, Mode=TwoWay}"></CheckBox>


                                <TextBlock  Text ="QQ号码："></TextBlock>
                                <TextBox  Name="txtQQNumber" DataContext="{Binding VendorBasicInfo.ExtendedInfo}" Text="{Binding QQNumber, Mode=TwoWay, NotifyOnValidationError=True}" MaxLength="12" Width="80"></TextBox>
                                <TextBlock Text="开启在线聊天"></TextBlock>
                                <CheckBox Name="chkIM_Enabled" DataContext="{Binding VendorBasicInfo.ExtendedInfo}" IsChecked="{Binding IM_Enabled, Mode=TwoWay}" ></CheckBox>

                            </StackPanel>



                            <TextBlock Grid.Row="4" Grid.Column="0"  Text ="{Binding Path=Label_Status,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <ovsControls:Combox Name="cmbVendorStatus" Grid.Row="4" Grid.Column="1" SelectedValuePath="Key" DisplayMemberPath="Value" SelectedValue="{Binding VendorBasicInfo.VendorStatus, Mode=TwoWay}"></ovsControls:Combox>
                            <TextBlock Grid.Row="4" Grid.Column="2"  Text ="{Binding Path=Label_VendorIsCooperate,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <ovsControls:Combox Name="cmbVendorIsCooperate" Grid.Row="4" Grid.Column="3" SelectedValuePath="Key" DisplayMemberPath="Value"
                                                SelectedValue="{Binding VendorBasicInfo.VendorIsCooperate, Mode=TwoWay}"></ovsControls:Combox>

                            <TextBlock Grid.Row="4" Grid.Column="4"  Text ="供应商代码"></TextBlock>
                            <TextBox Grid.Row="4" Grid.Column="5"  Width="220" IsReadOnly="True" Text="{Binding VendorBasicInfo.VendorID, Mode=TwoWay}"></TextBox>

                            <Button Name="Button_LanguageSetting"  Grid.Row="4" Grid.Column="6"
                                   VerticalAlignment="Center" Margin="3,0,0,0"
                                    Click="Button_LanguageSetting_Click"
                    
                                  Content="{Binding Btn_LanguageSetting,Source={StaticResource PageResource}}"/>

                            <!--业务模式-->
                            <ovsControls:GroupBox x:Name="BusinessModeGroup" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="10" Margin="0 10 0 10"  Header="{Binding Path=Label_OprType,
                                                       Source={StaticResource PageResource}}">
                                <Grid x:Name="LayoutRoot"  Margin="0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <!--开票方式-->
                                    <TextBlock Grid.Row="0" Grid.Column="0"  Text ="商家类型:"></TextBlock>
                                    <ovsControls:Combox Grid.Row="0" Grid.Column="1" Width="220" Name="cmbInvoiceType" SelectedValuePath="Key" DisplayMemberPath="Value"  DataContext="{Binding VendorBasicInfo.ExtendedInfo}" SelectedValue="{Binding InvoiceType, Mode=TwoWay}"></ovsControls:Combox>
                                    <!--仓储方式-->
                                    <TextBlock Grid.Row="0" Grid.Column="2"  Text ="{Binding Path=Label_StockType,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                                    <ovsControls:Combox Grid.Row="0" Grid.Column="3" Width="220" Name="cmbStockType" 
                                                        SelectedValuePath="Key" DisplayMemberPath="Value"   
                                                        DataContext="{Binding VendorBasicInfo.ExtendedInfo}" SelectedValue="{Binding StockType, Mode=TwoWay}">
                                    </ovsControls:Combox>
                                    <!--配送方式-->
                                    <TextBlock Grid.Row="0" Grid.Column="4"  Text ="{Binding Path=Label_ShipType,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                                    <ovsControls:Combox Grid.Row="0" Grid.Column="5" Width="220" Name="cmbShippingType" SelectedValuePath="Key" DisplayMemberPath="Value"  DataContext="{Binding VendorBasicInfo.ExtendedInfo}" SelectedValue="{Binding ShippingType, Mode=TwoWay}"></ovsControls:Combox>
                                    <!--<TextBlock Grid.Row="0" Grid.Column="6"  Text ="电子口岸" Name="lblEPort"></TextBlock>
                                    <ucEport:UCEPortPicker IsEnabled="False" Name="cmbEPort"  Grid.Row="0" Grid.Column="7" Width="220" SelectedEPort="{Binding VendorBasicInfo.EPortSysNo, Mode=TwoWay}" AppendItemType="Select"/>-->
                                    <!--默认送货分仓-->
                                    <TextBlock Grid.Row="0" Grid.Column="6"  Text ="{Binding Path=Label_DefaultStock,
                                                       Source={StaticResource PageResource}}" Name="lblDefaultStock" Visibility="Collapsed"></TextBlock>
                                    <ovsControls:Combox Grid.Row="0" Grid.Column="7" Width="220" Name="cmbDefaultStock" SelectedValuePath="Key" DisplayMemberPath="Value" IsEnabled="False" Visibility="Collapsed"></ovsControls:Combox>
                                    <!--转租赁-->
                                    <TextBlock Grid.Row="1" Grid.Column="0"  Text ="{Binding Path=Label_IsToLease, Source={StaticResource PageResource}}"></TextBlock>
                                    <ovsControls:Combox Grid.Row="1" Grid.Column="1" Width="220" Name="cmbIsToLease"  SelectedValuePath="Key" DisplayMemberPath="Value"  SelectedValue="{Binding VendorBasicInfo.VendorIsToLease,Mode=TwoWay}" ></ovsControls:Combox>
                                </Grid>
                            </ovsControls:GroupBox>
                            <!--供应商属性-->
                            <TextBlock Grid.Row="6" Grid.Column="0" Visibility="Collapsed"  Text ="{Binding Path=Label_VendorConsign,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <ovsControls:Combox Grid.Row="6" Grid.Column="1" Visibility="Collapsed"  Width="220" Name="cmbConsignFlag" SelectedValuePath="Key" DisplayMemberPath="Value" SelectedValue="{Binding VendorBasicInfo.ConsignFlag, Mode=TwoWay}" ></ovsControls:Combox>
                            <!--等级-->
                            <TextBlock Grid.Row="6" Grid.Column="2"  Visibility="Collapsed"   Text ="{Binding Path=Label_VendorLevel,
                                                       Source={StaticResource PageResource}}" ></TextBlock>
                            <ovsControls:Combox Grid.Row="6" Grid.Column="3" Visibility="Collapsed"  Width="220" Name="cmbRank" SelectedValuePath="Key" DisplayMemberPath="Value"   SelectedValue="{Binding VendorBasicInfo.RequestVendorRank, Mode=TwoWay}"></ovsControls:Combox>
                            <!--店租佣金合计-->
                            <TextBlock Grid.Row="6" Grid.Column="0"  Text ="{Binding Path=Label_VendorTotalRent,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="6" Grid.Column="1"  Name="txtTotalRentFees" Width="220" IsReadOnly="True"></TextBox>
                            <TextBlock Grid.Row="6" Grid.Column="2"  Text ="{Binding Path=Label_VendorTotalRentUnit,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBlock Foreground="Blue"  Grid.Row="6" Grid.Column="3"  Grid.ColumnSpan="3" Text ="{Binding Path=Label_VendorTotalRentDesc,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <!--收费规则-->
                            <TextBlock Grid.Row="7" Grid.Column="0"  Text ="{Binding Path=Label_RentRule,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBlock Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="7"  Text ="{Binding Path=Label_CommissionCalc,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <!--下单日期-->
                            <!--<TextBlock Grid.Row="8" Grid.Column="0" Name="txtBuyWeekDay"  Text ="{Binding Path=Label_BuyWeekDay,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Name="spVendorBuyWeekCheckBoxList"  Margin="0 5"  Grid.Row="8" Grid.Column="1" Grid.ColumnSpan ="7" HorizontalAlignment="Left">
                                <CheckBox Name="ckbMonday" Tag="1"  Content="{Binding Path=Label_Mon,
                                                       Source={StaticResource PageResource}}"></CheckBox>
                                <CheckBox Name="ckbTuesday" Tag="2"  Content="{Binding Path=Label_Tus,
                                                       Source={StaticResource PageResource}}"></CheckBox>
                                <CheckBox Name="ckbWednesday" Tag="3"  Content="{Binding Path=Label_Wed,
                                                       Source={StaticResource PageResource}}"></CheckBox>
                                <CheckBox Name="ckbThursday" Tag="4"  Content="{Binding Path=Label_Thu,
                                                       Source={StaticResource PageResource}}"></CheckBox>
                                <CheckBox Name="ckbFriday" Tag="5" Content="{Binding Path=Label_Fri,
                                                       Source={StaticResource PageResource}}"></CheckBox>
                            </StackPanel>-->
                        </Grid>

                    </toolkit:Expander>
                    <!--********** 高级信息************-->
                    <toolkit:Expander x:Name="AdvancedInfo"
                                      Grid.Row="1"
                                      Header="{Binding Path=Label_AdvanceInfo,
                                                       Source={StaticResource PageResource}}"
                                      IsExpanded="True">
                        <Grid Margin="20,5,20,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <ovsControls:GroupBox Header="" Grid.Row="0">
                                <sdk:TabControl  x:Name="tabVendorAdvancedInfo" Margin="5,0" Style="{StaticResource MiniTabControlStyle}">
                                    <!--********** 代理信息************-->

                                    <sdk:TabItem Header="{Binding Path=Label_Agent,
                                                       Source={StaticResource PageResource}}" Style="{StaticResource MiniFirstTabItemStyle}">
                                        <Grid x:Name="gridVendorAgentInfo">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <ovsDataControls:DataGrid Grid.Row="0"  Width="1215"  MaxHeight="180"  Name="dataGrid_VendorAgentInfo" GridID="6FC9D11D-3F09-460A-8A7E-C3669C8DA483" AutoGenerateColumns="False" IsReadOnly="True"  IsShowPager="False" IsServerSort="False"  IsShowColumnsSelector="False" LoadingDataSource="dataGrid_VendorAgentInfo_LoadingDataSource">
                                                <ovsDataControls:DataGrid.Columns>
                                                    <!--查看-->
                                                    <ovsDataControls:DataGridTemplateColumn ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_View,
                                                       Source={StaticResource PageResource}}" Width="60">
                                                        <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <HyperlinkButton x:Name="hpl_AgentInfoView" Click="hpl_AgentInfoView_Click"  Content="{Binding Path=GridHeader_View,
                                                       Source={StaticResource PageResource}}"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                                    </ovsDataControls:DataGridTemplateColumn>
                                                    <!--操作-->
                                                    <ovsDataControls:DataGridTemplateColumn ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_Operation,
                                                       Source={StaticResource PageResource}}" Width="60">
                                                        <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <HyperlinkButton x:Name="hpl_AgentInfoEdit" Click="hpl_AgentInfoEdit_Click"  Content="{Binding Path=GridHeader_Edit,
                                                       Source={StaticResource PageResource}}"/>
                                                                    <HyperlinkButton x:Name="hpl_AgentInfoDelete" Click="hpl_AgentInfoDelete_Click"  Content="{Binding Path=GridHeader_Delete,
                                                       Source={StaticResource PageResource}}"/>

                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                                    </ovsDataControls:DataGridTemplateColumn>
                                                    <!--代理厂商-->
                                                    <ovsDataControls:DataGridTextColumn Width="80" Binding="{Binding ManufacturerInfo.ManufacturerNameDisplay}"  ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_ManufacturerName,
                                                       Source={StaticResource PageResource}}"/>
                                                    <!--代理品牌-->
                                                    <ovsDataControls:DataGridTextColumn Width="150" Binding="{Binding BrandInfo.BrandNameDisplay}"  ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_ManufacturerBrand,
                                                       Source={StaticResource PageResource}}"/>
                                                    <!--产品类别-->
                                                    <ovsDataControls:DataGridTextColumn Width="150" Binding="{Binding CName}"  ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_Category,
                                                       Source={StaticResource PageResource}}"/>
                                                    <!--代理级别-->
                                                    <ovsDataControls:DataGridTextColumn Width="80" Binding="{Binding AgentLevel}" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_AgentLevel,
                                                       Source={StaticResource PageResource}}"/>
                                                    <!--审核状态-->
                                                    <ovsDataControls:DataGridTextColumn Width="80" Binding="{Binding RequestType, Converter={StaticResource EnumConverter}}"  ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_RequestType,
                                                       Source={StaticResource PageResource}}"/>
                                                    <!--商检编号-->
                                                    <ovsDataControls:DataGridTextColumn Width="80" Binding="{Binding StoreBrandFilingInfo.InspectionNo}"  ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_InspectionNo,
                                                       Source={StaticResource PageResource}}"/>
                                                    <!--操作类型-->
                                                    <ovsDataControls:DataGridTextColumn Width="80" Binding="{Binding CheckType, Converter={StaticResource EnumConverter}}"  ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_OprType,
                                                       Source={StaticResource PageResource}}"/>
                                                    <!--结算类型-->
                                                    <ovsDataControls:DataGridTextColumn Width="80" Binding="{Binding SettleType, Converter={StaticResource EnumConverter}}"  ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_SettleType,
                                                       Source={StaticResource PageResource}}" Visibility="Collapsed"/>
                                                    <!--佣金百分比-->
                                                    <ovsDataControls:DataGridTextColumn Width="80" Binding="{Binding SettlePercentage}"  ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_SettlePercentage,
                                                       Source={StaticResource PageResource}}" Visibility="Collapsed"/>
                                                    <!--修改内容-->
                                                    <ovsDataControls:DataGridTemplateColumn Width="200" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_Modify,Source={StaticResource PageResource}}">
                                                        <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="{Binding Content,Converter={StaticResource SubStringConverter},ConverterParameter=15,Mode=TwoWay}"></TextBlock>
                                                                    <HyperlinkButton x:Name="hlbtnViewDetails" Content="详细" Visibility="{Binding Converter={StaticResource VendorConverter},ConverterParameter=ViewDetails}" Click="hlbtnViewDetials_Click"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                                    </ovsDataControls:DataGridTemplateColumn>
                                                </ovsDataControls:DataGrid.Columns>
                                            </ovsDataControls:DataGrid>
                                            <StackPanel Grid.Row="1" Orientation="Horizontal" >
                                                <!--新增代理信息-->
                                                <Button x:Name="btnNewAgentInfo"
                             
                            Margin="0,1,10,1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Click="btnNewAgentInfo_Click"
                            Content="{Binding Path=Button_NewAgent, Source={StaticResource PageResource}}"
                            Tag="/Themes/Default/Icons/Button/crdLog.png" />
                                                <!--导出品牌信息-->
                                                <!--<Button x:Name="btnExportBrandInfo"
                            Margin="0,1,10,1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Click="btnExportBrandInfo_Click"
