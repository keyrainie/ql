                            Margin="10,1,10,1"
                            Grid.Row="1"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{Binding Path=Button_Print,
                                                       Source={StaticResource PageResource}}"
                      IsEnabled="False"
                            Style="{StaticResource ButtonBStyle}"
                            Click="btnPrint_Click"
                            Tag="/Themes/Default/Icons/Button/print.png" />
                    <!--打印（包括附件）-->
                    <Button x:Name="btnPrintAppend"
                            Margin="10,1,10,1"
                            Grid.Row="1"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{Binding Path=Button_PrintAppend,
                                                       Source={StaticResource PageResource}}"
                     IsEnabled="False"
                            Style="{StaticResource ButtonBStyle}"
                            Click="btnPrintAppend_Click"
                            Tag="/Themes/Default/Icons/Button/print.png" />
                    <!--更新入库备注和到付运费金额-->
                    <Button x:Name="btnOperateInStockMemoAndTotalAmt"
                            Margin="10,1,10,1"
                            Grid.Row="1"
                            Grid.Column="3"
                            Grid.ColumnSpan="2"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                          IsEnabled="False"
                            Content="{Binding Path=Button_UpdateInstockMemo,
                                                       Source={StaticResource PageResource}}"
                            Style="{StaticResource ButtonBStyle}"
                            Click="btnOperateInStockMemoAndTotalAmt_Click"
                            Tag="/Themes/Default/Images/Button/refresh.png" />
                    <!--中止入库-->
                    <Button x:Name="btnOperatePartlyInStock"
                            Margin="10,1,10,1"
                            Grid.Row="1"
                            Grid.Column="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{Binding Path=Button_PartlyInStock,
                                                       Source={StaticResource PageResource}}"
                      IsEnabled="False"
                            Style="{StaticResource ButtonBStyle}"
                            Click="btnOperatePartlyInStock_Click"
                            Tag="/Themes/Default/Images/Button/void.png" />
                    <!--补充创建PO单-->
                    <Button x:Name="btnOperateReNewPO"
                            Margin="10,1,10,1"
                            Grid.Row="1"
                            Grid.Column="6"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{Binding Path=Button_OperateRenewPO,
                                                       Source={StaticResource PageResource}}"
                            IsEnabled="False"
                            Style="{StaticResource ButtonBStyle}"
                            Click="btnOperateReNewPO_Click"
                            Tag="/Themes/Default/Images/Button/edit.png" />
                    <!--创建PO单(待PM确认状态)-->
                    <Button x:Name="btnNewPO"
                            Margin="10,1,10,1"
                            Grid.Row="1"
                            Grid.Column="7"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{Binding Path=Button_NewPO,
                                                       Source={StaticResource PageResource}}"
                         IsEnabled="False"
                            Style="{StaticResource ButtonBStyle}"
                            Click="btnNewPO_Click"
                            Tag="/Themes/Default/Images/Button/edit.png" />
                    <!--退回(待PM确认状态)-->
                    <Button x:Name="btnCancelPO"
                            Margin="10,1,10,1"
                            Grid.Row="1"
                            Grid.Column="8"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{Binding Path=Button_CancelPO,
                                                       Source={StaticResource PageResource}}"
                           IsEnabled="False"
                            Style="{StaticResource ButtonBStyle}"
                            Click="btnCancelPO_Click"
                            Tag="/Themes/Default/Icons/Button/cancel-rush-order.png" />
                </Grid>
                <!--  Function Fanel区域 End  -->
            </ovsControls:FunctionPanel.FunctionContent>

        </ovsControls:FunctionPanel>

    </Grid>
</ovs:PageBase>
