<ovs:PageBase x:Class="ECCentral.Portal.UI.PO.Views.PurchaseOrderMaintain" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:ovs="clr-namespace:Newegg.Oversea.Silverlight.ControlPanel.Core.Base;assembly=Newegg.Oversea.Silverlight.ControlPanel.Core"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:ucCommon="clr-namespace:ECCentral.Portal.Basic.UserControls;assembly=ECCentral.Portal.Basic"
           xmlns:ucVendor="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.VendorPicker;assembly=ECCentral.Portal.Basic"
           xmlns:dataprimitives="clr-namespace:System.Windows.Controls.Primitives;assembly=System.Windows.Controls.Data"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
           xmlns:converter="clr-namespace:ECCentral.Portal.Basic.Utilities;assembly=ECCentral.Portal.Basic"
           xmlns:commonConverter="clr-namespace:ECCentral.Portal.Basic.Converters;assembly=ECCentral.Portal.Basic"
           xmlns:customConverter="clr-namespace:ECCentral.Portal.UI.PO.Views.ViewConverters"
           xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
           xmlns:resource="clr-namespace:ECCentral.Portal.UI.PO.Resources"
           xmlns:ovsControls="clr-namespace:Newegg.Oversea.Silverlight.Controls;assembly=Newegg.Oversea.Silverlight.Controls"
           xmlns:ovsDataControls="clr-namespace:Newegg.Oversea.Silverlight.Controls.Data;assembly=Newegg.Oversea.Silverlight.Controls.Data"
           mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480"
           >
    <ovs:PageBase.Resources>
        <converter:EnumConverter x:Key="EnumConverter" />
        <commonConverter:MoneyConverter x:Key="MoneyConverter"/>
        <resource:ResPurchaseOrderMaintain x:Key="PageResource"/>
        <converter:CodeNamePairConverter x:Key="CodeNamePairConverter" />
        <commonConverter:DateTimeConverter x:Key="DateTimeConverter"/>
    </ovs:PageBase.Resources>
    <Grid Background="Transparent">
        <ovsControls:FunctionPanel ContentVerticalScrollBarVisibility="Auto"  ContentHorizontalScrollBarVisibility="Disabled">
            <ovsControls:FunctionPanel.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!--供应商信息-->
                    <toolkit:Expander x:Name="VendorInfo"
                                      Grid.Row="0"
                                      Header="{Binding Path=Label_VendorInfo,
                                                       Source={StaticResource PageResource}}"
                                      IsExpanded="True">
                        <Grid Margin="20,5,20,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <!--供应商-->
                            <TextBlock Grid.Row="0" Grid.Column="0"  Text ="{Binding Path=Label_VendorName,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <ucVendor:UCVendorPicker Name="ucVendor" Grid.Row="0" Grid.Column="1" SelectedVendorSysNo="{Binding VendorInfo.SysNo, Mode=TwoWay}"  SelectedVendorName="{Binding VendorInfo.VendorBasicInfo.VendorNameLocal, Mode=TwoWay}" VendorSelected="ucVendor_VendorSelected"></ucVendor:UCVendorPicker>
                          
                            <!--支付类型-->
                            <TextBlock Grid.Row="0" Grid.Column="4"  Text ="{Binding Path=Label_PayType,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="0" Grid.Column="5"  Name="txtPayTypeName" Width="220" Text="{Binding VendorInfo.VendorFinanceInfo.PayPeriodType.PayTermsName, Mode=TwoWay}" IsReadOnly="True"></TextBox>
                            <!--供应商状态-->
                            <TextBlock Grid.Row="0" Grid.Column="6"  Text ="{Binding Path=Label_VendorStatus,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="0" Grid.Column="7"  Name="txtProductsSysNo" Width="220" Text="{Binding VendorInfo.VendorBasicInfo.VendorStatus, Mode=TwoWay, Converter={StaticResource EnumConverter}}" IsReadOnly="True" VerticalAlignment="Top"></TextBox>
                            <!--送修超过15天催讨未果RMAList,请协助(0)-->
                            <HyperlinkButton Margin="5 0 0 0" Visibility="Collapsed"  Foreground="Red" Name="hpkRMAOver15Days" Grid.Row="1" Grid.Column="1" Click="hpkRMAOver15Days_Click"></HyperlinkButton>
                            <TextBlock Grid.Row="2" Grid.Column="0"  Text ="{Binding Path=Label_AgentInfo,
                                                       Source={StaticResource PageResource}}" ></TextBlock>
                            <!--供应商代理信息-->
                            <ovsDataControls:DataGrid Name="gridVendorAgentInfo"
                                      Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"
                                      AutoGenerateColumns="False"
                                      MaxHeight="150"
                                      LoadingDataSource="gridVendorAgentInfo_LoadingDataSource"
                                      GridID="CA3029E5-1F16-4DA6-97BC-8A4F40A55F4F"
                                       IsShowPager="False"
                                       IsServerSort="False"
                                       IsShowColumnsSelector="False"
                                       IsReadOnly="True">
                                <ovsDataControls:DataGrid.Columns>
                                    <!--代理品牌-->
                                    <ovsDataControls:DataGridTextColumn Width="160" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=Label_Brand,
                                                       Source={StaticResource PageResource}}" Binding="{Binding ManufacturerInfo.ManufacturerNameDisplay}"></ovsDataControls:DataGridTextColumn>
                                    <!--产品类别-->
                                    <ovsDataControls:DataGridTextColumn Width="160" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=Label_Category,
                                                       Source={StaticResource PageResource}}" Binding="{Binding CName}"></ovsDataControls:DataGridTextColumn>
                                    <!--代理级别-->
                                    <ovsDataControls:DataGridTextColumn Width="160" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=Label_AgentLevel,
                                                       Source={StaticResource PageResource}}" Binding="{Binding AgentLevel}"></ovsDataControls:DataGridTextColumn>
                                </ovsDataControls:DataGrid.Columns>
                            </ovsDataControls:DataGrid>
                            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="4">
                                <!--自动Email-->
                                <TextBlock  Text ="{Binding Path=Label_AutoMail,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                                <CheckBox Name="chkAutoEmail" Click="chkAutoEmail_Click" ></CheckBox>
                                <!--PO收件人列表-->
                                <TextBlock  Text ="{Binding Path=Label_ReceiveList,
                                                       Source={StaticResource PageResource}}" ></TextBlock>

                                <ListBox Name="lbPOReceivePersonList" Width="220"  Height="70"  MaxHeight="70" IsEnabled="True"></ListBox>
                                <!--维护收件人列表-->
                                <HyperlinkButton  HorizontalAlignment="Left" VerticalAlignment="Center"  Name="hpkMaintainReceivePerson" Content="{Binding Path=Label_ReceiveListMaintain,
                                                       Source={StaticResource PageResource}}" Click="hpkMaintainReceivePerson_Click"></HyperlinkButton>
                            </StackPanel>

                        </Grid>
                    </toolkit:Expander>

                    <toolkit:Expander x:Name="POInfo"
                                      Grid.Row="1"
                                      Header="{Binding Path=Label_POInfo,
                                                       Source={StaticResource PageResource}}"
                                      IsExpanded="True">
                        <Grid Margin="20,5,20,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="280"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <!--采购单编号-->
                            <TextBlock Grid.Row="0" Grid.Column="0"  Text ="{Binding Path=Label_POSysNo,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="0" Grid.Column="1"  Name="txtPOSysNo" Width="260" Text="{Binding PurchaseOrderBasicInfo.PurchaseOrderID, Mode=TwoWay}" IsReadOnly="True"></TextBox>
                            <!--账期属性-->
                            <TextBlock Grid.Row="0" Grid.Column="2"  Text ="{Binding Path=Label_Consign,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="0" Grid.Column="3"  Name="txtConsignFlag" Width="220" Text="{Binding PurchaseOrderBasicInfo.ConsignFlag, Mode=TwoWay, Converter={StaticResource EnumConverter}}" IsReadOnly="True"></TextBox>
                            <!--到付运费金额-->
                            <TextBlock Grid.Row="0" Grid.Column="4"  Text ="{Binding Path=Label_CarrigeCost,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="0" Grid.Column="5"  Name="txtCarriageCost" Width="220" Text="{Binding PurchaseOrderBasicInfo.CarriageCost, Mode=TwoWay, Converter={StaticResource MoneyConverter}}" IsReadOnly="True"></TextBox>
                            
                            <!--总价格-->
                            <TextBlock Grid.Row="1" Grid.Column="0"  Text ="{Binding Path=Label_Amt,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="1" Grid.Column="1"  Name="txtTotalAmt" Width="260" Text="{Binding PurchaseOrderBasicInfo.TotalAmtDisplayString, Mode=TwoWay, Converter={StaticResource MoneyConverter}}" IsReadOnly="True"></TextBox>
                            <!--计划采购数量-->
                            <TextBlock Grid.Row="1" Grid.Column="2"  Text ="{Binding Path=Label_PlanedPurchaseQty,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="1" Grid.Column="3"  Name="txtAllPurchaseQty" Width="220" Text="{Binding PurchaseOrderBasicInfo.PlanedPurchaseQty, Mode=TwoWay}" IsReadOnly="True"></TextBox>
                            <!--已入库总金额-->
                            <TextBlock Grid.Row="1" Grid.Column="4"  Text ="{Binding Path=Label_TotalAmt,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="1" Grid.Column="5"  Name="txtTotalActualPrice" Width="220" Text="{Binding PurchaseOrderBasicInfo.TotalActualPriceDisplayString, Mode=TwoWay, Converter={StaticResource MoneyConverter}}" IsReadOnly="True"></TextBox>
                            
                            <!--已入库总数量-->
                            <TextBlock Grid.Row="2" Grid.Column="0"  Text ="{Binding Path=Label_TotalQty,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="2" Grid.Column="1"  Name="txtAllQuantity" Width="260" Text="{Binding PurchaseOrderBasicInfo.TotalQty, Mode=TwoWay}" IsReadOnly="True"></TextBox>

                            <!--创建时间-->
                            <TextBlock Grid.Row="2" Grid.Column="2"  Text ="{Binding Path=Label_CreateTime,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="2" Grid.Column="3"  Name="txtCreateTime" Width="220" Text="{Binding PurchaseOrderBasicInfo.CreateDate, Mode=TwoWay,  Converter={StaticResource DateTimeConverter}, ConverterParameter=Long }" IsReadOnly="True"></TextBox>

                            <!--采购单状态-->
                            <TextBlock Grid.Row="2" Grid.Column="4"  Text ="{Binding Path=Label_Status,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="2" Grid.Column="5"  Name="txtStatus" Width="220" Text="{Binding PurchaseOrderBasicInfo.PurchaseOrderStatus, Mode=TwoWay, Converter={StaticResource EnumConverter}}" IsReadOnly="True"></TextBox>
                            
                            <!--采购单类型-->
                            <TextBlock Grid.Row="3" Grid.Column="0"  Text ="{Binding Path=Label_Type,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="3" Grid.Column="1"  Name="txtPOType" Width="260" Text="{Binding PurchaseOrderBasicInfo.PurchaseOrderType, Converter={StaticResource EnumConverter}}" IsReadOnly="True"></TextBox>
                            
                            <!--增值税率-->
                            <TextBlock Grid.Row="3" Grid.Column="2"  Text ="{Binding Path=Label_Tax,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <ovsControls:Combox Grid.Row="3" Grid.Column="3" Name="cmbTaxRate" Width="220" SelectedValuePath="Key" DisplayMemberPath="Value" SelectedValue="{Binding PurchaseOrderBasicInfo.TaxRateType, Mode=TwoWay}" IsEnabled="False"></ovsControls:Combox>
                            <!--结算货币-->
                            <TextBlock Grid.Row="3" Grid.Column="4"  Text ="{Binding Path=Label_SettleCurrency,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="3" Grid.Column="5"  Name="txtCurrency" Width="220" Text="{Binding PurchaseOrderBasicInfo.CurrencyName, Mode=TwoWay}" IsReadOnly="True"></TextBox>
                            <!--采购入库仓库-->
                            <TextBlock Grid.Row="4" Grid.Column="0"  Text ="{Binding Path=Label_InStock,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1" Margin="5 0 0 0">
                                <ComboBox Name="cmbTransferType" IsEnabled="False" SelectedValuePath="Key" DisplayMemberPath="Value"></ComboBox>
                                <ComboBox Name="cmbTransfer" IsEnabled="False" Visibility="Collapsed" SelectedValuePath="Key" DisplayMemberPath="Value"></ComboBox>
                                <ComboBox Name="cmbStock" IsEnabled="False" DisplayMemberPath="WarehouseName" Width="80" SelectedValuePath="SysNo" SelectedValue="{Binding PurchaseOrderBasicInfo.StockSysNo, Mode=TwoWay}"></ComboBox>
                            </StackPanel>
                            <!--采购单归属PM-->
                            <TextBlock Grid.Row="4" Grid.Column="2"  Text ="{Binding Path=Label_PMSysNo,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="4" Grid.Column="3"  Name="txtPMName" Width="220" Text="{Binding PurchaseOrderBasicInfo.PMName, Mode=TwoWay}" IsReadOnly="True"></TextBox>
                            <!--送货类型-->
                            <TextBlock Grid.Row="4" Grid.Column="4"  Text ="{Binding Path=Label_ShipType,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="4" Grid.Column="5"  Name="txtShipTypeName" Width="220" Text="{Binding PurchaseOrderBasicInfo.ShippingTypeName, Mode=TwoWay}" IsReadOnly="True"></TextBox>
                            
                            <!--预计到货时间-->
                            <TextBlock Grid.Row="5" Grid.Column="0"  Text ="{Binding Path=Label_ETATime,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <sdk:DatePicker Grid.Row="5" Grid.Column="1" Name="dpkETATime" Width="260" SelectedDate="{Binding PurchaseOrderBasicInfo.ETATimeInfo.ETATime, Mode=TwoWay, Converter={StaticResource DateTimeConverter}, ConverterParameter=Short}" IsEnabled="False"></sdk:DatePicker>
                            <!--预计到货时段-->
                            <TextBlock Grid.Row="5" Grid.Column="2"  Text ="{Binding Path=Label_ETAHalfday,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <ovsControls:Combox Grid.Row="5" Grid.Column="3" Name="cmbETAHalfDay" Width="220" SelectedValuePath="Key" DisplayMemberPath="Value" SelectedValue="{Binding PurchaseOrderBasicInfo.ETATimeInfo.HalfDay, Mode=TwoWay}" IsEnabled="False"></ovsControls:Combox>
                           
                            <!--移仓单编号-->
                            <TextBlock Grid.Row="5" Grid.Column="4"  Text ="{Binding Path=Label_ShiftNo,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <HyperlinkButton Grid.Row="5" Grid.Column="5" Name="hpkShiftSysNo" Margin="5 0 0 0"  VerticalAlignment="Center"  Content="{Binding PurchaseOrderBasicInfo.ShiftSysNo}"  Click="hpkShiftSysNo_Click"></HyperlinkButton>

                            <!--转租赁标志-->
                            <TextBlock Grid.Row="6" Grid.Column="0"  Text ="{Binding Path=Label_LeaseFlag,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <ovsControls:Combox Grid.Row="6" Grid.Column="1" Name="cmbLeaseFlag" Width="260" SelectedValuePath="Key" DisplayMemberPath="Value" IsEnabled="False" SelectedValue="{Binding PurchaseOrderBasicInfo.PurchaseOrderLeaseFlag,Mode=OneWay}"></ovsControls:Combox>

                            
                            <!--物流单号-->
                            <TextBlock Grid.Row="6" Grid.Column="2"  Text ="物流单号："></TextBlock>
                            <TextBox Grid.Row="6" Grid.Column="3"  Name="txtLogisticsNumber" Width="220" Text="{Binding PurchaseOrderBasicInfo.LogisticsNumber, Mode=TwoWay,ValidatesOnExceptions=True,NotifyOnValidationError=True}" ></TextBox>

                            <!--快递名称-->
                            <TextBlock Grid.Row="6" Grid.Column="4"  Text ="快递名称："></TextBlock>
                            <TextBox Grid.Row="6" Grid.Column="5"  Name="txtExpressName" Width="220" Text="{Binding PurchaseOrderBasicInfo.ExpressName, Mode=TwoWay,ValidatesOnExceptions=True,NotifyOnValidationError=True}" ></TextBox>

                            
                            <!--ETA备注-->
                            <TextBlock Grid.Row="7" Grid.Column="0" Name="lblETAMemo"  Text ="{Binding Path=Label_RequestMemo,
                                                       Source={StaticResource PageResource}}" Visibility="Collapsed"></TextBlock>
                            <TextBox Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="3"  Name="txtETAMemo" Text="{Binding PurchaseOrderBasicInfo.ETATimeInfo.Memo, Mode=TwoWay}" AcceptsReturn="True" Height="40" VerticalScrollBarVisibility="Visible" Visibility="Collapsed"></TextBox>
                            <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="4" Name="spETATimeActionButtons" HorizontalAlignment="Right"  Orientation="Horizontal" Visibility="Collapsed">
                                <!--提交审核-->
                                <Button Content="{Binding Path=Button_SubmitAudit,
                                                       Source={StaticResource PageResource}}" IsEnabled="False"  Name="btnRequestAudit" Click="btnRequestAudit_Click"/>
                                <!--取消审核-->
                                <Button Content="{Binding Path=Button_Cancel,
                                                       Source={StaticResource PageResource}}" IsEnabled="False" Name="btnCancelAudit" Click="btnCancelAudit_Click"/>
                                <!--审核通过-->
                                <Button Content="{Binding Path=Button_Pass,
                                                       Source={StaticResource PageResource}}" IsEnabled="False" Name="btnPassAudit" Click="btnPassAudit_Click"/>
                            </StackPanel>
                        </Grid>
                    </toolkit:Expander>
                    <!--返点信息-->
                    <toolkit:Expander x:Name="EIMSInfo" 
                                      Grid.Row="2"
                                      Header="{Binding Path=Label_EIMSInfo,
                                                       Source={StaticResource PageResource}}"
                                      IsExpanded="True" Visibility="Collapsed">
                        <Grid Margin="20,5,20,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <!--产出返点合同编号-->
                            <TextBlock Grid.Row="0" Grid.Column="0"  Text ="{Binding Path=Label_Contract,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="0" Grid.Column="1"  Name="txtContractNumber" Width="220" Text="{Binding EIMSInfo.ContractNumber, Mode=TwoWay}"></TextBox>
                            <!--查看详情-->
                            <HyperlinkButton Grid.Row="0" Grid.Column="2" Name="hpkContractDetailView" HorizontalAlignment="Left" VerticalAlignment="Center"  Click="hpkContractDetailView_Click"  Content="{Binding Path=Label_ViewDetail,
                                                       Source={StaticResource PageResource}}"></HyperlinkButton>
                            <!--可用PO扣减返点提醒-->
                            <HyperlinkButton Grid.Row="0" Grid.Column="3" Name="hpkEimsInvoice" Click="hpkEimsInvoice_Click" Visibility="Collapsed" Content="{Binding Path=Label_EIMSAlert,
                                                       Source={StaticResource PageResource}}" VerticalAlignment="Center" ></HyperlinkButton>
                            <!--使用返点总金额:-->
                            <TextBlock Grid.Row="1" Name="lblEIMSTotal"  Grid.Column="0" Grid.ColumnSpan="4" Foreground="Blue"  HorizontalAlignment="Left"  Text =""></TextBlock>
                            <ovsDataControls:DataGrid Name="gridEIMSInfo"
                                      Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4"
                                      AutoGenerateColumns="False"
                                      LoadingDataSource="gridEIMSInfo_LoadingDataSource"
                                      GridID="CB598F63-4DAC-4E49-8B72-621ACF4AAC8B"
                                       IsShowPager="False"
                                       IsShowColumnsSelector="False"
                                       IsReadOnly="True">
                                <ovsDataControls:DataGrid.Columns>
                                    <!--返点-->
                                    <ovsDataControls:DataGridTextColumn Width="80" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_EIMSSysNo,
                                                       Source={StaticResource PageResource}}" Binding="{Binding EIMSSysNo}"></ovsDataControls:DataGridTextColumn>
                                    <!--返点总金额-->
                                    <ovsDataControls:DataGridTextColumn Width="80" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_TotalEIMSAmt,
                                                       Source={StaticResource PageResource}}" Binding="{Binding EIMSTotalAmt}"></ovsDataControls:DataGridTextColumn>
                                    <!--剩余返点金额-->
                                    <ovsDataControls:DataGridTextColumn Width="80" CanUserSort="True" ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_LeftEIMSAmt,
                                                       Source={StaticResource PageResource}}" Binding="{Binding EIMSLeftAmt}"></ovsDataControls:DataGridTextColumn>
                                    <!--使用返点金额-->

                                    <ovsDataControls:DataGridTemplateColumn Width="90"  ovsDataControls:DataGridAttached.Header="{Binding Path=GridHeader_UsedEIMSAmt,
                                                       Source={StaticResource PageResource}}" CanUserSort="True">
                                        <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Name="txtEIMSAmt" Width="70" Text="{Binding EIMSAmt, Mode=TwoWay}" TextChanged="txtEIMSAmt_TextChanged"  LostFocus="txtEIMSAmt_LostFocus" ></TextBox>
                                            </DataTemplate>
                                        </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                    </ovsDataControls:DataGridTemplateColumn>
                                    <!--操作-->
                                    <ovsDataControls:DataGridTemplateColumn Width="60" Visibility="Visible"  ovsDataControls:DataGridAttached.Header="操作"  CanUserSort="False">
                                        <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <HyperlinkButton Name="hpkEIMS_Delete" Click="hpkEIMS_Delete_Click" VerticalAlignment="Center"  Content="[删除]" ></HyperlinkButton>
                                            </DataTemplate>
                                        </ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                    </ovsDataControls:DataGridTemplateColumn>
                                </ovsDataControls:DataGrid.Columns>
                            </ovsDataControls:DataGrid>

                        </Grid>
                    </toolkit:Expander>
                    <!--备忘录:-->
                    <toolkit:Expander x:Name="MemoInfo"
                                      Grid.Row="3"
                                      Header="{Binding Path=Label_POMemoInfo,
                                                       Source={StaticResource PageResource}}"
                                      IsExpanded="True">
                        <Grid Margin="20,5,20,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <!--注释:-->
                            <TextBlock Grid.Row="0" Grid.Column="0"  Text ="{Binding Path=Label_Note,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="0" Grid.Column="1"  Name="txtNote" MaxLength="500"  Width="400" Text="{Binding PurchaseOrderBasicInfo.MemoInfo.Note, Mode=TwoWay}" IsReadOnly="True"></TextBox>
                            <!--采购单备忘录:-->
                            <TextBlock Grid.Row="0" Grid.Column="2"  Text ="{Binding Path=Label_MemoInfo,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="0" Grid.Column="3"  Name="txtMemo"  MaxLength="500" Width="400" Text="{Binding PurchaseOrderBasicInfo.MemoInfo.Memo, Mode=TwoWay}" IsReadOnly="True"></TextBox>
                            <!--入库备注:-->
                            <TextBlock Grid.Row="1" Grid.Column="0"  Text ="{Binding Path=Label_InstockMemo,
                                                       Source={StaticResource PageResource}}"></TextBlock>
                            <TextBox Grid.Row="1" Grid.Column="1"  Name="txtInStockMemo"  MaxLength="500" Width="400" Text="{Binding PurchaseOrderBasicInfo.MemoInfo.InStockMemo, Mode=TwoWay}" IsReadOnly="True"></TextBox>
