<ovs:PageBase x:Class="ECCentral.Portal.UI.SO.Views.SOMaintain" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:ovs="clr-namespace:Newegg.Oversea.Silverlight.ControlPanel.Core.Base;assembly=Newegg.Oversea.Silverlight.ControlPanel.Core"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
              xmlns:ovsControls="clr-namespace:Newegg.Oversea.Silverlight.Controls;assembly=Newegg.Oversea.Silverlight.Controls"
              xmlns:ovsDataControls="clr-namespace:Newegg.Oversea.Silverlight.Controls.Data;assembly=Newegg.Oversea.Silverlight.Controls.Data"
              xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
              xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
              xmlns:areaUC="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.AreaPicker;assembly=ECCentral.Portal.Basic"
              xmlns:customerUC="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.CustomerPicker;assembly=ECCentral.Portal.Basic"
              xmlns:payTypeUC ="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.PayTypePicker;assembly=ECCentral.Portal.Basic"              
              xmlns:shipTypeUC="clr-namespace:ECCentral.Portal.Basic.Components.UserControls.ShipTypePicker;assembly=ECCentral.Portal.Basic"                            
              xmlns:customer="clr-namespace:ECCentral.BizEntity.Customer;assembly=ECCentral.BizEntity"
              xmlns:converter="clr-namespace:ECCentral.Portal.Basic.Utilities;assembly=ECCentral.Portal.Basic"
              xmlns:commonConverter="clr-namespace:ECCentral.Portal.Basic.Converters;assembly=ECCentral.Portal.Basic"
              xmlns:resSO="clr-namespace:ECCentral.Portal.UI.SO.Resources"
              xmlns:uc="clr-namespace:ECCentral.Portal.UI.SO.UserControls"
              xmlns:soconverter="clr-namespace:ECCentral.Portal.UI.SO.Converters;assembly=ECCentral.Portal.UI.SO"
           mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480">
    <Grid x:Name="gridSOMaintain">
        <ovsControls:FunctionPanel x:Name="pagePanel">
            <ovsControls:FunctionPanel.Resources>
                <resSO:ResSOMaintain x:Name="MyResSOMaintain" />
                <resSO:ResSO x:Name="MyResSO" />
                <converter:EnumConverter x:Name="MyEnumConverter"/>
                <commonConverter:DateTimeConverter x:Name="MyDateConverter" />
                <commonConverter:MoneyConverter x:Name="MyMoneyConverter" />
                <commonConverter:BoolToVisibilityConverter x:Name="MyBoolToVisibilityConverter" />
                <commonConverter:ObjectToBoolConverter x:Name="MyObjectToBoolConverter" />
                <soconverter:VisibilityConverter x:Name="MySOVisibilityConverter"/>
                <soconverter:ReadOnlyConverter x:Name="MySOIsReadOnlyConverter"/>                
            </ovsControls:FunctionPanel.Resources>
            <ovsControls:FunctionPanel.Content>
                <StackPanel Orientation="Horizontal" x:Name="ContentSOMaintain">
                    <StackPanel Orientation="Vertical">
                        <toolkit:Expander Header="{Binding Expander_SOBaseInfo,Source={StaticResource MyResSOMaintain}}" IsExpanded="True">
                            <Grid x:Name="gridCustomerInfo"  Margin="20,0">                      
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="200"/>

                                    <ColumnDefinition Width="20"/>
                                    
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="200"/>

                                    <ColumnDefinition Width="20"/>
                                    
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="200"/>
                                    
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition />

                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock                   Grid.Row="0" Grid.Column="0"    Text="{Binding Label_CustomerSysNo,Source={StaticResource MyResSOMaintain}}"/>
                                <customerUC:UCCustomerPicker Grid.Row="0" Grid.Column="1"    CustomerSelected="ucCustomer_CustomerSelected"  x:Name="ucCustomer"  CustomerSysNo="{Binding Path=BaseInfoVM.CustomerSysNo, Mode=TwoWay}"/>
                                <HyperlinkButton             Grid.Row="0" Grid.Column="3"    Grid.ColumnSpan="2"    VerticalAlignment="Center"  VerticalContentAlignment="Center" HorizontalAlignment="Left" HorizontalContentAlignment="Left"  Content="{Binding HyperLinkButton_RefreshCustomer,Source={StaticResource MyResSOMaintain}}"   x:Name="hlkb_RefreshCustomer"  Click="hlkb_RefreshCustomer_Click"/>
                                <TextBlock                   Grid.Row="0" Grid.Column="6"    Text="{Binding Label_SOSysNo,Source={StaticResource MyResSOMaintain}}"/>
                                <StackPanel                  Grid.Row="0" Grid.Column="7"    Orientation="Horizontal"  HorizontalAlignment="Left" >
                                    <TextBox                 Width="157" x:Name="txtSOSysNo" Text="{Binding Path=BaseInfoVM.SysNo,Mode=TwoWay}"/>
                                    <Image x:Name="img_Order_Search" Source="/Themes/Default/Images/Button/refresh.png" Width="16" Height="16" MouseLeftButtonDown="img_Order_Search_MouseLeftButtonDown" Cursor="Hand"/>                                    
                                </StackPanel>
                                <StackPanel                  Grid.Row="0" Grid.Column="9"   Orientation="Horizontal"  HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <TextBlock               x:Name="txtSOStatusDisplay"    Text="{Binding Path=BaseInfoVM.SOStatusDisplay}" Foreground="Blue"  Margin="5,0,5,0"/>
                                    <TextBlock               x:Name="txtSOSplitStatus"    Foreground="Red"  Margin="5,0,5,0" Visibility="Collapsed"/>
                                    <TextBlock x:Name="txtInventoryNotEnough"  Text="{Binding Info_Inventory_NotEnough,Source={StaticResource MyResSOMaintain}}" Foreground="Red"  Margin="5,0,5,0" Visibility="Collapsed"/>
                                    <HyperlinkButton x:Name="hlkb_ShowBackOrder" Click="hlkb_ShowBackOrder_Click" Content="{Binding HyperLinkButton_ShowBackOrder,Source={StaticResource MyResSOMaintain}}" Margin="2" Visibility="Collapsed"/>
                                </StackPanel>
                                <TextBlock                  Grid.Row="1" Grid.Column="0"    Text="{Binding Label_CustomerName,Source={StaticResource MyResSOMaintain}}"/>
                                <TextBox                    Grid.Row="1" Grid.Column="1"    x:Name="txtCustomerName"   Text="{Binding Path=BaseInfoVM.CustomerName,Mode=TwoWay,NotifyOnValidationError=True}" />
                                <TextBlock                  Grid.Row="1" Grid.Column="3"    Text="{Binding Label_SOBelongChannel,Source={StaticResource MyResSOMaintain}}" />
                                <ovsControls:Combox         Grid.Row="1" Grid.Column="4"    x:Name="cbmSOWebChannel" DisplayMemberPath="ChannelName" SelectedValuePath="ChannelID" SelectedValue="{Binding Path=WebChannel.ChannelID,Mode=TwoWay}" IsEnabled="False"/>
                                <StackPanel Grid.Row="1" Grid.Column ="6" Grid.ColumnSpan="4" Orientation="Horizontal">
                                    <CheckBox  x:Name="cbPhoneSO" IsChecked="{Binding Path=BaseInfoVM.IsPhoneOrder,Mode=TwoWay,Converter={StaticResource MyObjectToBoolConverter}}" Content="{Binding Chk_PhoneSO,Source={StaticResource MyResSOMaintain}}"/>
                                    <TextBlock Foreground="Blue" x:Name="tbVendorName" />
                                </StackPanel>
                                <TextBlock                  Grid.Row="2" Grid.Column="0"    Text="{Binding Label_CustomerType,Source={StaticResource MyResSOMaintain}}" />
                                <ovsControls:Combox         Grid.Row="2" Grid.Column="1"    x:Name="cbmCustomerType" SelectedIndex="0"  DisplayMemberPath="Name" SelectedValuePath="Code" SelectedValue="{Binding Path=BaseInfoVM.KFCStatus,Mode=TwoWay}"/>
                                <TextBlock                  Grid.Row="2" Grid.Column="3"    Text="{Binding Label_SOType,Source={StaticResource MyResSOMaintain}}"/>
                                <ovsControls:Combox         Grid.Row="2" Grid.Column="4"    SelectedValue="{Binding Path=BaseInfoVM.SOType,Mode=TwoWay,NotifyOnValidationError=True}" x:Name="cmbSOType"  DisplayMemberPath="Value" SelectedValuePath="Key" SelectionChanged="cmbSOType_SelectionChanged"/>
                                <!--<TextBlock                  Grid.Row="2" Grid.Column="6"    Text="{Binding Label_SOBelongCompany,Source={StaticResource MyResSOMaintain}}" />
                                <ovsControls:Combox         Grid.Row="2" Grid.Column="7"    x:Name="cmbCompany"  DisplayMemberPath="CompanyName" SelectedValuePath="CompanyCode" SelectedValue="{Binding Path=BaseInfoVM.CompanyCode,Mode=TwoWay,NotifyOnValidationError=True}" SelectionChanged="cmbCompany_SelectionChanged"/>-->
                                <CheckBox  Grid.Row="2" Grid.Column="6" Grid.ColumnSpan="2" x:Name="cbExpiateSO" IsChecked="{Binding Path=BaseInfoVM.IsExpiateOrder,Mode=TwoWay,Converter={StaticResource MyObjectToBoolConverter}}" Content="{Binding Chk_ExpiateSO,Source={StaticResource MyResSOMaintain}}"/>

                                <!--<CheckBox  Grid.Row="2" Grid.Column="8" Grid.ColumnSpan="2" x:Name="cbIsExperienceOrder" IsChecked="{Binding Path=BaseInfoVM.IsExperienceOrder,Mode=TwoWay,Converter={StaticResource MyObjectToBoolConverter}}" Content="{Binding Lable_IsExperienceOrder,Source={StaticResource MyResSOMaintain}}"/>-->

                                <TextBlock  Grid.Row="3" Grid.Column="0"    Text="{Binding Lable_OrderTime,Source={StaticResource MyResSOMaintain}}"/>
                                <TextBlock  x:Name="tbOrderTime" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"  Text=""/>
                                
                                <StackPanel Grid.Row="4" Grid.Column="0" Name="spCustomerMemo" Orientation="Horizontal" Grid.ColumnSpan="5">
                                    <TextBlock    Text="{Binding Label_CustomerToMe,Source={StaticResource MyResSOMaintain}}"/>
                                    <TextBox      Text="{Binding  Path=BaseInfoVM.Memo,Mode=OneWay}" IsEnabled="False" Margin="18 0 0 0" Height="40" TextWrapping="Wrap" Width="470"/>
                                </StackPanel>
                                
                            </Grid>
                        </toolkit:Expander>
                        <toolkit:Expander Header="实名认证信息" IsExpanded="True" Visibility="Collapsed">
                            <Grid x:Name="gridCustomerTrueInfo"  Margin="20,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="200"/>

                                    <ColumnDefinition Width="20"/>

                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="200"/>

                                    <ColumnDefinition Width="20"/>

                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="200"/>

                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition />

                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock                   Grid.Row="0" Grid.Column="0"    Text="姓名："/>
                                <TextBox                  IsEnabled="False"   Grid.Row="0" Grid.Column="1"     Text="{Binding Path=CustomerAuthentication.Name,Mode=TwoWay}" />

                                <TextBlock                   Grid.Row="0" Grid.Column="3"    Text="证据类型："/>
                                <ovsControls:Combox        IsEnabled="False"  Grid.Row="0" Grid.Column="4"   DisplayMemberPath="Value" SelectedValuePath="Key"
                                                            ItemsSource="{Binding Path=CustomerAuthentication.IDCardTypeList}"
                                                            SelectedValue="{Binding Path=CustomerAuthentication.IDCardType,Mode=TwoWay}"/>

                                <TextBlock                   Grid.Row="0" Grid.Column="6"    Text="证据号码："/>
                                <TextBox                  IsEnabled="False"   Grid.Row="0" Grid.Column="7"     Text="{Binding Path=CustomerAuthentication.IDCardNumber,Mode=TwoWay}" />

                                <TextBlock                   Grid.Row="1" Grid.Column="0"    Text="性别："/>
                                <ovsControls:Combox       IsEnabled="False"   Grid.Row="1" Grid.Column="1"     SelectedIndex="0"  
                                                             DisplayMemberPath="Value" SelectedValuePath="Key"
                                                            ItemsSource="{Binding Path=CustomerAuthentication.GenderList}"
                                                            SelectedValue="{Binding Path=CustomerAuthentication.Gender,Mode=TwoWay}" />

                                <TextBlock                   Grid.Row="1" Grid.Column="3"    Text="生日："/>
                                <TextBox                   IsEnabled="False"  Grid.Row="1" Grid.Column="4"     Text="{Binding Path=CustomerAuthentication.Birthday,Converter={StaticResource MyDateConverter},ConverterParameter=Short}" />

                                <TextBlock                   Grid.Row="1" Grid.Column="6"    Text="电子邮箱："/>
                                <TextBox                   IsEnabled="False"  Grid.Row="1" Grid.Column="7"     Text="{Binding Path=CustomerAuthentication.Email,Mode=TwoWay}" />

                                <TextBlock                   Grid.Row="2" Grid.Column="0"    Text="电话："/>
                                <TextBox                   IsEnabled="False"  Grid.Row="2" Grid.Column="1"     Text="{Binding Path=CustomerAuthentication.PhoneNumber,Mode=TwoWay}" />

                                <TextBlock                   Grid.Row="2" Grid.Column="3"    Text="地址："/>
                                <TextBox                   IsEnabled="False"  Grid.Row="2" Grid.Column="4"  Grid.ColumnSpan="4"    Text="{Binding Path=CustomerAuthentication.Address,Mode=TwoWay}" />
                            </Grid>
                        </toolkit:Expander>
                        <toolkit:Expander IsExpanded="True" Name="tlkReceiveInfo">
                            <toolkit:Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Expander_SOReceiveInfo,Source={StaticResource MyResSOMaintain}}"/>                         
                                    <HyperlinkButton Margin="20,0"   Content="{Binding HyperLinkButton_SelectReceiveAddress,Source={StaticResource MyResSOMaintain}}"   
                                                      x:Name="hlbtnSelectAddress"  Click="hlbtnSelectAddress_Click"                                                     
                                                      VerticalAlignment="Center" Visibility="Collapsed"/>
                                </StackPanel>                                
                            </toolkit:Expander.Header>               
                                <StackPanel Orientation="Vertical">
                                  <Grid  x:Name="gridSOReceiveInfo"  Margin="20,0">                                  
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="73"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="17"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="320"/>                                     
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock            Grid.Row="0" Grid.Column="0"    Text="{Binding Lable_ReceiveName,Source={StaticResource MyResSOMaintain}}"/>
                                        <TextBox              Grid.Row="0" Grid.Column="1"    x:Name="txtReceiveName"  Text="{Binding Path=ReceiverInfoVM.ReceiveContact,Mode=TwoWay,NotifyOnValidationError=True}"/>
                                        <TextBlock            Grid.Row="0" Grid.Column="3"    Text="{Binding Lable_ReceiveCellPhone,Source={StaticResource MyResSOMaintain}}"/>
                                        <TextBox              Grid.Row="0" Grid.Column="4"    x:Name="txtReceiveCellPhone" MaxLength="11" Text="{Binding Path=ReceiverInfoVM.ReceiveCellPhone,Mode=TwoWay,NotifyOnValidationError=True}"  />
                                        <TextBlock            Grid.Row="0" Grid.Column="6"    Text="{Binding Lable_ReceiveAddress,Source={StaticResource MyResSOMaintain}}"/>
                                        <TextBox              Grid.Row="0" Grid.Column="7"    x:Name="txtReceiveAddress" Text="{Binding Path=ReceiverInfoVM.ReceiveAddress,Mode=TwoWay,NotifyOnValidationError=True}"/>
                                        <TextBlock            Grid.Row="1" Grid.Column="0"    Text="{Binding Lable_ReceivePhone,Source={StaticResource MyResSOMaintain}}"/>
                                        <TextBox              Grid.Row="1" Grid.Column="1"    x:Name="txtReceivePhone"  Text="{Binding Path=ReceiverInfoVM.ReceivePhone,Mode=TwoWay,NotifyOnValidationError=True}" />
                                        <TextBlock            Grid.Row="1" Grid.Column="3"    Text="{Binding Lable_ReceiveZip,Source={StaticResource MyResSOMaintain}}"/>
                                        <TextBox              Grid.Row="1" Grid.Column="4"    x:Name="txtReceiveZip"  Text="{Binding Path=ReceiverInfoVM.ReceiveZip,Mode=TwoWay,NotifyOnValidationError=True}" />
                                        <TextBlock            Grid.Row="1" Grid.Column="6"    Text="{Binding Lable_ReceiveArea,Source={StaticResource MyResSOMaintain}}"/>
                                    <areaUC:UCOldAreaPicker  Grid.Row="1" Grid.Column="7"    Grid.ColumnSpan="2" x:Name="ucReceiveArea"  Margin="8,0"
                                                          SelectedAreaSysNo="{Binding Path=ReceiverInfoVM.ReceiveAreaSysNo,Mode=TwoWay,NotifyOnValidationError=True}"
                                                         
                                                          />                                                                                                                 
                                    </Grid>
                                </StackPanel>                          
                        </toolkit:Expander>
                        <Grid x:Name="grdPayInfoAndShippingInfo" Width="1265" HorizontalAlignment="Left">                       
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="585"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <toolkit:Expander Grid.Row="0" Grid.Column="0" Header="{Binding Expander_ShippingInfo,Source={StaticResource MyResSOMaintain}}" IsExpanded="True">
                                <Grid  x:Name="gridShippingInfo"   Margin="20,0">
                                    <StackPanel Orientation="Vertical">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="67"/>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="67"/>
                                                <ColumnDefinition Width="200"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock                  Grid.Row="0" Grid.Column="0" Text="{Binding Lable_ShippingType,Source={StaticResource MyResSOMaintain}}"/>
                                            <shipTypeUC:UCShipTypePicker   x:Name="UCShipType" SelectionChanged="UCShipType_SelectionChanged"  Grid.Row="0" Grid.Column="1" SelectedShipType="{Binding Path=ShippingInfoVM.ShipTypeSysNo,Mode=TwoWay}" AppendItemType="Select"/>
                                            <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding Lable_Stock,Source={StaticResource MyResSOMaintain}}"/>
                                            <ovsControls:Combox x:Name="cmbStock"  Grid.Row="0" Grid.Column="3" SelectedValue="{Binding Path=ShippingInfoVM.LocalWHSysNo, Mode=TwoWay}" SelectedValuePath="SysNo" DisplayMemberPath="StockName"/>
                                            <TextBlock                      Grid.Row="1" Grid.Column="0" Text="{Binding Lable_ShippingTime,Source={StaticResource MyResSOMaintain}}"/>
                                            <StackPanel                     Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                                                <ovsControls:Combox Name="cmbDeliveryDayRange" Width="110" Visibility="Collapsed" DisplayMemberPath="Name" SelectedValuePath="Code" SelectedValue="{Binding Path=ShippingInfoVM.RingOutShipType,Mode=TwoWay}"/>
                                                <sdk:DatePicker x:Name="dateDelivery"  Width="110" Text ="{Binding Path=ShippingInfoVM.DeliveryDate, Mode=TwoWay, Converter={StaticResource MyDateConverter},ConverterParameter=Short}" IsEnabled="False" />
                                                <ovsControls:Combox x:Name="cmbDeliveryRange" Width="60" Margin="0"  SelectedValue="{Binding Path=ShippingInfoVM.DeliveryTimeRange, Mode=TwoWay}" DisplayMemberPath="Name" SelectedValuePath="Code" IsEnabled="False"/>
                                            </StackPanel>
    
                                            <!--<TextBlock                  Grid.Row="1" Grid.Column="3" Text="{Binding Path=ShippingInfoVM.TrackingNumberStr}"/>-->
                                            <HyperlinkButton   Grid.Row="1" Grid.Column="2"  Margin="0,7,0,0"  x:Name="hlkb_btnTrackingNumber"  Content="{Binding Lable_TrackingNumber,Source={StaticResource MyResSOMaintain}}"  Click="hlkb_btnTrackingNumber_Click" />
                                            <TextBlock             Grid.Row="1" Grid.Column="3"     Text="{Binding Path=ShippingInfoVM.TrackingNumberStr}" Margin="10,0,0,0"/>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </toolkit:Expander>
                            <toolkit:Expander Grid.Row="0" Grid.Column="1" Header="{Binding Expander_PayInfo,Source={StaticResource MyResSOMaintain}}" IsExpanded="True">
                                <Grid  x:Name="gridPayInfo"  Margin="20,0">                               
                                    <StackPanel Orientation="Vertical">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="70"/>
                                                    <ColumnDefinition Width="200"/>
                                                    <ColumnDefinition Width="20"/>
                                                    <ColumnDefinition Width="90"/>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="30"/>
                                                    <RowDefinition Height="30"/>
                                                </Grid.RowDefinitions>
                                                <TextBlock            Grid.Row="0"     Grid.Column="0" Text="{Binding Lable_PayType,Source={StaticResource MyResSOMaintain}}"/>
                                            <payTypeUC:UCPayTypePicker x:Name="UCPayType" Grid.Row="0"  Grid.Column="1" SelectedPayType="{Binding Path=BaseInfoVM.PayTypeSysNo,Mode=TwoWay,NotifyOnValidationError=True}"   AppendItemType="Select" SelectionChanged="UCPayType_SelectionChanged"/>
                                            <CheckBox  Grid.Row="0" Grid.Column="3" x:Name="cbNeedInvoice" IsChecked="{Binding Path=BaseInfoVM.NeedInvoice,Mode=TwoWay,Converter={StaticResource MyObjectToBoolConverter}}" Content="{Binding Chk_NeedInvoice,Source={StaticResource MyResSOMaintain}}"/>
                                            <TextBlock            Grid.Row="1"    Grid.Column="0"   Text="{Binding Lable_InvoiceTitle,Source={StaticResource MyResSOMaintain}}"/>
                                                <TextBox              Grid.Row="1"    Grid.Column="1"   x:Name="txtInvoiceTitle" Text="{Binding  Path=InvoiceInfoVM.Header,Mode=TwoWay,NotifyOnValidationError=True}"/>
                                                <!--<CheckBox             Grid.Row="1"    Grid.Column="3"   x:Name="cbVATInvoice" Content="{Binding Chk_VATInvoice,Source={StaticResource MyResSOMaintain}}" IsChecked="{Binding Path=InvoiceInfoVM.IsVAT,Mode=TwoWay,Converter={StaticResource MyObjectToBoolConverter}}" Click="cbVATInvoice_Click" />-->
                                            <!--<StackPanel Orientation="Horizontal" Grid.Row="1"    Grid.Column="4">
                                                <HyperlinkButton       x:Name="hlkb_SetVATInvoice"  Content="{Binding HyperLinkButton_SetVATInvoice,Source={StaticResource MyResSOMaintain}}" Visibility="Collapsed" Click="hlkb_SetVATInvoice_Click" VerticalAlignment="Center"/>
                                                <HyperlinkButton       x:Name="hlkb_SetOInvoiceTOVATInvoice"  Content="{Binding HyperLinkButton_SetOInvoiceTOVATInvoice,Source={StaticResource MyResSOMaintain}}" Visibility="Collapsed" Click="hlkb_SetOInvoiceTOVATInvoice_Click" VerticalAlignment="Center"/>
                                                <HyperlinkButton       x:Name="hlkb_SaveOInvoiceTOVATInvoice"  Content="{Binding HyperLinkButton_SaveOInvoiceTOVATInvoice,Source={StaticResource MyResSOMaintain}}" Visibility="Collapsed" Click="hlkb_SaveOInvoiceTOVATInvoice_Click" VerticalAlignment="Center"/>
                                            </StackPanel>-->
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="270"/>
                                                <ColumnDefinition Width="375"/>
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>                                            
                                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>                                  
                                </Grid>
                            </toolkit:Expander>
                            <ScrollViewer Grid.Row="1" x:Name="svDeliveryMsg" Visibility="Collapsed"
                                  VerticalAlignment="Center"
                                  VerticalScrollBarVisibility="Disabled" 
                                  HorizontalScrollBarVisibility="Auto">
                                <Border Background="Azure" BorderBrush="Red" Padding="5" BorderThickness="1" Height="25">
                                    <TextBlock x:Name="tbDeliveryMsg" Foreground="Red"/>
                                </Border>
                            </ScrollViewer>
                        </Grid>
                        <toolkit:Expander Header="{Binding Expander_SOItemInfo,Source={StaticResource MyResSOMaintain}}" IsExpanded="True">                        
                            <Grid  x:Name="gridCarInfo"  Margin="10,0,0,0" Width="1350" MaxWidth="1350" MinWidth="1350">                          
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1350" MaxWidth="1350" MinWidth="1350"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <StackPanel x:Name="spGridCarOperate" Grid.Row="0" Orientation="Horizontal"  HorizontalAlignment="Right" Visibility="Collapsed">
                                    <!--<HyperlinkButton x:Name="hlkb_DownloadModel"    Content="{Binding HyperLinkButton_DownloadModel,Source={StaticResource MyResSOMaintain}}" Margin="0,0,10,0" NavigateUri="/WebResources/Download/Templates/Order_BatchAddProductTemplate.xls" TargetName="_self" Visibility="Collapsed"/>
                                    <HyperlinkButton x:Name="hlkb_BatchUploadItem"    Content="{Binding HyperLinkButton_BatchUploadItem,Source={StaticResource MyResSOMaintain}}" Margin="0,0,10,0" Click="hlkb_BatchUploadItem_Click"  Visibility="Collapsed"/>
                                    <HyperlinkButton x:Name="hlkb_AddGiftCardInShoppingCar"  Visibility="Collapsed" Content="{Binding HyperLinkButton_AddGiftCard,Source={StaticResource MyResSOMaintain}}" Margin="0,0,10,0" Click="hlkb_AddGiftCardInShoppingCar_Click"/>-->
                                    <HyperlinkButton x:Name="hlkb_AddProductInShoppingCar"    Content="{Binding HyperLinkButton_AddItem,Source={StaticResource MyResSOMaintain}}" Margin="0,0,10,0" Click="hlkb_AddProductInShoppingCar_Click"/>
                                    <HyperlinkButton x:Name="hlkb_btnCalculateInShoppingCar"  Content="{Binding HyperLinkButton_CalculatePrice,Source={StaticResource MyResSOMaintain}}" Margin="0,0,10,0" Click="hlkb_CalculateInShoppingCar_Click" />                                    
                                </StackPanel>
                                <StackPanel Grid.Row="1" Orientation="Horizontal">
                                    <ovsDataControls:DataGrid IsShowPager="False" IsReadOnly="True" x:Name="dataGridItemInfo" IsServerPaging="False" IsShowColumnsSelector="False"  AutoGenerateColumns="False" IsShowLoading="False" HorizontalContentAlignment="Center">                                   
                                        <ovsDataControls:DataGrid.Columns>
                                            
                                            <ovsDataControls:DataGridTemplateColumn   Width="100"
                                                ovsDataControls:DataGridAttached.Header="{Binding Grid_Car_ProductID,Source={StaticResource MyResSOMaintain}}">
                                                <ovsDataControls:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
