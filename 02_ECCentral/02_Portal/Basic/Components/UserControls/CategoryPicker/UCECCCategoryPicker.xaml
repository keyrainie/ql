<UserControl x:Class="ECCentral.Portal.Basic.Components.UserControls.CategoryPicker.UCECCCategoryPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ovsControls="clr-namespace:Newegg.Oversea.Silverlight.Controls;assembly=Newegg.Oversea.Silverlight.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Margin="7 0 10 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ovsControls:Combox Name="cmbCategory1" Grid.Row="0" Grid.Column="0" SelectedValuePath="SysNo" DisplayMemberPath="CategoryName" SelectionChanged="cmbCategory1_SelectionChanged"  Margin="0"></ovsControls:Combox>
        <ovsControls:Combox Name="cmbCategory2" Grid.Row="0" Grid.Column="1" Margin="2 0"  SelectionChanged="cmbCategory2_SelectionChanged" SelectedValuePath="SysNo" DisplayMemberPath="CategoryName"></ovsControls:Combox>
        <ovsControls:Combox Name="cmbCategory3" Grid.Row="0" Grid.Column="2" Margin="0"   SelectedValuePath="SysNo" DisplayMemberPath="CategoryName" SelectionChanged="cmbCategory3_SelectionChanged"></ovsControls:Combox>
    </Grid>
</UserControl>
