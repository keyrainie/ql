<UserControl x:Class="ECCentral.Portal.Basic.Components.UserControls.ShipTypePicker.UCStockShipTypePicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:ovsControls="clr-namespace:Newegg.Oversea.Silverlight.Controls;assembly=Newegg.Oversea.Silverlight.Controls"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot">
        <StackPanel Orientation="Horizontal">
            <ovsControls:Combox x:Name="cmbStock" Margin="5 0 5 0" Width="100"
                            SelectedValuePath="SysNo"
                            DisplayMemberPath="StockName"
                                SelectionChanged="cmbStock_SelectionChanged"
                            
                            />
            <ovsControls:Combox x:Name="cmbShipType" Margin="0 0 5 0" Width="185"
                            SelectedValuePath="SysNo"
                            DisplayMemberPath="ShippingTypeName"
                                SelectionChanged="cmbShipType_SelectionChanged"
                              />
        </StackPanel>
    </Grid>
</UserControl>
