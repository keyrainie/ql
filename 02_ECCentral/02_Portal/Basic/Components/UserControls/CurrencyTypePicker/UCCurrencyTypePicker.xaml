<UserControl x:Class="ECCentral.Portal.Basic.Components.UserControls.CurrencyTypePicker.UCCurrencyTypePicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:ovsControls="clr-namespace:Newegg.Oversea.Silverlight.Controls;assembly=Newegg.Oversea.Silverlight.Controls"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot">
        <ovsControls:Combox x:Name="cmbCurrencyType"
                            SelectedValuePath="SysNo" 
                            DisplayMemberPath="CurrencySymbolAndName"    SelectionChanged="cmbCurrencyType_SelectionChanged"
                            />
    </Grid>
</UserControl>
