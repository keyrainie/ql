<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Controls/TextBlockStyle.xaml" />
        <ResourceDictionary Source="Controls/ScrollStyle.xaml" />
        <ResourceDictionary Source="Controls/OVSControlStyles.xaml" />
        <ResourceDictionary Source="Controls/TextBoxStyle.xaml" />
        <ResourceDictionary Source="Controls/ListBoxStyle.xaml" />
        <ResourceDictionary Source="Controls/ComboBoxStyle.xaml" />
        <ResourceDictionary Source="Controls/TabControlStyle.xaml" />
        <ResourceDictionary Source="Controls/ButtonStyle.xaml" />
        <ResourceDictionary Source="Controls/AutoCompleteBoxStyle.xaml" />
        <ResourceDictionary Source="Controls/CheckBoxStyle.xaml" />
        <ResourceDictionary Source="Controls/ProgressBarStyle.xaml" />
        <ResourceDictionary Source="Controls/CalenderStyle.xaml" />
        <ResourceDictionary Source="Controls/AccordionStyle.xaml" />
        <ResourceDictionary Source="Controls/BusyIndicatorStyle.xaml" />
        <ResourceDictionary Source="Controls/AutoCompleteBoxStyle.xaml" />
        <ResourceDictionary Source="Controls/NumericUpDownStyle.xaml" />
        <ResourceDictionary Source="Controls/ChildWindowStyle.xaml" />
        <ResourceDictionary Source="Controls/ContextMenuStyle.xaml" />
        <ResourceDictionary Source="Controls/TreeViewStyle.xaml" />
        <ResourceDictionary Source="Controls/DataGridStyle.xaml" />

    </ResourceDictionary.MergedDictionaries>

    <!--DataGrid Content Alignment Style-->
    <Style x:Key="DataGridAlignCenterStyle" TargetType="data:DataGridCell" BasedOn="{StaticResource DataGridCellBase}">
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>
    <Style x:Key="DataGridAlignRightStyle" TargetType="data:DataGridCell" BasedOn="{StaticResource DataGridCellBase}">
        <Setter Property="HorizontalContentAlignment" Value="Right" />
    </Style>

</ResourceDictionary>
