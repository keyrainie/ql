                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="MouseOverState" Storyboard.TargetProperty="Opacity" Duration="0" To="1"/>
                                    </Storyboard>
                                </vsm:VisualState>
                                <vsm:VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="MouseOverState" Storyboard.TargetProperty="Opacity" Duration="0" To="1"/>
