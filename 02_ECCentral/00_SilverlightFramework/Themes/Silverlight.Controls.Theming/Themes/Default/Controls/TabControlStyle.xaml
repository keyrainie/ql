                                        </LinearGradientBrush.RelativeTransform>
                                        <GradientStop Color="#FFBFBFBF"/>
                                        <GradientStop Color="#FFE9E9E9" Offset="1"/>
                                    </LinearGradientBrush>
                                </Path.Fill>
                            </Path>
                            <Path Data="M13,11.635573 L13,72.364426 L13.022502,72.402481 C4.999414,64.753159 0,53.960419 0,42 C0,29.677147 13,11.635573 13,11.635573 z" Height="30" Margin="-1,0,0,0" Stretch="Fill" UseLayoutRounding="False" HorizontalAlignment="Left" Width="4" RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <CompositeTransform ScaleX="-1"/>
                                </Path.RenderTransform>
                                <Path.Fill>
