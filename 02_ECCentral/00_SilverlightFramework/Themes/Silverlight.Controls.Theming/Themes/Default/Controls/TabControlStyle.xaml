    <Style TargetType="controls:TabControl">
        <Setter Property="Padding" Value="0" />
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:TabControl">
                    <Grid>
                        <!-- TabStripPlacement Top -->
                        <Grid x:Name="TemplateTop" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <controlsPrimitives:TabPanel x:Name="TabPanelTop" Margin="10,0,0,0" Canvas.ZIndex="1"/>
                            <Rectangle>
                                <Rectangle.Fill>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <LinearGradientBrush.RelativeTransform>
                                            <CompositeTransform CenterY="0.5" CenterX="0.5" Rotation="180"/>
                                        </LinearGradientBrush.RelativeTransform>
                                        <GradientStop Color="#FFE2E2E2"/>
                                        <GradientStop Color="#FFF1F1F1" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                            <Rectangle StrokeThickness="0" HorizontalAlignment="Left" Margin="11,0,0,0" Width="1">
                                <Rectangle.Fill>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#00AAAAAA"/>
                                        <GradientStop Color="#00AAAAAA" Offset="1"/>
                                        <GradientStop Color="#FEAAAAAA" Offset="0.45"/>
                                        <GradientStop Color="#FEAAAAAA" Offset="0.55"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                            <Image Margin="0,0,0,-4" 
                                   Source="/Themes/Default/Images/Shadow/lang.png" 
                                   Stretch="Fill" 
                                   VerticalAlignment="Top"
                                   Height="4"/>
                            <Border Grid.Row="1" 
									Background="Transparent"
                                    MinHeight="10" 
									MinWidth="10">
                                <Grid>
                                    <ContentPresenter x:Name="ContentTop" HorizontalAlignment="{TemplateBinding HorizontalAlignment}" VerticalAlignment="{TemplateBinding VerticalAlignment}" Margin="{TemplateBinding Padding}" Cursor="{TemplateBinding Cursor}" />
                                    <Rectangle VerticalAlignment="Top" 
                                               Canvas.ZIndex="3" 
                                               Height="4" 
                                               Opacity="0.7"
                                               Fill="#F1F1F1"></Rectangle>
                                    <Image Margin="0"  Grid.Row="1"
                                           Source="/Themes/Default/Images/Shadow/lang.png" 
                                           Stretch="Fill" 
                                           Canvas.ZIndex="4"
                                           VerticalAlignment="Top"
                                           Height="4"/>
                                    
                                </Grid>
                                
                            </Border>
                            
                            <Border x:Name="DisabledVisualTop" IsHitTestVisible="False" Opacity="0" Canvas.ZIndex="1" Background="#8CFFFFFF" Grid.RowSpan="2" CornerRadius="0,0,3,3" Grid.Row="1" />
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

