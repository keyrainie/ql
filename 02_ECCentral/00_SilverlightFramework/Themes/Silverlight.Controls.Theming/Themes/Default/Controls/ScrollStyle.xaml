                                        <Rectangle RadiusY="2" RadiusX="2" StrokeThickness="1" Stroke="#FF496BA1" Margin="0">
                                            <Rectangle.Effect>
                                                <DropShadowEffect BlurRadius="0" Direction="280" ShadowDepth="1" Opacity="0.1"/>
                                            </Rectangle.Effect>
                                            <Rectangle.Fill>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <LinearGradientBrush.RelativeTransform>
                                                        <CompositeTransform CenterY="0.5" CenterX="0.5"/>
                                                    </LinearGradientBrush.RelativeTransform>
                                                    <GradientStop Color="#FF496BA1" Offset="0"/>
                                                    <GradientStop Color="#FF35578D" Offset="1"/>
                                                </LinearGradientBrush>
