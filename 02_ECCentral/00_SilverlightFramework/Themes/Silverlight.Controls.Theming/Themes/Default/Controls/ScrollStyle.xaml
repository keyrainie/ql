                                    <Grid Margin="1" x:Name="GridMouseOver" Opacity="0">
                                        <Rectangle RadiusY="2" RadiusX="2" StrokeThickness="1" Stroke="#FF496BA1" Margin="0">
                                            <Rectangle.Effect>
                                                <DropShadowEffect BlurRadius="0" Direction="280" ShadowDepth="1" Opacity="0.1"/>
