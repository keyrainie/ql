                                                    <DoubleAnimation Storyboard.TargetName="GridMousePressed" 
                                                     Storyboard.TargetProperty="Opacity" 
                                                     Duration="0" 
                                                     To="1" />
                                                    <DoubleAnimation Storyboard.TargetName="GridMouseOver" 
                                                     Storyboard.TargetProperty="Opacity" 
                                                     Duration="0" 
                                                     To="0" />
                                                    <DoubleAnimation Storyboard.TargetName="Arrow" 
                                                     Storyboard.TargetProperty="Opacity" 
                                                     Duration="0" 
                                                     To="0" />
