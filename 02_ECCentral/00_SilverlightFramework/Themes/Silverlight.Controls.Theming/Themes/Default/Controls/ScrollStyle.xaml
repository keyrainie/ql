                                        <Canvas Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="4" Height="7">
                                            <Rectangle Fill="White" Height="1" StrokeThickness="1" Width="1" Canvas.Top="3" />
                                            <Rectangle Fill="White" Height="3" StrokeThickness="1" Width="1" Canvas.Left="1" Canvas.Top="2"/>
                                            <Rectangle Fill="White" StrokeThickness="1" Width="1" Height="5" Canvas.Left="2" Canvas.Top="1"/>
                                            <Rectangle Fill="White" Height="7" StrokeThickness="1" VerticalAlignment="Top" Width="1" Canvas.Left="3"/>
                                        </Canvas>
                                    </Grid>

                                    <Path x:Name="Arrow" Data="M3,0 L4,0 L4,1 L5,1 L5,2 L6,2 L6,3 L7,3 L7,4 L6,4 L5,4 L4,4 L3,4 L2,4 L1,4 L0,4 L0,3 L1,3 L1,2 L2,2 L2,1 L3,1 z" Fill="#FFCDCDCD" Height="4" Margin="0" Stretch="Fill" StrokeThickness="1" UseLayoutRounding="False" VerticalAlignment="Center" HorizontalAlignment="Center" Width="7" RenderTransformOrigin="0.5,0.5" >
                                        <Path.RenderTransform>
                                            <CompositeTransform Rotation="-90"/>
                                        </Path.RenderTransform>
                                    </Path>
                                </Grid>
                            </ControlTemplate>

                        </Grid.Resources>

                        <!-- Horizontal Template -->
                        <Grid x:Name="HorizontalRoot">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

