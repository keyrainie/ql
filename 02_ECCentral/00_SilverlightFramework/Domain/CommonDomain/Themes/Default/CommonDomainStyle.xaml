                    <Grid HorizontalAlignment="Stretch"   Height="{TemplateBinding Height}" Margin="{TemplateBinding Margin}">
                        <Grid.RowDefinitions>
                            <!--<RowDefinition  Height="1.7*" />
                            <RowDefinition  Height="6.8*" />-->
                            <!--<RowDefinition  Height="0*" />
                            <RowDefinition  Height="8.5*" />
                            <RowDefinition  Height="1.5*" />-->
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--<toolkit:Title Content="{TemplateBinding Title}" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center"
                                       Margin="{TemplateBinding BorderThickness}" 
                                       Grid.Row="0"
                                       Style="{TemplateBinding TitleStyle}"/>-->

                        <chartingprimitives:EdgePanel  x:Name="ChartArea" 
                                                       HorizontalAlignment="Stretch"    
                                                       Style="{TemplateBinding ChartAreaStyle}">

                            <Grid Style="{TemplateBinding PlotAreaStyle}" Canvas.ZIndex="-1" />

                            <Border BorderBrush="#FF919191" 
                                    BorderThickness="1" 
                                    Canvas.ZIndex="10" />
                        </chartingprimitives:EdgePanel>

                        <toolkit:Legend Grid.Column="1"
                                        Width="Auto" 
                                        x:Name="Legend" 
                                        HorizontalAlignment="Left"
                                        Margin="{TemplateBinding BorderThickness}"
                                        Header="{TemplateBinding LegendTitle}"
                                        Style="{TemplateBinding LegendStyle}" />
                    </Grid>

                </ControlTemplate>
            </Setter.Value>
