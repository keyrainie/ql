    <!--  ICONButton Style  -->
    <Style TargetType="ovsControls:ICONButton">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Height" Value="28" />
        <Setter Property="Padding" Value="9,0,9,0" />
        <Setter Property="Margin" Value="5,0,5,0" />
        <Setter Property="InnerSpace" Value="4" />
        <Setter Property="FontFamily" Value="{StaticResource ControlFontFamily}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <vsm:VisualStateManager.VisualStateGroups>
                            <vsm:VisualStateGroup x:Name="CommonStates">
                                <vsm:VisualState x:Name="Normal" />
                                <vsm:VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <!--  Active  -->
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="BackgroundInner_Active"
                                                        Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[0].(GradientStop.Color)"
                                                        To="#FFFCE7C7" />
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="BackgroundInner_Active"
                                                        Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                        To="#FFFAD49A" />
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="BackgroundInner_Active"
                                                        Storyboard.TargetProperty="(Border.Background).(GradientBrush.GradientStops)[2].(GradientStop.Color)"
