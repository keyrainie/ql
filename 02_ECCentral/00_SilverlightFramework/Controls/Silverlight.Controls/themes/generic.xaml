                                               StrokeThickness="1" />
                                    <Rectangle Height="1"
                                               Margin="2,0,1,-1"
                                               VerticalAlignment="Bottom"
                                               Canvas.ZIndex="2"
                                               StrokeThickness="1">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                <LinearGradientBrush.RelativeTransform>
                                                    <CompositeTransform CenterX="0.5"
                                                                        CenterY="0.5"
                                                                        Rotation="-90" />
