                                    FontWeight="{TemplateBinding FontWeight}"
                                    TextWrapping="Wrap"
                                    FontFamily="{TemplateBinding FontFamily}"
                                    Text="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}" />
                                -->
                            </Border>

