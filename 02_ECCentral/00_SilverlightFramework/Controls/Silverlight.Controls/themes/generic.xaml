    <!--  AdvancedTextBox Style  -->
    <Style TargetType="ovsControls:AdvancedTextBox">
        <Setter Property="Padding" Value="5,3,2,3" />
        <Setter Property="Margin" Value="7,1,10,1" />
        <Setter Property="Height" Value="23" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="FontSize" Value="{StaticResource ControlFontSize}" />
        <Setter Property="FontFamily" Value="{StaticResource ControlFontFamily}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ovsControls:AdvancedTextBox">
                    <Grid x:Name="RootElement">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <vsm:VisualStateManager.VisualStateGroups>
                            <vsm:VisualStateGroup x:Name="CommonStates">
                                <vsm:VisualState x:Name="Normal" />
                                <vsm:VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="MouseOverBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                    </Storyboard>
                                </vsm:VisualState>
                                <vsm:VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DisabledBorder" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="NormalBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" />
                                    </Storyboard>
                                </vsm:VisualState>
                                <vsm:VisualState x:Name="ReadOnly">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="ReadOnlyBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="NormalBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" />
                                    </Storyboard>
                                </vsm:VisualState>
                            </vsm:VisualStateGroup>
                            <vsm:VisualStateGroup x:Name="FocusStates">
                                <vsm:VisualState x:Name="Focused">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="FocusBorder"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                    </Storyboard>
                                </vsm:VisualState>
                                <vsm:VisualState x:Name="Unfocused">
                                    <Storyboard />
                                </vsm:VisualState>
                            </vsm:VisualStateGroup>
                            <vsm:VisualStateGroup x:Name="ValidationStates">
                                <vsm:VisualState x:Name="Valid" />
                                <vsm:VisualState x:Name="InvalidUnfocused">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ValidationErrorElement" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </vsm:VisualState>
                                <vsm:VisualState x:Name="InvalidFocused">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ValidationErrorElement" Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Visibility>Visible</Visibility>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="validationTooltip" Storyboard.TargetProperty="IsOpen">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <system:Boolean>True</system:Boolean>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </vsm:VisualState>
                            </vsm:VisualStateGroup>
                        </vsm:VisualStateManager.VisualStateGroups>

                        <Border x:Name="ReadOnlyBorder"
                                Grid.ColumnSpan="2"
                                Background="#FFF1F1F1"
                                BorderBrush="#FFCDCDCD"
                                BorderThickness="1"
                                Canvas.ZIndex="3"
                                CornerRadius="3"
                                Opacity="0" />

                        <Border x:Name="DisabledBorder"
                                Grid.ColumnSpan="2"
                                Background="#A5F7F7F7"
                                BorderBrush="#FFCDCDCD"
                                BorderThickness="1"
                                Canvas.ZIndex="5"
                                CornerRadius="3"
                                Visibility="Collapsed" />


                        <Border x:Name="MouseOverBorder"
                                Grid.ColumnSpan="2"
                                BorderBrush="#FFBBCCFF"
                                BorderThickness="1"
                                Canvas.ZIndex="1"
                                CornerRadius="2"
                                Opacity="0">
                            <Border BorderBrush="#FFE6ECFF"
                                    BorderThickness="1"
                                    CornerRadius="2">
                                <Border BorderBrush="#FFF2F5FF"
                                        BorderThickness="1"
                                        CornerRadius="1">
                                    <Border Background="#FFF7FAFD"
                                            BorderBrush="#FFFCFDFF"
                                            BorderThickness="1" />
                                </Border>
                            </Border>
                        </Border>

                        <Border x:Name="FocusBorder"
                                Grid.ColumnSpan="2"
                                BorderBrush="#FFBBCCFF"
                                BorderThickness="1"
                                Canvas.ZIndex="1"
                                CornerRadius="3"
                                Opacity="0">
                            <Border BorderBrush="#FFE6ECFF"
                                    BorderThickness="1"
                                    CornerRadius="2">
                                <Border BorderBrush="#FFF2F5FF"
                                        BorderThickness="1"
                                        CornerRadius="1">
                                    <Border Background="#FFF7FAFD"
                                            BorderBrush="#FFFCFDFF"
                                            BorderThickness="1" />
                                </Border>
                            </Border>
                        </Border>

                        <Border x:Name="NormalBorder"
                                Grid.ColumnSpan="2"
                                BorderBrush="#FFC4C4C4"
                                BorderThickness="1"
                                Canvas.ZIndex="0"
                                CornerRadius="3">
                            <Border BorderBrush="#FFF3F3F3"
                                    BorderThickness="1"
                                    CornerRadius="2">
                                <Border BorderBrush="#FFF9F9F9"
                                        BorderThickness="1"
                                        CornerRadius="1">
                                    <Border Background="#FFFFFFFF"
                                            BorderBrush="#FFFDFDFD"
                                            BorderThickness="1" />
                                </Border>
                            </Border>
                        </Border>

                        <Border x:Name="BackgroundInnerCustom"
                                Grid.ColumnSpan="2"
                                Margin="1"
                                Background="{TemplateBinding Background}"
                                Canvas.ZIndex="4"
                                CornerRadius="3" />

                        <ScrollViewer x:Name="ContentElement"
                                      Margin="1"
                                      VerticalContentAlignment="Top"
                                      BorderThickness="0"
                                      Canvas.ZIndex="4"
                                      IsTabStop="False"
                                      Padding="{TemplateBinding Padding}" />

                        <Image x:Name="ClearIcon"
                               Grid.Column="1"
                               Width="15"
                               Height="15"
                               Margin="0 0 4 0"
                               VerticalAlignment="Center"
                               Canvas.ZIndex="4"
                               Visibility="Collapsed" />

                        <Border x:Name="ValidationErrorElement"
                                BorderBrush="#FFDB000C"
                                BorderThickness="1"
                                Canvas.ZIndex="10"
                                CornerRadius="1"
                                Visibility="Collapsed">
                            <ToolTipService.ToolTip>
                                <ToolTip x:Name="validationTooltip"
                                         DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                         FontFamily="{TemplateBinding FontFamily}"
                                         FontSize="{TemplateBinding FontSize}"
                                         Placement="Right"
                                         PlacementTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                         Template="{StaticResource CommonValidationToolTipTemplate}">
                                    <ToolTip.Triggers>
                                        <EventTrigger RoutedEvent="Canvas.Loaded">
                                            <EventTrigger.Actions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="validationTooltip" Storyboard.TargetProperty="IsHitTestVisible">
                                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                                <DiscreteObjectKeyFrame.Value>
                                                                    <system:Boolean>true</system:Boolean>
                                                                </DiscreteObjectKeyFrame.Value>
                                                            </DiscreteObjectKeyFrame>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger.Actions>
                                        </EventTrigger>
                                    </ToolTip.Triggers>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                            <Grid Width="12"
                                  Height="12"
                                  Margin="1,-1,-1,0"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Top"
                                  Background="Transparent">
                                <Rectangle Width="4"
                                           Height="4"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Top"
                                           Fill="#FFDC000C" />
                                <Path Width="4"
                                      Height="4"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Top"
                                      Data="M0,0 L1,0 L1,1 L2,1 L2,2 L3,2 L3,3 L4,3 L4,4 L3,4 L2,4 L1,4 L0,4 z"
                                      Fill="White"
                                      Stretch="Fill"
                                      UseLayoutRounding="False" />
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  FunctionPanel Style  -->
    <Style TargetType="ovsControls:FunctionPanel">
        <Setter Property="MinHeight" Value="42" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ovsControls:FunctionPanel">
                    <Grid x:Name="RootElement">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <!--  内容区域  -->
                        <ScrollViewer x:Name="ScrollViewerContent"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      HorizontalContentAlignment="Stretch"
                                      VerticalContentAlignment="Stretch"
                                      Background="{TemplateBinding Background}"
                                      BorderBrush="{TemplateBinding BorderBrush}"
                                      BorderThickness="{TemplateBinding BorderThickness}"
                                      HorizontalScrollBarVisibility="{TemplateBinding ContentHorizontalScrollBarVisibility}"
                                      Padding="0"
                                      VerticalScrollBarVisibility="{TemplateBinding ContentVerticalScrollBarVisibility}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <ContentControl Grid.Row="0"
                                                HorizontalContentAlignment="Stretch"
                                                VerticalContentAlignment="Stretch"
                                                Content="{TemplateBinding Content}" />

                                <Grid x:Name="UnpinnedPlaceHolder" Grid.Row="1" />
                            </Grid>
                        </ScrollViewer>

                        <!--  功能区域  -->
                        <Grid x:Name="PinnedPlaceHolder" Grid.Row="1">
                            <Grid x:Name="FuncPanel" MinHeight="{TemplateBinding MinHeight}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Rectangle Grid.ColumnSpan="2">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Offset="0" Color="#FF8A8A8A" />
                                            <GradientStop Offset="1" Color="DimGray" />
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <Image Grid.ColumnSpan="2"
                                       Height="4"
                                       Margin="0,0,-1,0"
                                       VerticalAlignment="Top"
                                       Source="/Themes/default/images/Shadow/lang.png"
                                       Stretch="Fill" />

                                <!--  功能内容区域  -->
                                <ContentPresenter x:Name="FunctionContent"
                                                  Margin="10"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  Content="{TemplateBinding FunctionContent}" />

                                <Canvas Grid.Column="1"
                                        Width="26"
                                        Height="24"
                                        Margin="0,0,10,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center">

                                    <ovsControls:MiniButton x:Name="ButtonPin"
                                                            Cursor="Hand"
                                                            Image="/Themes/default/images/button/pin.png"
                                                            PinnedImage="/Themes/default/images/button/pin_down.png" />
                                </Canvas>
                            </Grid>
                        </Grid>

                        <!--  锚点区域  -->
                        <Grid x:Name="AnchorPlaceHolder"
                              Grid.RowSpan="2"
                              Height="23"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Bottom">
                            <Grid.Resources>
                                <Style x:Key="BottomStepButton" TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Grid Margin="-1,0,0,0">
                                                    <Rectangle RadiusX="2"
                                                               RadiusY="2"
                                                               Stroke="#FFCDCDCD">
                                                        <Rectangle.Fill>
                                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                                <LinearGradientBrush.RelativeTransform>
                                                                    <CompositeTransform CenterX="0.5"
                                                                                        CenterY="0.5"
                                                                                        Rotation="-180" />
                                                                </LinearGradientBrush.RelativeTransform>
                                                                <GradientStop Offset="1" Color="White" />
                                                                <GradientStop Color="#FFCDCDCD" />
                                                                <GradientStop Offset="0.18" Color="#FFFCFCFC" />
                                                                <GradientStop Offset="0.36" Color="#FFF1F1F1" />
                                                            </LinearGradientBrush>
                                                        </Rectangle.Fill>
                                                    </Rectangle>
                                                    <ContentPresenter Margin="15,0" VerticalAlignment="Center" />
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Grid.Resources>
                            <StackPanel Margin="5,0,4,0" Orientation="Horizontal">
                                <ItemsControl x:Name="AnchorList" ItemsSource="{Binding Anchors}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Height="23"
                                                  Margin="-1,0,0,0"
                                                  Cursor="Hand">
                                                <Rectangle RadiusX="2"
                                                           RadiusY="2"
                                                           Stroke="#FFCDCDCD">
                                                    <Rectangle.Fill>
                                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                            <LinearGradientBrush.RelativeTransform>
                                                                <CompositeTransform CenterX="0.5"
                                                                                    CenterY="0.5"
                                                                                    Rotation="-180" />
                                                            </LinearGradientBrush.RelativeTransform>
                                                            <GradientStop Offset="1" Color="White" />
                                                            <GradientStop Color="#FFCDCDCD" />
                                                            <GradientStop Offset="0.18" Color="#FFFCFCFC" />
                                                            <GradientStop Offset="0.36" Color="#FFF1F1F1" />
                                                        </LinearGradientBrush>
                                                    </Rectangle.Fill>
                                                </Rectangle>
                                                <ContentControl Margin="15,0" VerticalAlignment="Center">
                                                    <ContentControl.Content>
                                                        <TextBlock FontFamily="{StaticResource ControlFontFamily}"
                                                                   FontSize="{StaticResource ControlFontSize}"
                                                                   Text="{Binding Title}" />
                                                    </ContentControl.Content>
                                                </ContentControl>

                                                <!--  <ContentPresenter VerticalAlignment="Center" Margin="15,0" Content="{Binding Title}" />  -->
                                                <Border Background="Transparent" />
                                            </Grid>
                                            <!--  此处不能用Button, Button的MouseLeftButtonDown被阻止冒泡了  -->
                                            <!--
                                                <Grid>
                                                <Button Height="23" Style="{StaticResource BottomStepButton}" Content="{Binding Description}"/>
                                                </Grid>
                                            -->
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                                <Button x:Name="ButtonGoTop"
                                        Cursor="Hand"
                                        Style="{StaticResource BottomStepButton}">
                                    <Image Width="11"
                                           Height="11"
                                           Margin="0"
                                           HorizontalAlignment="Center"
                                           Source="/Themes/default/images/button/goTop.png"
                                           Stretch="Fill" />
                                </Button>
                            </StackPanel>

                            <Rectangle Height="2" VerticalAlignment="Bottom">
                                <Rectangle.Fill>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <LinearGradientBrush.RelativeTransform>
                                            <CompositeTransform CenterX="0.5"
                                                                CenterY="0.5"
                                                                Rotation="-180" />
                                        </LinearGradientBrush.RelativeTransform>
                                        <GradientStop Offset="1" Color="#FF494949" />
                                        <GradientStop Color="#FFD2D2D2" />
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                            <Rectangle Height="1"
                                       Margin="4,0,4,1"
                                       VerticalAlignment="Bottom"
                                       Fill="#FFCDCDCD" />
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  LinkLabel Style  -->
    <Style TargetType="ovsControls:LinkLabel">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ovsControls:LinkLabel">
                    <toolkit:WrapPanel x:Name="LayoutRoot" Orientation="Horizontal" />
