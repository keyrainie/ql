            <Setter.Value>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="#FF737373" />
                    <GradientStop Offset="0.375" Color="#FF878787" />
                    <GradientStop Offset="0.625" Color="#FF5D5D5D" />
                    <GradientStop Offset="1" Color="#FF959595" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="DropBorderThickness" Value="2" />
        <Setter Property="DropBorderCornerRadius" Value="3,3,3,3" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ovsControls:DropTarget">
                    <Grid x:Name="MainControlHost"
                          HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                          VerticalAlignment="{TemplateBinding VerticalAlignment}">
                        <!--  The content ghost when nothing has been dropped  -->
                        <Grid x:Name="GhostContentControl"
                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />

                        <Grid x:Name="MainContentControl"
                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />

                        <!--  The bounding box when a dragsource is hovering over the target  -->
                        <!--
                            <Border x:Name="BoundingBorder"
                            Background="#FF515456" Opacity="0.1"
                            Padding="1" IsHitTestVisible="False"
                            >
                            
                            </Border>
                        -->
                        <Border x:Name="BoundingBorder"
                                Margin="0,2"
                                Background="Transparent"
                                BorderBrush="{TemplateBinding DropBorderBrush}"
                                BorderThickness="{TemplateBinding DropBorderThickness}"
                                CornerRadius="{TemplateBinding DropBorderCornerRadius}"
                                IsHitTestVisible="False"
                                Opacity="0"
                                Padding="1" />

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

