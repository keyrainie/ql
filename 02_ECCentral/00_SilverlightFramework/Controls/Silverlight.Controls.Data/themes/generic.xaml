    <!--  ColumnsSelctorV3  -->
    <Style TargetType="oversea:ColumnsSelectorV3">
        <Setter Property="BorderBrush" Value="#CCCCCC" />
        <Setter Property="FontFamily" Value="{StaticResource DataGridDefaultFontFamily}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="oversea:ColumnsSelectorV3">
                    <Grid x:Name="RootElement" Margin="5,8">
                        <Grid.Resources>
                            <local:Resource x:Key="localResource" />
                            <Style TargetType="ToggleButton">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="#27539c" />
                                <Setter Property="FontSize" Value="12" />
                                <Setter Property="Height" Value="22" />
                                <Setter Property="FontFamily" Value="{StaticResource DataGridDefaultFontFamily}" />
                                <Setter Property="Padding" Value="3,0,3,0" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Grid>
                                                <VisualStateManager.VisualStateGroups>
                                                    <VisualStateGroup x:Name="CommonStates">
                                                        <VisualState x:Name="Normal" />

                                                        <VisualState x:Name="MouseOver">
                                                            <Storyboard>
                                                                <ObjectAnimationUsingKeyFrames Duration="00:00:00"
                                                                                               Storyboard.TargetName="MouseOverState"
                                                                                               Storyboard.TargetProperty="(UIElement.Visibility)">
                                                                    <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                                        <DiscreteObjectKeyFrame.Value>
                                                                            <Visibility>Visible</Visibility>
                                                                        </DiscreteObjectKeyFrame.Value>
                                                                    </DiscreteObjectKeyFrame>
                                                                </ObjectAnimationUsingKeyFrames>
                                                            </Storyboard>
                                                        </VisualState>

                                                        <VisualState x:Name="Pressed">
                                                            <Storyboard>
                                                                <ObjectAnimationUsingKeyFrames Duration="00:00:00"
                                                                                               Storyboard.TargetName="PressedState"
                                                                                               Storyboard.TargetProperty="(UIElement.Visibility)">
                                                                    <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                                        <DiscreteObjectKeyFrame.Value>
                                                                            <Visibility>Visible</Visibility>
                                                                        </DiscreteObjectKeyFrame.Value>
                                                                    </DiscreteObjectKeyFrame>
                                                                </ObjectAnimationUsingKeyFrames>
                                                            </Storyboard>
                                                        </VisualState>
                                                    </VisualStateGroup>
                                                    <VisualStateGroup x:Name="CheckStates">
                                                        <VisualState x:Name="Checked">
                                                            <Storyboard>
                                                                <ObjectAnimationUsingKeyFrames Duration="00:00:00"
                                                                                               Storyboard.TargetName="PressedState"
                                                                                               Storyboard.TargetProperty="(UIElement.Visibility)">
                                                                    <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                                                        <DiscreteObjectKeyFrame.Value>
                                                                            <Visibility>Visible</Visibility>
                                                                        </DiscreteObjectKeyFrame.Value>
                                                                    </DiscreteObjectKeyFrame>
                                                                </ObjectAnimationUsingKeyFrames>
                                                            </Storyboard>
                                                        </VisualState>
                                                        <VisualState x:Name="Unchecked" />
                                                    </VisualStateGroup>
                                                </VisualStateManager.VisualStateGroups>

                                                <Grid x:Name="NormalState">
                                                    <Rectangle RadiusX="2"
                                                               RadiusY="2"
                                                               Stroke="#FFAAAAAA">
                                                        <Rectangle.Effect>
                                                            <DropShadowEffect BlurRadius="0"
                                                                              Direction="280"
                                                                              Opacity="0.05"
                                                                              ShadowDepth="1" />
                                                        </Rectangle.Effect>
                                                        <Rectangle.Fill>
                                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                                <GradientStop Offset="1" Color="White" />
                                                                <GradientStop Color="White" />
                                                                <GradientStop Offset="0.97" Color="#FFDEDEDE" />
                                                            </LinearGradientBrush>
                                                        </Rectangle.Fill>
                                                    </Rectangle>

                                                    <Image Width="16"
                                                           Height="16"
                                                           Margin="10,0,0,0"
                                                           HorizontalAlignment="Left"
                                                           VerticalAlignment="Center"
                                                           Source="/Themes/Default/Images/Grid/ColumnsSelector.png"
                                                           Stretch="Fill" />
                                                    <Canvas Width="5"
                                                            Margin="0,10,10,0"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Top">
                                                        <Path Width="5"
                                                              Height="3"
                                                              VerticalAlignment="Center"
                                                              Data="M0,0 L5,0 L5,1 L4,1 L4,2 L3,2 L3,3 L2,3 L2,2 L1,2 L1,1 L0,1 z"
                                                              Stretch="Fill"
                                                              UseLayoutRounding="False">
                                                            <Path.Effect>
                                                                <DropShadowEffect BlurRadius="0"
                                                                                  Direction="280"
                                                                                  Opacity="0.5"
                                                                                  ShadowDepth="1"
                                                                                  Color="White" />
                                                            </Path.Effect>
                                                            <Path.Fill>
                                                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                                    <GradientStop Offset="1" Color="#FF4C4C4C" />
                                                                    <GradientStop Color="#FF686868" />
                                                                </LinearGradientBrush>
                                                            </Path.Fill>
                                                        </Path>
                                                    </Canvas>
                                                </Grid>

                                                <Grid x:Name="MouseOverState" Visibility="Collapsed">
                                                    <Rectangle RadiusX="2"
                                                               RadiusY="2"
                                                               Stroke="#FF20AACB">
                                                        <Rectangle.Fill>
                                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                                <GradientStop Offset="1" Color="White" />
                                                                <GradientStop Color="White" />
                                                                <GradientStop Offset="0.97" Color="#FFDDDDDD" />
                                                            </LinearGradientBrush>
                                                        </Rectangle.Fill>
                                                    </Rectangle>
                                                    <Rectangle Margin="1"
                                                               RadiusX="2"
                                                               RadiusY="2">
                                                        <Rectangle.Stroke>
                                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                                <GradientStop Offset="1" Color="#FFCED6EE" />
                                                                <GradientStop Color="#FFE5ECFE" />
                                                            </LinearGradientBrush>
                                                        </Rectangle.Stroke>
                                                    </Rectangle>
                                                    <Rectangle Margin="2"
                                                               RadiusX="2"
                                                               RadiusY="2">
                                                        <Rectangle.Stroke>
                                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                                <GradientStop Offset="0" Color="#FFEDF1FD" />
                                                                <GradientStop Offset="1" Color="#FFD7DBE7" />
                                                            </LinearGradientBrush>
                                                        </Rectangle.Stroke>
                                                    </Rectangle>
                                                    <Rectangle Margin="3"
                                                               RadiusX="2"
                                                               RadiusY="2">
                                                        <Rectangle.Stroke>
                                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                                <GradientStop Offset="0" Color="#FFF7F8FC" />
                                                                <GradientStop Offset="1" Color="#FFDFE0E4" />
                                                            </LinearGradientBrush>
                                                        </Rectangle.Stroke>
                                                    </Rectangle>

                                                    <Image Width="16"
                                                           Height="16"
                                                           Margin="10,0,0,0"
                                                           HorizontalAlignment="Left"
                                                           VerticalAlignment="Center"
                                                           Source="/Themes/Default/Images/Grid/ColumnsSelector.png"
                                                           Stretch="Fill" />
                                                    <Canvas Width="5"
                                                            Margin="0,10,10,0"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Top">
                                                        <Path Width="5"
                                                              Height="3"
                                                              VerticalAlignment="Center"
                                                              Data="M0,0 L5,0 L5,1 L4,1 L4,2 L3,2 L3,3 L2,3 L2,2 L1,2 L1,1 L0,1 z"
                                                              Stretch="Fill"
                                                              UseLayoutRounding="False">
                                                            <Path.Effect>
                                                                <DropShadowEffect BlurRadius="0"
                                                                                  Direction="280"
                                                                                  Opacity="0.5"
                                                                                  ShadowDepth="1"
                                                                                  Color="White" />
                                                            </Path.Effect>
                                                            <Path.Fill>
                                                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                                    <GradientStop Offset="1" Color="#FF4C4C4C" />
                                                                    <GradientStop Color="#FF686868" />
                                                                </LinearGradientBrush>
                                                            </Path.Fill>
                                                        </Path>
                                                    </Canvas>
                                                </Grid>

                                                <Grid x:Name="PressedState" Visibility="Collapsed">
                                                    <Rectangle RadiusX="2"
                                                               RadiusY="2"
