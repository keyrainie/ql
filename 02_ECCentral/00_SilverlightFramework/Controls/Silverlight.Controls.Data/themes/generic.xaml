<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
                    xmlns:controlsPrimitives="clr-namespace:System.Windows.Controls.Primitives;assembly=System.Windows.Controls"
                    xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
                    xmlns:dataInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.Input"
                    xmlns:inputToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
                    xmlns:lib="clr-namespace:Newegg.Oversea.Silverlight.Controls.Data.Oversea"
                    xmlns:local="clr-namespace:Newegg.Oversea.Silverlight.Controls.Data;assembly=Newegg.Oversea.Silverlight.Controls.Data"
                    xmlns:localprimitives="clr-namespace:System.Windows.Controls.Primitives;assembly=System.Windows.Controls.Data"
                    xmlns:oversea="clr-namespace:Newegg.Oversea.Silverlight.Controls.Primitives;assembly=Newegg.Oversea.Silverlight.Controls.Data"
                    xmlns:ovsControls="clr-namespace:Newegg.Oversea.Silverlight.Controls;assembly=Newegg.Oversea.Silverlight.Controls"
                    xmlns:primitives="clr-namespace:System.Windows.Controls.Primitives;assembly=System.Windows"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
                    xmlns:vsm="clr-namespace:System.Windows;assembly=System.Windows">

    <!--  1.String Resources  -->
    <sys:String x:Key="DataGridDefaultFontSize">12</sys:String>
    <sys:String x:Key="DataGridDefaultFontFamily">Tahoma,SimSun,PMingLiU</sys:String>

    <!--  DataGridHeaderBackground  -->
    <LinearGradientBrush x:Key="DataGridHeaderBackground" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#FF6E6E6E" />
        <GradientStop Offset="1" Color="#FF4D4D4D" />
    </LinearGradientBrush>

    <!--  DataGridColumnHeaderStyle  -->
    <Style x:Key="ColumnHeaderStyle" TargetType="localprimitives:DataGridColumnHeader">
        <Setter Property="Foreground" Value="#FFFFFF" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="FontFamily" Value="{StaticResource DataGridDefaultFontFamily}" />
        <Setter Property="SeparatorVisibility" Value="Visible" />
        <Setter Property="SeparatorBrush" Value="#333333" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="localprimitives:DataGridColumnHeader">
                    <Grid Name="Root">
                        <vsm:VisualStateManager.VisualStateGroups>
                            <vsm:VisualStateGroup x:Name="CommonStates">
                                <vsm:VisualState x:Name="Normal" />
                                <vsm:VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="MouseOverState" Storyboard.TargetProperty="Opacity">
                                            <SplineDoubleKeyFrame KeyTime="0" Value="1" />
                                        </DoubleAnimationUsingKeyFrames>

                                        <!--
                                            <ColorAnimation Duration="0" Storyboard.TargetName="BackgroundGradient" Storyboard.TargetProperty="(Background).(GradientStops)[0].Color" To="#FF8A8A8A"/>
                                            <ColorAnimation Duration="0" Storyboard.TargetName="BackgroundGradient" Storyboard.TargetProperty="(Background).(GradientStops)[1].Color" To="#FF6F6F6F"/>
                                        -->
                                    </Storyboard>
                                </vsm:VisualState>
                                <vsm:VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PressedState" Storyboard.TargetProperty="Opacity">
                                            <SplineDoubleKeyFrame KeyTime="0" Value="1" />
                                        </DoubleAnimationUsingKeyFrames>
                                        <!--
                                            <ColorAnimation Duration="0" Storyboard.TargetName="BackgroundGradient" Storyboard.TargetProperty="(Background).(GradientStops)[0].Color" To="#FF6E6E6E"/>
                                            <ColorAnimation Duration="0" Storyboard.TargetName="BackgroundGradient" Storyboard.TargetProperty="(Background).(GradientStops)[1].Color" To="#FF4D4D4D"/>
                                        -->
                                    </Storyboard>
                                </vsm:VisualState>
                            </vsm:VisualStateGroup>
                            <vsm:VisualStateGroup x:Name="SortStates">
                                <vsm:VisualState x:Name="Unsorted" />
                                <vsm:VisualState x:Name="SortAscending">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="SortAscIcon"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1.0" />
                                    </Storyboard>
                                </vsm:VisualState>
                                <vsm:VisualState x:Name="SortDescending">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="SortDescIcon"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1.0" />
                                    </Storyboard>
                                </vsm:VisualState>
                            </vsm:VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Focused">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="MouseOverState" Storyboard.TargetProperty="Opacity">
                                            <SplineDoubleKeyFrame KeyTime="0" Value="1" />
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Unfocused" />
                            </VisualStateGroup>
                        </vsm:VisualStateManager.VisualStateGroups>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="23" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Border x:Name="NormalState"
                                BorderBrush="#FF333333"
                                BorderThickness="0 1">
                            <Grid>
                                <Rectangle Stroke="#FF333333">
                                    <Rectangle.Effect>
                                        <DropShadowEffect BlurRadius="0"
                                                          Direction="280"
                                                          Opacity="0.05"
                                                          ShadowDepth="1" />
                                    </Rectangle.Effect>
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Color="#FF6E6E6E" />
                                            <GradientStop Offset="1" Color="#FF4D4D4D" />
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <Rectangle>
                                    <Rectangle.Stroke>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Offset="0" Color="#FF8C8C8C" />
                                            <GradientStop Offset="1" Color="#FF5F5F5F" />
                                        </LinearGradientBrush>
                                    </Rectangle.Stroke>
                                </Rectangle>
                            </Grid>
                        </Border>

                        <Border x:Name="MouseOverState"
                                BorderBrush="#FF333333"
                                BorderThickness="0 1"
                                Opacity="0">
                            <Grid>
                                <Rectangle Stroke="#FF333333">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Color="#FF8A8A8A" />
                                            <GradientStop Offset="1" Color="#FF6F6F6F" />
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <Rectangle>
                                    <Rectangle.Stroke>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Offset="0" Color="#FFA5A5A5" />
                                            <GradientStop Offset="1" Color="#FF7D7D7D" />
                                        </LinearGradientBrush>
                                    </Rectangle.Stroke>
                                </Rectangle>

                            </Grid>
                        </Border>

                        <Border x:Name="PressedState"
                                BorderBrush="#FF333333"
                                BorderThickness="0 1"
                                Opacity="0">
                            <Grid>
                                <Rectangle Stroke="#FF333333">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Offset="1" Color="#FF6E6E6E" />
                                            <GradientStop Color="#FF4D4D4D" />
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <Rectangle>
                                    <Rectangle.Stroke>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Offset="1" Color="#FF8C8C8C" />
                                            <GradientStop Color="#FF5F5F5F" />
                                        </LinearGradientBrush>
                                    </Rectangle.Stroke>
                                </Rectangle>

                            </Grid>
                        </Border>

                        <Grid Margin="5,0,0,0"
                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <oversea:ColumnPinControl Width="16"
                                                      Height="17"
                                                      Margin="0,0,5,0"
                                                      Tag="{TemplateBinding Content}" />

                            <ContentPresenter Grid.Column="1"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Content="{TemplateBinding Content}" />

                            <Grid x:Name="SortAscIcon"
                                  Grid.Column="2"
                                  Margin="7,0"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Opacity="0">
                                <Path Width="7"
                                      Height="8"
                                      Data="M0,3.0000002 L7,3.0000002 L7,4 L5,4 L5,8 L2,8 L2,4 L0,4 z M1,2 L6,2 L6,3 L1,3 z M3.0000002,0 L4,0 L4,1 L5,1 L5,2 L2.0000002,2 L2.0000002,1 L3.0000002,1 z"
                                      Stretch="Fill"
                                      UseLayoutRounding="False">
                                    <Path.Effect>
                                        <DropShadowEffect BlurRadius="2"
                                                          Direction="280"
                                                          Opacity="0.8"
                                                          ShadowDepth="1" />
                                    </Path.Effect>
                                    <Path.Fill>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Offset="0" Color="White" />
                                            <GradientStop Offset="1" Color="#FFD1D1D1" />
                                        </LinearGradientBrush>
                                    </Path.Fill>
                                </Path>
                            </Grid>

                            <Grid x:Name="SortDescIcon"
                                  Grid.Column="2"
                                  Margin="7,0"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Opacity="0">
                                <Path Width="7"
                                      Height="8"
                                      Data="M0,3.0000002 L7,3.0000002 L7,4 L5,4 L5,8 L2,8 L2,4 L0,4 z M1,2 L6,2 L6,3 L1,3 z M3.0000002,0 L4,0 L4,1 L5,1 L5,2 L2.0000002,2 L2.0000002,1 L3.0000002,1 z"
                                      RenderTransformOrigin="0.5,0.5"
                                      Stretch="Fill"
                                      UseLayoutRounding="False">
                                    <Path.Effect>
                                        <DropShadowEffect BlurRadius="2"
                                                          Direction="90"
                                                          Opacity="0.8"
                                                          ShadowDepth="1" />
                                    </Path.Effect>
                                    <Path.RenderTransform>
                                        <CompositeTransform ScaleY="-1" />
                                    </Path.RenderTransform>
                                    <Path.Fill>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Offset="1" Color="White" />
                                            <GradientStop Color="#FFD1D1D1" />
                                        </LinearGradientBrush>
                                    </Path.Fill>
                                </Path>
                            </Grid>
                        </Grid>

                        <Rectangle Name="VerticalSeparator"
                                   Grid.Column="1"
                                   Width="1"
                                   VerticalAlignment="Stretch"
                                   Fill="{TemplateBinding SeparatorBrush}"
                                   Visibility="{TemplateBinding SeparatorVisibility}" />

                        <ovsControls:AdvancedTextBox x:Name="DATAGRID_FILTER_TEXT"
                                                     Grid.Row="1"
                                                     Grid.ColumnSpan="2"
                                                     Margin="2"
                                                     Foreground="Black"
                                                     Tag="{TemplateBinding Content}"
                                                     Visibility="Collapsed" />

                        <Rectangle Grid.Row="1"
                                   Grid.Column="1"
                                   Width="1"
                                   VerticalAlignment="Stretch"
                                   Fill="#F1F1F1"
                                   Visibility="{TemplateBinding SeparatorVisibility}" />

                        <Rectangle Grid.Row="1"
                                   Grid.ColumnSpan="2"
                                   Height="1"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Bottom"
                                   Fill="#F1F1F1"
                                   Visibility="{TemplateBinding SeparatorVisibility}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  DataGridRowStyle  -->
    <Style x:Key="DataGridRowStyle" TargetType="data:DataGridRow">
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="data:DataGridRow">
                    <localprimitives:DataGridFrozenGrid Name="Root">
                        <vsm:VisualStateManager.VisualStateGroups>
                            <vsm:VisualStateGroup x:Name="CommonStates">
                                <vsm:VisualState x:Name="Normal" />
                                <vsm:VisualState x:Name="NormalAlternatingRow">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="BackgroundRectangle"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" />
                                    </Storyboard>
                                </vsm:VisualState>
                                <vsm:VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="MouseOverRectangle"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                    </Storyboard>
                                </vsm:VisualState>
                                <vsm:VisualState x:Name="NormalSelected">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="BackgroundRectangle"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                    </Storyboard>
                                </vsm:VisualState>
                                <vsm:VisualState x:Name="MouseOverSelected">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="BackgroundRectangle"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                    </Storyboard>
                                </vsm:VisualState>
                                <vsm:VisualState x:Name="UnfocusedSelected">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="BackgroundRectangle"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                        <!--  <ColorAnimation Duration="0" Storyboard.TargetName="BackgroundRectangle" Storyboard.TargetProperty="(Fill).Color" To="#FFE1E7EC"/>  -->
                                    </Storyboard>
                                </vsm:VisualState>
                            </vsm:VisualStateGroup>
                            <vsm:VisualStateGroup x:Name="ValidationStates">
                                <vsm:VisualState x:Name="Valid" />
                                <vsm:VisualState x:Name="Invalid">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Duration="0"
                                                                       Storyboard.TargetName="BackgroundRectangle"
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="InvalidVisualElement"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                    </Storyboard>
                                </vsm:VisualState>
                            </vsm:VisualStateGroup>
                        </vsm:VisualStateManager.VisualStateGroups>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Grid.Resources>
                            <Storyboard x:Key="DetailsVisibleTransition">
                                <DoubleAnimation Duration="00:00:0.1"
                                                 Storyboard.TargetName="DetailsPresenter"
                                                 Storyboard.TargetProperty="ContentHeight" />
                            </Storyboard>
                        </Grid.Resources>

                        <!--
                            <Rectangle x:Name="BackgroundRectangle" Grid.RowSpan="2" Grid.ColumnSpan="2" Opacity="0">
                            <Rectangle.Effect>
                            <DropShadowEffect BlurRadius="0" Color="#FFCCCCCC" Direction="280" ShadowDepth="1"/>
                            </Rectangle.Effect>
                            <Rectangle.Fill>
                            <LinearGradientBrush StartPoint=".5,0" EndPoint=".5,1">
                            <GradientStop Color="#FFFCF4E2"/>
                            <GradientStop Color="#FFECDC91" Offset="1"/>
                            <GradientStop Color="#FFFAC544" Offset="0.9"/>
                            </LinearGradientBrush>
                            </Rectangle.Fill>
                            </Rectangle>
                        -->

                        <Border x:Name="BackgroundRectangle"
                                Grid.RowSpan="2"
                                Grid.ColumnSpan="2"
                                Margin="0"
                                BorderBrush="#FF7DA2CE"
                                BorderThickness="1"
                                CornerRadius="2"
                                Opacity="0">
                            <Border BorderThickness="1" CornerRadius="2">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="#FFDCEBFC" />
                                        <GradientStop Offset="1" Color="#FFC1DBFC" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Offset="1" Color="#FFDBEAFD" />
                                        <GradientStop Color="#FFEBF4FD" />
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                            </Border>
                        </Border>


                        <!--
                            <Rectangle x:Name="MouseOverRectangle" Stroke="#FFD0DCFF" Grid.RowSpan="1" Grid.ColumnSpan="2" Opacity="0">
                            <Rectangle.Fill>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFFEFFFF"/>
                            <GradientStop Color="#FFE5ECFF" Offset="1"/>
                            </LinearGradientBrush>
                            </Rectangle.Fill>
                            </Rectangle>
                        -->

                        <Border x:Name="MouseOverRectangle"
                                Grid.RowSpan="1"
                                Grid.ColumnSpan="2"
                                Margin="0"
                                BorderBrush="#FFB8D6FB"
                                BorderThickness="1"
                                CornerRadius="2"
                                Opacity="0">
                            <Border BorderThickness="1" CornerRadius="2">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Offset="0" Color="#FFF9FBFD" />
                                        <GradientStop Offset="1" Color="#FFEBF3FD" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Offset="0" Color="#FFFCFDFE" />
                                        <GradientStop Offset="1" Color="#FFF2F7FE" />
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                            </Border>
                        </Border>


                        <Rectangle x:Name="InvalidVisualElement"
                                   Grid.RowSpan="2"
                                   Grid.ColumnSpan="2"
                                   Fill="#FFF7D8DB"
                                   Opacity="0" />

                        <localprimitives:DataGridRowHeader Name="RowHeader"
                                                           Grid.RowSpan="3"
                                                           localprimitives:DataGridFrozenGrid.IsFrozen="True" />
                        <localprimitives:DataGridCellsPresenter Name="CellsPresenter"
                                                                Grid.Column="1"
                                                                localprimitives:DataGridFrozenGrid.IsFrozen="True" />
                        <localprimitives:DataGridDetailsPresenter Name="DetailsPresenter"
                                                                  Grid.Row="1"
                                                                  Grid.Column="1" />
                        <Rectangle Name="BottomGridLine"
                                   Grid.Row="2"
                                   Grid.Column="1"
                                   Height="1"
                                   HorizontalAlignment="Stretch" />
                    </localprimitives:DataGridFrozenGrid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  DataGridRowHeader  -->
    <Style x:Key="DataGridRowHeaderStyle" TargetType="localprimitives:DataGridRowHeader">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="SeparatorBrush" Value="#CCCCCC" />
        <Setter Property="SeparatorVisibility" Value="Collapsed" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="localprimitives:DataGridRowHeader">
                    <Grid Name="Root">
                        <vsm:VisualStateManager.VisualStateGroups>
                            <vsm:VisualStateGroup x:Name="CommonStates">
                                <vsm:VisualState x:Name="Normal" />
                                <vsm:VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="BackgroundRectangle"
                                                        Storyboard.TargetProperty="(Fill).Color"
                                                        To="#99D5EAF1" />
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="EditingRowGlyph"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" />
                                    </Storyboard>
                                </vsm:VisualState>
                                <vsm:VisualState x:Name="MouseOverCurrentRowSelected">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="CurrentRowGlyph"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" />
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="EditingRowGlyph"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                    </Storyboard>
                                </vsm:VisualState>
                                <vsm:VisualState x:Name="NormalCurrentRow">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="EditingRowGlyph"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" />
                                    </Storyboard>
                                </vsm:VisualState>
                                <vsm:VisualState x:Name="NormalCurrentRowSelected">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="CurrentRowGlyph"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" />
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="EditingRowGlyph"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                    </Storyboard>
                                </vsm:VisualState>
                                <vsm:VisualState x:Name="NormalSelected">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="CurrentRowGlyph"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" />
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="EditingRowGlyph"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                    </Storyboard>
                                </vsm:VisualState>
                                <vsm:VisualState x:Name="NormalEditingRow">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="BackgroundRectangle"
                                                        Storyboard.TargetProperty="(Fill).Color"
                                                        To="#FFD5EAF1" />
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="CurrentRowGlyph"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="EditingRowGlyph"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" />
                                    </Storyboard>
                                </vsm:VisualState>
                            </vsm:VisualStateGroup>
                            <vsm:VisualStateGroup x:Name="ValidationStates">
                                <vsm:VisualState x:Name="RowValid" />
                                <vsm:VisualState x:Name="RowInvalid">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="BackgroundRectangle"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0" />
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="RowInvalidVisualElement"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1" />
                                    </Storyboard>
                                </vsm:VisualState>
                            </vsm:VisualStateGroup>
                        </vsm:VisualStateManager.VisualStateGroups>

                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Border Grid.RowSpan="3"
                                Grid.ColumnSpan="2"
                                Margin="0"
                                VerticalAlignment="Stretch"
                                BorderBrush="{TemplateBinding SeparatorBrush}"
                                BorderThickness="0 0 1 0">
                            <Grid Background="{TemplateBinding Background}">
                                <Rectangle x:Name="RowInvalidVisualElement"
                                           Grid.RowSpan="3"
                                           Grid.ColumnSpan="2"
                                           Fill="#FFF7D8DB"
                                           Opacity="0"
                                           Stretch="Fill" />
                                <Rectangle x:Name="BackgroundRectangle"
                                           Grid.RowSpan="3"
                                           Grid.ColumnSpan="2"
                                           Fill="Transparent"
                                           Stretch="Fill" />
                            </Grid>
                        </Border>
                        <Rectangle Name="HorizontalSeparator"
                                   Grid.Row="2"
