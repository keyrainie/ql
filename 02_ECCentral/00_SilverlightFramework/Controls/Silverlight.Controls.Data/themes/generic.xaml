                                                <GradientStop Offset="0.015" Color="#FFFFFFFF" />
                                                <GradientStop Offset="0.375" Color="#F9FFFFFF" />
                                                <GradientStop Offset="0.6" Color="#E5FFFFFF" />
                                                <GradientStop Offset="1" Color="#C6FFFFFF" />
