                                              Height="26"
                                              Margin="20 0 0 0" />
                                    <HyperlinkButton x:Name="hlbDelete"
                                                     Margin="2 0"
                                                     VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Themes/Default/Images/Grid/Delete.png" />
                                            <TextBlock VerticalAlignment="Center"
                                                       FontSize="{TemplateBinding FontSize}"
                                                       Text="Delete" />
                                        </StackPanel>
                                    </HyperlinkButton>
                                </StackPanel>
                                <TextBlock x:Name="tbAvailableColumns"
                                           Grid.Row="1"
                                           Grid.Column="0"
                                           Margin="5 5 0 0"
                                           VerticalAlignment="Center"
                                           FontSize="{TemplateBinding FontSize}"
                                           Text="Available Columns" />
                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:Name="tbSelectedColumns"
