<UserControl x:Class="Newegg.Oversea.Silverlight.ControlPanel.SilverlightUI.UserControls.Menu.MenuItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <Grid x:Name="LayoutRoot" Margin="0,6,-7,6" Background="Transparent">
        <ToolTipService.ToolTip>
            <ToolTip Content="{Binding Name}" />
        </ToolTipService.ToolTip>
        <Path x:Name="PathBackground" Data="M85.875,270.875 L207.75,271 L214.875,282.5 L207.5,294.875 L86,294.875" 
                                  Stretch="Fill" 
                                  UseLayoutRounding="False"
                                  HorizontalAlignment="Left" 
                                  Width="129" 
                                  Margin="0">
            <Path.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFff8f25" Offset="1"/>
                    <GradientStop Color="#FFFFB976"/>
                </LinearGradientBrush>
            </Path.Fill>
        </Path>
        <TextBlock x:Name="TextBlockContent" 
                       TextTrimming="WordEllipsis"
                       Text="Item Maintain"
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center" 
                       FontWeight="Bold" 
                       Margin="15,0,0,0" 
                       Foreground="White"/>
    </Grid>
</UserControl>
