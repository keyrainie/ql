@using ECommerce.Enums
@using ECommerce.WebFramework
@model ECommerce.Entity.RMA.RMARefundInfo
<style type="text/css">
    .control-label
    {
        font-size: 14px;
        margin: 2px 0;
    }
</style>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">@GetText("退款信息")</h4>
</div>
<div class="modal-body">
    <div class="form-horizontal form">
        <div class="form-group">
            <label class="col-md-4 control-label">@GetText("客户帐号")：</label>
            <div class="col-md-8">
                <label class="form-control-static">@Model.CustomerID</label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label">@GetText("退款类型")：</label>
            <div class="col-md-8">
                <label class="form-control-static">@Model.RefundPayType.GetEnumDescription()</label>
            </div>
        </div>
        @*<div class="form-group">
            <label class="col-md-4 control-label">@GetText("收款人")：</label>
            <div class="col-md-8">
                <label class="form-control-static">@Model.CardOwnerName</label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label">@GetText("银行")：</label>
            <div class="col-md-8">
                <label class="form-control-static">@Model.BankName</label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label">@GetText("卡号")：</label>
            <div class="col-md-8">
                <label class="form-control-static">@Model.CardNumber</label>
            </div>
        </div>*@
        <div class="form-group">
            <label class="col-md-4 control-label">@GetText("退款金额")：</label>
            <div class="col-md-8">
                <label class="form-control-static">@(Model.CashAmt.HasValue ? Model.CashAmt.Value.ToString("f2") : "")</label>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn default">@GetText("关闭")</button>
</div>
