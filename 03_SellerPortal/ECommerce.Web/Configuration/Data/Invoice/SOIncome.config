<?xml version="1.0" encoding="utf-8" ?>
<dataOperations xmlns="http://oversea.ECommerce.com/DataOperation">

  <dataCommand name="GetValidSOIncomeInfo" database="Write" commandType="Text">
    <commandText>
      <![CDATA[
          SELECT
             [SysNo]
            ,[OrderType]
            ,[OrderSysNo]
            ,[OrderAmt]
            ,[IncomeStyle]
            ,[IncomeAmt]
            ,[IncomeTime]
            ,[IncomeUserSysNo]
            ,[ConfirmTime]
            ,[ConfirmUserSysNo]
            ,[ReferenceID]
            ,[Note]
            ,[Status]
            ,[PrepayAmt]
            ,[CustomerSysNo]
            ,[GiftCardPayAmt]
            ,[PointPayAmt] AS PointPay
            ,[CompanyCode]
          FROM [OverseaInvoiceReceiptManagement].[dbo].[V_IM_SOIncome] WITH(NOLOCK)
          WHERE [OrderSysNo] = @SOSysNo
            AND [OrderType] = @OrderType
            AND [Status] <> -1
            AND [Status] <> 2
       ]]>
    </commandText>
    <parameters>
      <param name="@SOSysNo" dbType="Int32" />
      <param name="@OrderType" dbType="Int32" />
    </parameters>
  </dataCommand>

  <dataCommand name="GetValidSOIncomeRefundInfo" database="Write" commandType="Text">
    <commandText>
      <![CDATA[
  SELECT
      a.[SysNo]
     ,[OrderType]
     ,[OrderSysNo]
     ,a.[SOSysNo]
     ,[BankName]
     ,[BranchBankName]
     ,[CardNumber]
     ,[CardOwnerName]
     ,[PostAddress]
     ,[PostCode]
     ,[ReceiverName]
     ,[RefundPayType]
     ,[CreateUserSysNo]
     ,a.[CreateTime]
     ,[AuditUserSysno]
     ,[AuditTime]
     ,[Status]
     ,[Note]
     ,[HaveAutoRMA]
     ,[RefundCashAmt]
     ,[RefundPoint]
     ,[RefundGiftCard]
     ,[ToleranceAmt]
     ,[RefundReason]
     ,[CustomerSysNo]
     ,a.[CompanyCode]
     ,[EditUserSysNo]
     ,[EditTime]
     ,[FinNote]
     ,b.SpecialSOType
  FROM [OverseaInvoiceReceiptManagement].[dbo].[V_IM_SOIncomeBankInfo] AS a WITH(NOLOCK)
  LEFT JOIN OverseaOrderManagement.dbo.V_OM_SO_CheckShipping  AS b WITH(NOLOCK)
      ON a.SOSysNo = b.SOSysNo
  WHERE a.[Status]<>-1
	AND a.SOSysno=@SOSysNo AND a.OrderType=@OrderType
       ]]>
    </commandText>
    <parameters>
      <param name="@SOSysNo" dbType="Int32" />
      <param name="@OrderType" dbType="Int32" />
    </parameters>
  </dataCommand>

  <dataCommand name="InsertSOIncome" database="Write" commandType="Text">
    <commandText>
      <![CDATA[
DECLARE @SysNo int
IF NOT EXISTS(SELECT top 1 sysno FROM ipp3.dbo.Finance_SOIncome WITH  (NOLOCK)
	  WHERE OrderType=@OrderType and OrderSysNo=@OrderSysNo and [Status]=@Status)

BEGIN
        INSERT INTO [IPP3].[dbo].[Finance_SOIncome]
           ([OrderType]
           ,[OrderSysNo]
           ,[OrderAmt]
           ,[IncomeStyle]
           ,[IncomeAmt]
           ,[IncomeTime]
           ,[IncomeUserSysNo]
           ,[ReferenceID]
           ,[Note]
           ,[Status]
           ,[PrepayAmt]
           ,[CompanyCode]
		   ,[MasterSoSysNo],
		   [PayAmount],
		   [PointPayAmt],
		   [GiftCardPayAmt],
       [IncomeUserName])
     VALUES
           (@OrderType
           ,@OrderSysNo
           ,@OrderAmt
           ,@IncomeStyle
           ,@IncomeAmt
           ,GETDATE()
           ,@IncomeUserSysNo
           ,@ReferenceID
           ,@Note
           ,@Status
           ,@PrepayAmt
           ,@CompanyCode
		   ,@MasterSoSysNo,
		   @PayAmount,
		   @PointPayAmt,
		   @GiftCardPayAmt,
       @IncomeUserName)
End
SELECT @SysNo=SCOPE_IDENTITY()
SELECT CASE WHEN @SysNo is null THEN 0 else @SysNo END
      ]]>
    </commandText>
    <parameters>
      <param name="@OrderType" dbType="Int32"/>
      <param name="@OrderSysNo" dbType="Int32"/>
      <param name="@IncomeStyle" dbType="Int32"/>
      <param name="@IncomeUserSysNo" dbType="Int32" />
      <param name="@Note" dbType="String"/>
      <param name="@OrderAmt" dbType="Decimal"/>
      <param name="@IncomeAmt" dbType="Decimal"/>
      <param name="@ReferenceID" dbType="String"/>
      <param name="@Status" dbType="Int32"/>
      <param name="@PrepayAmt" dbType="Decimal"/>
      <param name="@CompanyCode" dbType="AnsiStringFixedLength" size="50"/>
      <param name="@MasterSoSysNo" dbType="Int32" />
      <param name="@PayAmount" dbType="Decimal" />
      <param name="@PointPayAmt" dbType="Decimal" property="PointPay" />
      <param name="@GiftCardPayAmt" dbType="Decimal" />
      <param name="@IncomeUserName" dbType="String"/>
    </parameters>
  </dataCommand>

  <dataCommand name="GetSOIncomeList" database="Write" commandType ="Text">
    <commandText>
      <![CDATA[
SELECT TOP 5000
     [SysNo]
    ,[OrderType]
    ,[OrderSysNo]
    ,[OrderAmt]
    ,[IncomeStyle]
    ,[IncomeAmt]
    ,[IncomeTime]
    ,[IncomeUserSysNo]
    ,[ConfirmTime]
    ,[ConfirmUserSysNo]
    ,[ReferenceID]
    ,[Note]
    ,[Status]
    ,[PrepayAmt]
    ,[CustomerSysNo]
    ,[GiftCardPayAmt]
    ,[PointPayAmt] AS PointPay
    ,[CompanyCode]
FROM [OverseaInvoiceReceiptManagement].[dbo].[V_IM_SOIncome] WITH(NOLOCK)
#StrWhere#
      ]]>
    </commandText>
  </dataCommand>
  

 <dataCommand name="UpdateSOIncomeStatus" database="Write" commandType="Text">
    <commandText>
      <![CDATA[
UPDATE  [IPP3].[dbo].[Finance_SOIncome]
SET Status=@Status
  ,ConfirmTime=@ConfirmTime
  ,ConfirmUserSysNo=@ConfirmUserSysNo
WHERE SysNo=@SysNo
      ]]>
    </commandText>
    <parameters>
      <param name="@SysNo" dbType="Int32"/>
      <param name="@Status" dbType="Int32"/>
      <param name="@ConfirmTime" dbType="DateTime"/>
      <param name="@ConfirmUserSysNo" dbType="Int32" />
    </parameters>
  </dataCommand>
</dataOperations>
