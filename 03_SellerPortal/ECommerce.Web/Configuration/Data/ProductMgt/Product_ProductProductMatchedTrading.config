  <!--Query查询-->
  <dataCommand name="ProductMatchedTrading_GetProductMatchedTradingDetailList" database="Write"  commandType="Text">
    <commandText>
      <![CDATA[
      	
      SELECT @TotalCount = COUNT(1) FROM OverseaECommerceManagement.dbo.[ProductMatchedTrading_Detail] A WITH(NOLOCK) 
            inner join ipp3.dbo.Product p WITH(NOLOCK) 
              on A.ProductSysNo=p.SysNo 
            LEFT JOIN IPP3.dbo.Product B WITH(NOLOCK)  
              ON B.CompanyCode =A.Companycode AND B.Sysno=A.ProductSysNo
            LEFT JOIN OverseaPOASNManagement.dbo.V_PM_VendorList VD WITH(NOLOCK)  
              ON VD.CompanyCode =A.Companycode AND VD.Sysno=B.MerchantSysno
            LEFT JOIN OverseaContentManagement.dbo.V_IM_ProductCommonInfo PC WITH(NOLOCK)  
              ON PC.CompanyCode =A.Companycode AND PC.Sysno=B.ProductCommoninfoSysno
      #StrWhere#
      
      
        SELECT  TT.SysNo,
                TT.ProductSysNo,
                TT.CustomerSysNo,
                TT.Content,
                TT.Type,
                ltrim(ltrim(TT.Status)) AS Status,
                /*case when TT.Status='A' AND TT.EditUser='System'  THEN 'A_1'
                     when TT.Status='A' AND TT.EditUser<>'System' THEN 'A_2'
                     when TT.Status='D' AND TT.EditUser='System'  THEN 'D_1'
                     when TT.Status='D' AND TT.EditUser<>'System' THEN 'D_2'
                ELSE ltrim(ltrim(TT.Status)) END Status,
                */
                TT.ReplyCount,
                TT.InDate,
                TT.InUser,
                TT.EditUser,
                TT.EditDate,
                TT.CountNum,
                TT.ProductID,
                TT.ProductName,
                TT.VendorName 
         FROM (SELECT TOP (@EndNumber) ROW_NUMBER() OVER (ORDER BY #SortColumnName#) AS RowNumber,
                A.SysNo,
                A.ProductSysNo,
                p.ProductID,
                p.ProductName,
                A.CustomerSysNo,
                A.Content,
                A.Status,
                A.Type,
                A.ReplyCount,
                A.InDate,
               --,a.InUser
               CASE WHEN A.CustomerSysNo>0 
               THEN (SELECT c.CustomerID FROM OverseaCustomerManagement.dbo.V_CUM_CustomerBaseInfo c WITH (NOLOCK) WHERE c.SysNo = A.CustomerSysNo)
		           ELSE A.InUser END AS InUser,
               A.EditDate,
               A.EditUser,
               CASE WHEN VD.VendorType=0 THEN '泰隆优选' ELSE VD.[VendorName] END AS VendorName,
               (CASE WHEN (SELECT count(1)  
                           FROM OverseaECommerceManagement.dbo.ProductMatchedTrading_Detail b WITH (NOLOCK) 
                           WHERE b.SysNo = A.SysNo) > 1 THEN '是' else '否' end ) AS CountNum
               FROM OverseaECommerceManagement.dbo.ProductMatchedTrading_Detail A WITH(NOLOCK) 
               inner join ipp3.dbo.Product p WITH(NOLOCK) 
                  on A.ProductSysNo=p.SysNo 
               LEFT JOIN IPP3.dbo.Product B WITH(NOLOCK)  
                  ON B.CompanyCode =A.Companycode AND B.Sysno=a.ProductSysNo 
               LEFT JOIN OverseaPOASNManagement.dbo.V_PM_VendorList VD WITH(NOLOCK)  
                  ON VD.CompanyCode =A.Companycode AND VD.Sysno=B.MerchantSysno
               LEFT JOIN OverseaContentManagement.dbo.V_IM_ProductCommonInfo PC WITH(NOLOCK)  
                  ON PC.CompanyCode =A.Companycode AND PC.Sysno=B.ProductCommoninfoSysno #StrWhere# ) TT
WHERE RowNumber > @StartNumber--  AND RowNumber <= @EndNumber ORDER BY RowNumber 
	  ]]>
    </commandText>
  </dataCommand>

  <!--批量设置状态-->
  <dataCommand name="ProductMatchedTrading_BatchUpdateProductMatchedTradingStatus" database="Write"  commandType="Text">
    <commandText>
      <![CDATA[
      EXEC('UPDATE OverseaECommerceManagement.dbo.ProductMatchedTrading_Detail 
      SET [Status] = '''+@STATUS+''',
      EditUser='''+@EditUser+''',
      EditDate=GetDate() 
      WHERE SysNo in ('+@SysNoString+')')
      ]]>
    </commandText>
    <parameters>
      <param name="@SysNoString" dbType="String"/>
      <param name="@Status" dbType="String" />
      <param name="@EditUser" dbType="String" />
    </parameters>
  </dataCommand>

  <!--咨询的基本信息-->
  <dataCommand name="ProductMatchedTrading_GetProductMatchedTradingInfo" database="Write"  commandType="Text">
    <commandText>
      <![CDATA[    
      SELECT a.SysNo
            ,a.ProductSysNo
            ,p.ProductID
            ,p.ProductName
            ,a.CustomerSysNo
            ,a.Content
            ,a.Status 
        ,a.CompanyCode
            ,a.Type
            ,a.ReplyCount
            ,a.InDate
            , CASE WHEN a.CustomerSysNo>0 THEN (SELECT c.CustomerID FROM OverseaCustomerManagement.dbo.V_CUM_CustomerBaseInfo c WITH (NOLOCK) WHERE c.SysNo = a.CustomerSysNo)
		                                          ELSE a.InUser END AS InUser
            ,a.EditDate
            ,a.EditUser     
            ,pcr.NeedAdditionalText
            ,pcr.Content AS rContent               
        FROM OverseaECommerceManagement.dbo.ProductMatchedTrading_Detail AS a WITH(NOLOCK) INNER JOIN
             IPP3.dbo.Product AS p WITH(NOLOCK) ON a.ProductSysNo = p.SysNo  AND p.CompanyCode=a.CompanyCode LEFT OUTER JOIN
             OverseaECommerceManagement.dbo.ProductMatchedTrading_Reply AS pcr WITH(NOLOCK) ON a.SysNo = pcr.MatchedTradingSysNo and pcr.Type='N' AND pcr.CompanyCode=a.CompanyCode
        WHERE a.SysNo =  @SysNo
	  ]]>
    </commandText>
    <parameters>
      <param name="@SysNo" dbType="Int32"/>
    </parameters>
  </dataCommand>

  <!--回复咨询-->
  <dataCommand name="ProductMatchedTrading_InsertProductMatchedTradingReply" database="Write"  commandType="Text">
    <commandText>
      <![CDATA[  
            UPDATE OverseaECommerceManagement.dbo.ProductMatchedTrading_Detail  SET ReplyCount=ReplyCount+1  
            WHERE 
            1 = 1 
            AND SysNo=@MatchedTradingSysNo
  
            UPDATE OverseaECommerceManagement.dbo.ProductMatchedTrading_Detail  SET EditUser=@InUser,EditDate=GETDATE(),Status='R' 
            Where 
            1 = 1 
            AND  (Status='O' OR Status='E') AND SysNo=@MatchedTradingSysNo
      
     INSERT INTO [OverseaECommerceManagement].[dbo].[ProductMatchedTrading_Reply]
           ([MatchedTradingSysNo]
           ,[CustomerSysNo]
           ,[Content]
           ,[Status]
           ,[Type]
           ,[IsTop]
           ,[InDate]
           ,[InUser]
           ,[CompanyCode]
           ,[NeedAdditionalText])
     VALUES
           (@MatchedTradingSysNo
           ,0
           ,@ReplyContent
           ,'A'
           ,'M'
           ,'N'
           ,getdate()
           ,'SellerPortal'
           ,8601
           ,'N')
      ]]>
    </commandText>
    <parameters>
      <param name="@MatchedTradingSysNo" dbType="Int32" size="20" />
      <param name="@ReplyContent" dbType="String" />
      <param name="@InUser" dbType="String" size="50"/>
      <!--<param name="@CompanyCode" dbType="AnsiStringFixedLength" size="50"/>
      <param name="@NeedAdditionalText" dbType="String" size="50" />-->
    </parameters>
  </dataCommand>

  <!--获取厂商关于咨询的回复列表Type = 'M' AND status <> 'O'  -->
  <dataCommand name="ProductMatchedTrading_GetProductMatchedTradingFactoryReply" database="Write"  commandType="Text">
    <!--定义SQL语句-->
    <commandText>
      <![CDATA[    
      SELECT A.[SysNo]
      ,A.[MatchedTradingSysNo]
      ,A.[CustomerSysNo]
      ,A.[Content] as ReplyContent
      ,B.Content as Title
       /*,case when A.Status='A' AND A.EditUser='System'  THEN 'A_1'
             when A.Status='A' AND A.EditUser<>'System' THEN 'A_2'
             when A.Status='A' AND A.Type='M' THEN 'A_3'
             when A.Status='D' AND A.EditUser='System'  THEN 'D_1'
             when A.Status='D' AND A.EditUser<>'System' THEN 'D_2'
             when A.Status='D' AND A.Type='M' THEN 'D_3'
             ELSE ltrim(ltrim(A.Status)) END Status
      */
      ,ltrim(ltrim(A.Status)) AS Status
      ,A.Status as  StatusValue
      ,A.[Type]
      ,A.[IsTop]
      ,A.[InDate]
      ,A.[InUser]
      ,A.[EditDate]
      ,A.[EditUser]
      ,A.[CompanyCode]
      ,A.[NeedAdditionalText]
     ,A.[RefSysno]
      FROM [OverseaECommerceManagement].[dbo].[ProductMatchedTrading_Reply] A WITH(NOLOCK),OverseaECommerceManagement.dbo.ProductMatchedTrading_Detail B WITH(NOLOCK)
        WHERE  B.SysNo = A.MatchedTradingSysNo and A.Type = 'M' AND A.MatchedTradingSysNo =  @MatchedTradingSysNo AND A.Status <> 'O'
	  ]]>
    </commandText>
    <parameters>
      <param name="@MatchedTradingSysNo" dbType="Int32" size="20"/>
    </parameters>
  </dataCommand>

