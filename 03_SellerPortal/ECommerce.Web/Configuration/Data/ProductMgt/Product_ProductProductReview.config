    <commandText>
      <![CDATA[
        UPDATE [OverseaECommerceManagement].[dbo].[ProductReview_Homepage] 
        SET 
        [EditUser]=@EditUser 
        ,[EditDate]=GETDATE() 
        WHERE 
        1=1 
        AND Type=@Type 
        AND ProductReviewSysNo=@SysNo
        
        IF NOT(@@ROWCOUNT>0)
        BEGIN
            INSERT INTO [OverseaECommerceManagement].[dbo].[ProductReview_Homepage]
              ([ProductReviewSysNo]
              ,[Type]
              ,[EditUser]
              ,[EditDate]
              ,[InDate]
              ,[InUser])
          VALUES
              (@SysNo
              ,@Type
              ,@EditUser
              ,GETDATE()
              ,GETDATE()
              ,@EditUser
              )
