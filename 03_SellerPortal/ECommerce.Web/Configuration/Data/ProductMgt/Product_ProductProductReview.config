<?xml version="1.0" encoding="utf-8" ?>
<dataOperations xmlns="http://oversea.ECommerce.com/DataOperation">
  <dataCommand name="ProductReview_QueryProductReviewDetail" database="Write"  commandType="Text">
    <commandText>
      <![CDATA[
      SELECT @TotalCount = COUNT(1) 
      FROM OverseaECommerceManagement.dbo.ProductReview_Detail AS A WITH (NOLOCK) 
      INNER JOIN IPP3.dbo.Product AS B WITH (NOLOCK)
        ON B.SysNo = A.ProductSysNo 
      INNER JOIN OverseaCustomerManagement.dbo.V_CUM_CustomerBaseInfo AS D WITH (NOLOCK) 
        ON A.CustomerSysNo = D.SysNo 
      LEFT JOIN OverseaPOASNManagement.dbo.V_PM_VendorList VD WITH(NOLOCK) 
        ON  VD.Sysno=B.MerchantSysno
      LEFT JOIN OverseaContentManagement.dbo.V_IM_ProductCommonInfo PC WITH(NOLOCK) 
        ON  PC.Sysno=B.ProductCommoninfoSysno
      LEFT JOIN OverseaECommerceManagement.dbo.MerchantReview_Master MR WITH(NOLOCK) 
        ON MR.VendorSysNO=VD.SysNo 
      LEFT JOIN OverseaOrderManagement.dbo.V_OM_Complain_Master CM WITH(NOLOCK)
        ON a.SOSysno = CM.SOSysno AND CM.ComplainType = '其它' AND CM.ComplainSourceType ='产品评论' AND CM.Status >= 0
      #StrWhere#
      
      SELECT TT.SysNo 
            ,TT.ProductSysNo
            ,TT.ReviewType
            ,TT.CustomerSysNo
            ,TT.ProductSysNo
            ,TT.VendorName
            ,TT.VendorScore
            ,TT.Title
            ,TT.Score
            ,case when TT.MostUseFul=1 then 1 else 0 end as MostUseFulCandidate
            ,case when TT.MostUseFul=2 then 1 else 0 end as MostUseFul
            --,TT.MostUseFul
            ,TT.UsefulCount
            ,TT.UnUsefulCount
            ,TT.ReplyCount
            ,ltrim(ltrim(TT.Status)) AS Status
            /*
            ,case when TT.Status='A' AND TT.EditUser='System'  THEN 'A_1'
                when TT.Status='A' AND TT.EditUser<>'System' THEN 'A_2'
                when TT.Status='D' AND TT.EditUser='System'  THEN 'D_1'
                when TT.Status='D' AND TT.EditUser<>'System' THEN 'D_2'
            ELSE ltrim(ltrim(TT.Status)) END Status
            */
            ,TT.IsTop
            ,TT.IsBottom
            ,TT.IsDigest
            ,TT.InDate
            ,TT.InUser
            ,TT.EditDate
            ,TT.EditUser
            ,TT.ProductID
            ,TT.ProductName
            ,TT.CSNote
            ,TT.TopicMailContent
            ,TT.Cons
            ,TT.Prons
            ,TT.Service
            ,TT.ImageValue as Image
            ,TT.Score1
            ,TT.Score2
            ,TT.Score3
            ,TT.Score4
            ,TT.ComplainStatus
            ,TT.ComplainSysNo
            ,TT.SOSysno
            ,TT.IsEggReview
            ,TT.IsServiceReview                          
          FROM (
              SELECT TOP (@EndNumber) ROW_NUMBER() OVER (ORDER BY #SortColumnName#) AS RowNumber,
                  A.SysNo
                  , A.CustomerSysNo
                  , A.ProductSysNo
                ,CASE WHEN VD.VendorType=0 THEN '泰隆优选' ELSE VD.[VendorName] END AS VendorName
                ,CASE WHEN VD.VendorType=0 THEN '--' ELSE Convert(nvarchar(30),ISNULL(MR.AvgScore,0)) END AS VendorScore
                , A.Title
                , A.Score
                , A.MostUseFul
                , A.UsefulCount
                , A.UnUsefulCount
                , A.ReplyCount
                , A.Status
                , A.IsTop
                , A.IsBottom
                , A.IsDigest
                , A.InDate
                , CASE WHEN A.CustomerSysNo=0 THEN A.InUser ELSE D.CustomerID END AS InUser, A.EditDate, A.EditUser
                , B.ProductID
                , B.ProductName
                , C.CSNote
                , C.TopicMailContent
                , A.Cons
                , A.Prons
                , A.Service
                , case when A.Image='' or ISNULL(A.Image,'')='' then 0 else 1 end as ImageValue
                , A.Score1
                , A.Score2
                , A.Score3
                , A.Score4
                , CM.Status AS ComplainStatus
                , CM.SysNo  AS ComplainSysNo
                , A.SOSysno,
                A.ReviewType
                ,(SELECT count(1) FROM OverseaECommerceManagement.dbo.ProductReview_Homepage AS prh WITH (nolock)
                    WHERE prh.ProductReviewSysno = A.SysNo AND prh.Type = 'H'
                  ) AS IsEggReview
                ,(SELECT count(1) FROM OverseaECommerceManagement.dbo.ProductReview_Homepage AS prh WITH (nolock)
                    WHERE prh.ProductReviewSysno = A.SysNo AND prh.Type = 'S'
                  ) AS IsServiceReview 
                FROM OverseaECommerceManagement.dbo.ProductReview_Detail AS A WITH (NOLOCK) 
                    INNER JOIN IPP3.dbo.Product AS B WITH (NOLOCK)
                    ON B.SysNo = A.ProductSysNo 
                    INNER JOIN OverseaCustomerManagement.dbo.V_CUM_CustomerBaseInfo AS D WITH (NOLOCK) 
                    ON A.CustomerSysNo = D.SysNo 
                    LEFT JOIN OverseaPOASNManagement.dbo.V_PM_VendorList VD WITH(NOLOCK) 
                    ON  VD.Sysno=B.MerchantSysno
                    LEFT JOIN OverseaContentManagement.dbo.V_IM_ProductCommonInfo PC WITH(NOLOCK) 
                    ON  PC.Sysno=B.ProductCommoninfoSysno
                    LEFT JOIN OverseaECommerceManagement.dbo.MerchantReview_Master MR WITH(NOLOCK) 
                    ON MR.VendorSysNO=VD.SysNo 
                    LEFT JOIN OverseaOrderManagement.dbo.V_OM_Complain_Master CM WITH(NOLOCK)
                    ON a.SOSysno = CM.SOSysno AND CM.ComplainType = '其它' AND CM.ComplainSourceType ='产品评论' AND CM.Status >= 0
                LEFT OUTER JOIN
                  OverseaECommerceManagement.dbo.ProductReview_MailLog C WITH (NOLOCK) ON 
                  A.SysNo = C.RefSysNo AND C.CompanyCode = A.CompanyCode AND C.Type = 'R' 
                  #StrWhere# 
              ) TT 
              WHERE 1 = 1 
            AND RowNumber > @StartNumber--  AND RowNumber <= @EndNumber ORDER BY RowNumber 
      ]]>
    </commandText>
  </dataCommand>
  <!--批量设置评论状态-->
  <dataCommand name="ProductReview_BatchUpdateProductReviewStatus" database="Write"  commandType="Text">
    <commandText>
      <![CDATA[
      EXEC('UPDATE OverseaECommerceManagement.dbo.ProductReview_Detail 
      SET [Status] = '''+@STATUS+''',
      EditUser='''+@EditUser+''',
      EditDate=GetDate() 
      WHERE SysNo in ('+@SysNoString+')')
      ]]>
    </commandText>
    <parameters>
      <param name="@SysNoString" dbType="String"/>
      <param name="@Status" dbType="String" />
      <param name="@EditUser" dbType="String" />
    </parameters>
  </dataCommand>
  <!--评论的基本信息-->
  <dataCommand name="ProductReview_GetProductReviewInfo" database="Write"  commandType="Text">
    <commandText>
      <![CDATA[
      SELECT 
          ltrim(ltrim(A.Status)) AS Status
          /*
          case when A.Status='A' AND A.EditUser='System'  THEN 'A_1'
            when A.Status='A' AND A.EditUser<>'System' THEN 'A_2'
            when A.Status='D' AND A.EditUser='System'  THEN 'D_1'
            when A.Status='D' AND A.EditUser<>'System' THEN 'D_2'
          ELSE ltrim(ltrim(A.Status)) END Status
          */
          ,case when A.MostUseFul=1 or A.MostUseFul=2 then 1 else 0 end as MostUseFulCandidate
          ,A.SysNo
          ,A.CustomerSysNo
          , A.ProductSysNo
          ,A.SOSysNo
          , A.Title
          , A.Score
          , A.MostUseFul
          , A.UsefulCount
          , A.UnUsefulCount
          , A.ReplyCount
          , A.IsTop
          , A.IsBottom
          , A.IsDigest
          , A.InDate
          , A.InUser
          , A.EditDate
          , A.EditUser
          , B.ProductID
          , B.ProductName
          , A.Cons
          , A.Prons
          , A.Service
          ,A.Image as ImageUrl
          ,A.IsTop
          ,A.IsBottom
          ,A.IsDigest
          ,(SELECT count(1) FROM OverseaECommerceManagement.dbo.ProductReview_Homepage AS prh WITH (nolock)
              WHERE 
              1 = 1
              AND prh.ProductReviewSysno = A.SysNo
              AND prh.Type = 'H'
          ) AS IsIndexHotReview
        ,(SELECT count(1) FROM OverseaECommerceManagement.dbo.ProductReview_Homepage AS prh WITH (nolock)
          WHERE 
            1 = 1
            AND prh.ProductReviewSysno = A.SysNo
            AND prh.Type = 'S'
        ) AS IsServiceHotReview 
      FROM OverseaECommerceManagement.dbo.ProductReview_Detail A  WITH (NOLOCK)
      INNER JOIN IPP3.dbo.Product AS B WITH (NOLOCK) ON B.SysNo = A.ProductSysNo 
      WHERE 
      1 = 1 
      AND A.SysNo=@SysNo
      ]]>
    </commandText>
    <parameters>
      <param name="@SysNo" dbType="Int32"/>
    </parameters>
  </dataCommand>

  <dataCommand name="ProductReview_UpdateProductReview" database="Write"  commandType="Text">
    <commandText>
      <![CDATA[
    UPDATE TOP 1 OverseaECommerceManagement.dbo.ProductReview_Detail 
    SET EditDate=GETDATE()
      ,IsTop=@IsTop
      ,IsBottom=@IsBottom
      ,MostUseful= case when @MostUseFulCandidate='Yes' then 1 else 0 end /*MostUseful*/
      WHERE SysNo=@SysNo
      ]]>
    </commandText>
    <parameters>
      <param name="@SysNo" dbType="Int32" />
      <param name="@MostUseFulCandidate" dbType="String" />
      <param name="@IsTop" dbType="String" />
      <param name="@IsBottom" dbType="String" />
      <param name="@EditUser" dbType="String" property="[UserAcct]"/>
    </parameters>
  </dataCommand>

