  <dataCommand name="ProductReview_CreateProductReview" database="Write"  commandType="Text">
    <commandText>
      <![CDATA[
          INSERT INTO [OverseaECommerceManagement].[dbo].[ProductReview_Detail]
           ([ProductSysNo]
           ,[CustomerSysNo]
           ,[Title]
           ,[Prons]
           ,[Cons]
           ,[Service]
           ,[Score] 
           ,[Score1]
           ,[Score2]
           ,[Score3]
           ,[Score4]
           ,[MostUseful]
           ,[UsefulCount]
           ,[UnusefulCount]
           ,[ReplyCount]
           ,[Status]
           ,[IsTop]
           ,[IsBottom]
           ,[IsDigest]
           ,[ObtainPoint]
           ,InDate
           ,InUser
           ,ReviewType)
     VALUES
           (@ProductSysNo
           ,@CustomerSysNo
           ,@Title
           ,@Prons
           ,@Cons
           ,@Service
           ,@Score       
           ,@Score1
           ,@Score2
           ,@Score3
           ,@Score4
           ,0
           ,0
           ,0
           ,0
           ,'O'
           ,'N'
           ,'N'
           ,'N'
