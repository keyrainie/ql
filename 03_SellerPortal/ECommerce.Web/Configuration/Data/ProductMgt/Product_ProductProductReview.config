  <!--设置回复状态后检查提问的回复数量-->
  <dataCommand name="ProductReview_UpdateProductReviewStatusForUpdateReplyStatus" database="Write"  commandType="Text">
    <commandText>
      <![CDATA[
      --检查原始状态
       DECLARE @StatusValue char(1)
        SET @StatusValue=(SELECT Status FROM OverseaECommerceManagement.dbo.ProductReview_Reply WITH (NOLOCK) WHERE 
            1 = 1 
            AND SysNo=@SysNo
        )
      
      --只更新设置为有效或无效时的回复数量
        UPDATE OverseaECommerceManagement.dbo.ProductReview_Detail
        SET 
            EDITUSER=@EditUser
            ,EditDate=GETDATE()
            ,ReplyCount=CASE WHEN @Status='A' THEN ReplyCount+1 WHEN @StatusValue='A' THEN ReplyCount-1 ELSE ReplyCount END
        WHERE
            1 = 1 
            AND SysNO=(SELECT ReviewSysNo FROM OverseaECommerceManagement.dbo.ProductReview_Reply WITH (NOLOCK) WHERE SysNo=@SysNo)
        AND @StatusValue<>@Status
        
        --设置回复记录的状态
       UPDATE TOP 1 OverseaECommerceManagement.dbo.ProductReview_Reply 
        SET 
        Status = @STATUS
        ,EditUser=@EditUser
        ,EditDate=GetDate() 
        WHERE 
              1 = 1 
              AND SysNo = @SysNo
      ]]>
    </commandText>
    <parameters>
      <param name="@SysNo" dbType="String"/>
      <param name="@Status" dbType="String" />
      <param name="@EditUser" dbType="String" property="[UserAcct]"/>
    </parameters>
  </dataCommand>


  <!--评论回复相关-->

  <dataCommand name="ProductReview_QueryProductReviewReplyList" database="Write"  commandType="Text">
    <commandText>
      <![CDATA[
      SELECT @TotalCount = COUNT(1) FROM OverseaECommerceManagement.dbo.ProductReview_Reply AS A WITH (NOLOCK) 
         INNER JOIN OverseaECommerceManagement.dbo.ProductReview_Detail AS B WITH (NOLOCK) ON A.ReviewSysNo = B.SysNo  
         INNER JOIN IPP3.dbo.Product AS C WITH (NOLOCK) ON C.SysNo = B.ProductSysNo 
         LEFT OUTER JOIN OverseaCustomerManagement.dbo.V_CUM_CustomerBaseInfo AS D ON A.CustomerSysNo = D.SysNo 
         LEFT JOIN OverseaPOASNManagement.dbo.V_PM_VendorList VD WITH(NOLOCK)  ON  VD.SysNo=C.MerchantSysNo 
         LEFT JOIN OverseaContentManagement.dbo.V_IM_ProductCommonInfo PC WITH(NOLOCK)  ON  PC.SysNo=C.ProductCommoninfoSysNo 
         LEFT JOIN OverseaOrderManagement.dbo.V_OM_Complain_Master CM WITH(NOLOCK)
         ON B.SOSysno = CM.SOSysno AND CM.ComplainType = '其它' AND CM.ComplainSourceType ='产品评论' AND CM.Status >= 0
      #StrWhere#

          SELECT TT.SysNo
                ,TT.ReviewSysNo
                ,TT.VendorName
                ,TT.CustomerSysNo
                ,TT.Content
                ,TT.Type
                ,TT.Type as TypeCategory
                ,TT.NeedAdditionalText
                ,TT.InDate
                ,TT.InUser
                ,TT.EditDate
                ,TT.EditUser
                ,TT.CompanyCode
                ,TT.StoreCompanyCode
                ,TT.LanguageCode
                ,TT.ProductID
                ,TT.Title
                ,TT.SOSysno
                ,TT.ComplainStatus
                ,TT.ComplainSysNo
            ,case when TT.Status='A' AND TT.EditUser='System'  THEN 'A_1'
             when TT.Status='A' AND TT.EditUser<>'System' THEN 'A_2'
             when TT.Status='D' AND TT.EditUser='System'  THEN 'D_1'
             when TT.Status='D' AND TT.EditUser<>'System' THEN 'D_2'
             ELSE ltrim(ltrim(TT.Status)) END Status
            FROM (SELECT TOP (@EndNumber) ROW_NUMBER() OVER (ORDER BY #SortColumnName#) AS RowNumber,
                   A.SysNo
                  , A.ReviewSysNo
                  ,CASE WHEN VD.VendorType=0 THEN '泰隆优选' ELSE VD.[VendorName] END AS VendorName
                  , A.CustomerSysNo
                  , A.[Content]
                  , A.Status
                  , A.Type
                  , A.NeedAdditionalText
                  , A.InDate
                  , CASE WHEN A.CustomerSysNo=0 THEN A.InUser ELSE D.CustomerID END AS InUser
                  , A.EditDate
                  , A.EditUser
                  , A.CompanyCode
                  , A.StoreCompanyCode
                  , A.LanguageCode
                  , C.ProductID
                  , B.Title
                  , B.SOSysno
                  , CM.Status AS ComplainStatus
                  , CM.SysNo  AS ComplainSysNo
             FROM OverseaECommerceManagement.dbo.ProductReview_Reply AS A WITH (NOLOCK) 
                     INNER JOIN OverseaECommerceManagement.dbo.ProductReview_Detail AS B WITH (NOLOCK) ON A.ReviewSysNo = B.SysNo 
                     INNER JOIN IPP3.dbo.Product AS C WITH (NOLOCK) ON C.SysNo = B.ProductSysNo 
                     LEFT OUTER JOIN OverseaCustomerManagement.dbo.V_CUM_CustomerBaseInfo AS D ON A.CustomerSysNo = D.SysNo 
                     LEFT JOIN OverseaPOASNManagement.dbo.V_PM_VendorList VD WITH(NOLOCK)  ON  VD.SysNo=C.MerchantSysNo 
                     LEFT JOIN OverseaContentManagement.dbo.V_IM_ProductCommonInfo PC WITH(NOLOCK)  ON  PC.SysNo=C.ProductCommoninfoSysNo 
                     LEFT JOIN OverseaOrderManagement.dbo.V_OM_Complain_Master CM WITH(NOLOCK)
                     ON B.SOSysno = CM.SOSysno AND CM.ComplainType = '其它' AND CM.ComplainSourceType ='产品评论' AND CM.Status >= 0 #StrWhere# ) TT 
           
           WHERE 1 = 1 
           AND RowNumber > @StartNumber  --AND RowNumber <= @EndNumber ORDER BY RowNumber 
      ]]>
    </commandText>
  </dataCommand>

  <!--获取讨论回复列表-->
  <dataCommand name="ProductReview_GetProductReviewReplyList" database="Write"  commandType="Text">
    <commandText>
      <![CDATA[
     SELECT
          ltrim(ltrim(Status)) AS Status
            /*
            case when Status='A' AND EditUser='System'  THEN 'A_1'
             when Status='A' AND EditUser<>'System' THEN 'A_2'
             when Status='D' AND EditUser='System'  THEN 'D_1'
             when Status='D' AND EditUser<>'System' THEN 'D_2'
             ELSE ltrim(ltrim(Status)) END Status
             */
            , ReviewSysNo
            , CustomerSysno as CustomerSysNo
            , Content
            ,Type
            , InDate
            , InUser
            , EditDate
            , EditUser
             FROM OverseaECommerceManagement.dbo.ProductReview_Reply
          Where 
            1 = 1 
            AND Type <> 'M' AND ReviewSysNo=@ReviewSysNo
      Order by SysNo DESC
      ]]>
    </commandText>
    <parameters>
      <param name="@ReviewSysNo" dbType="Int32"/>
    </parameters>
  </dataCommand>

  <dataCommand name="ProductReview_GetProductReviewFactoryReply" database="Write"  commandType="Text">
    <!--定义SQL语句-->
    <commandText>
      <![CDATA[    
      SELECT [SysNo]
      ,[ReviewSysNo]
      ,[CustomerSysNo]
      ,[Content]
      ,ltrim(ltrim(Status)) AS Status
      /*
       ,case when Status='A' AND EditUser='System'  THEN 'A_1'
             when Status='A' AND EditUser<>'System' THEN 'A_2'
             when Status='A' AND Type='M' THEN 'A_3'
             when Status='D' AND EditUser='System'  THEN 'D_1'
             when Status='D' AND EditUser<>'System' THEN 'D_2'
             when Status='D' AND Type='M' THEN 'D_3'
             ELSE ltrim(ltrim(Status)) END Status
       */      
      ,ltrim(ltrim(Status)) as  StatusValue
      ,[Type]
      ,[InDate]
      ,[InUser]
      ,[EditDate]
      ,[EditUser]
      ,[NeedAdditionalText]
      ,[RefSysno]
      FROM [OverseaECommerceManagement].[dbo].[ProductReview_Reply] WITH(NOLOCK)
        WHERE 
            1 = 1 
          AND Type = 'M' AND ReviewSysNo =  @ReviewSysNo-- AND status <> 'O'
      Order by SysNo DESC
	  ]]>
    </commandText>
    <parameters>
      <param name="@ReviewSysNo" dbType="Int32" size="20"/>
    </parameters>
  </dataCommand>


  <dataCommand name="ProductReview_CreateProductReviewReply" database="Write"  commandType="Text">
    <commandText>
      <![CDATA[
        
            UPDATE OverseaECommerceManagement.dbo.ProductReview_Detail  SET ReplyCount=ReplyCount+1  
            WHERE 
            1 = 1 
            AND SysNo=@ReviewSysNo
  
            UPDATE OverseaECommerceManagement.dbo.ProductReview_Detail  SET EditUser=@InUser,EditDate=GETDATE(),Status='R' 
            Where 
            1 = 1 
            AND  (Status='O' OR Status='E') AND SysNo=@ReviewSysNo
  
            INSERT INTO OverseaECommerceManagement.dbo.ProductReview_Reply
	            (
	            ReviewSysNo
	            ,CustomerSysNo
	            ,Content
	            ,Status
	            ,Type
	            ,NeedAdditionalText
	            ,InDate
	            ,InUser
	            ,CompanyCode
	            ,StoreCompanyCode
	            ,LanguageCode
	            )
            VALUES
	            (
	            @ReviewSysNo
	            ,0
	            ,@Content
	            ,@Status
	            ,@Type
	            ,@NeedAdditionalText
	            ,GETDATE()
	            ,@InUser
	            ,@CompanyCode
	            ,@CompanyCode
	            ,'zh-CN'
	            )
      
      ]]>
    </commandText>
    <parameters>
      <param name="@ReviewSysNo" dbType="Int32" />
      <param name="@CustomerSysNo" dbType="Int32" />
      <param name="@Content" dbType="String" />
      <param name="@Status" dbType="String" />
      <param name="@Type" dbType="String" />
      <param name="@NeedAdditionalText" dbType="String" />
      <param name="@InUser" dbType="String"/>
      <param name="@CompanyCode" dbType="String" />
    </parameters>
  </dataCommand>

  <!--厂商回复的批量发布与拒绝-->
  <dataCommand name="ProductReview_UpdateVendorStatus" database="Write"  commandType="Text">
    <commandText>
      <![CDATA[
            --DECLARE @IsSuccess int
            SET @IsSuccess=0

            IF ('A' = @Status)
              BEGIN
                UPDATE OverseaECommerceManagement.dbo.ProductReview_Reply 
                SET STATUS='D'
                ,EDITDATE=GETDATE()
                ,EDITUSER=@EDITUSER   
                WHERE 
                1 = 1 
                AND  Type='M' AND ReviewSysNo=@ReviewSysNo AND STATUS='A'
              END
            ELSE
              BEGIN
                UPDATE OverseaECommerceManagement.dbo.ProductReview_Reply 
                SET STATUS='D'   
            WHERE 
            1 = 1 
            AND  Type='M' AND SysNo=@SysNo AND STATUS='A'
              END

            IF (@@ROWCOUNT > 0)
            BEGIN
              UPDATE OverseaECommerceManagement.dbo.ProductReview_Detail 
              SET ReplyCount=ReplyCount-1   
            WHERE 
            1 = 1 
            AND  SysNo=@ReviewSysNo
            END

            IF ('A' = @Status)
            BEGIN
              UPDATE OverseaECommerceManagement.dbo.ProductReview_Detail 
              SET ReplyCount=ReplyCount+1   
            WHERE 
            1 = 1 
            AND  SysNo=@ReviewSysNo
            END

            UPDATE OverseaECommerceManagement.dbo.ProductReview_Reply 
            SET 
            STATUS=@STATUS
            ,EDITDATE=GETDATE()
            ,EDITUSER=@EDITUSER   
            WHERE 
            1 = 1 
            AND  SYSNO=@SYSNO

            IF NOT(@@ROWCOUNT > 0)
            BEGIN
              SET @IsSuccess=1001
              RETURN
            END
            ELSE
            BEGIN
            DECLARE @VPSysno int
            SET @VPSysno=(
              SELECT RefSysno FROM OverseaECommerceManagement.dbo.ProductReview_Reply   
              WHERE 
              1 = 1 
              AND  SysNo=@SysNo
            )

              IF ('A'=@Status)
              BEGIN
                SET @Status='C'
              END

            EXEC OverseaContentManagement.dbo.UP_VP_Reply @Sysno,@VPSysno,'R',@Status,@Content,@IsSuccess output

            IF NOT(@IsSuccess>0)
                SET @IsSuccess=1002
            END

      ]]>
    </commandText>
    <parameters>
      <param name="@SysNo" dbType="Int32" />
      <param name="@ReviewSysNo" dbType="Int32" />
      <param name="@Content" dbType="String" />
      <param name="@Status" dbType="String" />
      <param name="@EditUser" dbType="String" property="[UserAcct]"/>
      <param name="@CompanyCode" dbType="String" />
      <param name="@IsSuccess" dbType="Int32" direction="Output"/>
    </parameters>
  </dataCommand>
